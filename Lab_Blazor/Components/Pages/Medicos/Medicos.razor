@page "/medicos"
@rendermode InteractiveServer
<PageTitle>Gestión de Médicos</PageTitle>

@using Lab_Contracts.Medicos
@using Lab_Blazor.Services.Medicos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IMedicosApiService MedicosApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "recepcionista";
            bool puedeModificar = rol is "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a este módulo.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4 class="mb-4 d-flex align-items-center justify-content-between flex-wrap">
                <span><i class="bi bi-person-badge text-primary fs-4 me-2"></i>Gestión de Médicos</span>
                <button class="btn btn-success shadow-sm" @onclick="MostrarModalNuevo">
                    <i class="bi bi-person-plus-fill me-1"></i>Nuevo Médico
                </button>
            </h4>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect @bind-Value="criterioBusqueda" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="nombre">Nombre</option>
                            <option value="especialidad">Especialidad</option>
                            <option value="correo">Correo</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="valorBusqueda" placeholder="Ingrese valor a buscar"
                                   @onkeypress="@(e => { if (e.Key == "Enter") BuscarMedicos(); })" />
                    </div>
                    <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-primary" @onclick="BuscarMedicos"><i class="bi bi-search me-1"></i>Buscar</button>
                        <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-@tipoMensaje alert-dismissible fade show" role="alert">
                    @mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (ListaMedicos == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (ListaMedicos.Count == 0)
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron médicos registrados.
                </div>
            }
            else
            {
                <div class="shadow-sm rounded border" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-striped table-hover align-middle text-center mb-0" style="table-layout: fixed; width: 100%;">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width: 20%;">Nombre</th>
                                <th style="width: 20%;">Especialidad</th>
                                <th style="width: 20%;">Correo</th>
                                <th style="width: 15%;">Teléfono</th>
                                <th style="width: 10%;">Estado</th>
                                <th style="width: 15%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var medico in MedicosPaginados)
                            {
                                <tr>
                                    <td class="text-truncate">@medico.NombreMedico</td>
                                    <td class="text-truncate">@medico.Especialidad</td>
                                    <td class="text-truncate">@medico.Correo</td>
                                    <td class="text-truncate">@medico.Telefono</td>
                                    <td>
                                        <span class="badge bg-@(medico.Anulado ? "danger" : "success")">
                                            @(medico.Anulado ? "Deshabilitado" : "Activo")
                                        </span>
                                    </td>
                                    <td>
                                        @if (puedeModificar)
                                        {
                                            <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarMedico(medico)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            @if (medico.Anulado)
                                            {
                                                <button class="btn btn-success btn-sm" @onclick="() => ConfirmarReactivacion(medico)">
                                                    <i class="bi bi-check-circle-fill"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarAnulacion(medico.IdMedico)">
                                                    <i class="bi bi-x-circle-fill"></i>
                                                </button>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Sin permisos</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ListaMedicos?.Count > 0)
                {
                    <div class="d-flex flex-wrap justify-content-between align-items-center mt-3 gap-2">
                        <div class="text-muted small">
                            Mostrando @((paginaActual - 1) * tamPagina + 1)
                            - @(Math.Min(paginaActual * tamPagina, ListaMedicos.Count))
                            de @ListaMedicos.Count registros
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 small">Registros por página:</label>
                            <select class="form-select form-select-sm w-auto" @bind="tamPagina" @bind:after="CambiarTamPagina">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>

                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="PrevPagina">&laquo;</button>
                                    </li>

                                    @foreach (var num in PaginasParaMostrar())
                                    {
                                        if (num == -1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">…</span></li>
                                        }
                                        else
                                        {
                                            <li class="page-item @(paginaActual == num ? "active" : "")">
                                                <button class="page-link" @onclick="@(() => IrAPagina(num))">@num</button>
                                            </li>
                                        }
                                    }

                                    <li class="page-item @(paginaActual == TotalPaginas ? "disabled" : "")">
                                        <button class="page-link" @onclick="NextPagina">&raquo;</button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            }

            <div class="modal fade @(modalVisible ? "show d-block" : "")" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content shadow-lg border-0">
                        <EditForm Model="@MedicoActual" OnValidSubmit="ValidarYGuardar">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-person-circle me-2"></i>@(MedicoActual.IdMedico == 0 ? "Nuevo Médico" : "Editar Médico")
                                </h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                            </div>
                            <div class="modal-body">
                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Nombre</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="MedicoActual.NombreMedico" @oninput="(e => MedicoActual.NombreMedico = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Especialidad</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="MedicoActual.Especialidad" @oninput="(e => MedicoActual.Especialidad = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Correo Electrónico</label>
                                        <InputText class="form-control" @bind-Value="MedicoActual.Correo" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Teléfono</label>
                                        <InputText class="form-control" @bind-Value="MedicoActual.Telefono" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary px-3">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                                    <i class="bi bi-x-lg me-1"></i>Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        }
    </Authorized>
</AuthorizeView>

@code {
    private List<MedicoDto>? ListaMedicos;
    private MedicoDto MedicoActual = new();
    private bool modalVisible;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private string mensaje = "";
    private string tipoMensaje = "info";
    private int paginaActual = 1;
    private int tamPagina = 10;
    private int TotalPaginas => (int)Math.Ceiling((ListaMedicos?.Count ?? 1) / (double)tamPagina);
    private IEnumerable<MedicoDto> MedicosPaginados => ListaMedicos?.Skip((paginaActual - 1) * tamPagina).Take(tamPagina) ?? new List<MedicoDto>();

    protected override Task OnInitializedAsync() => Task.CompletedTask;

    private async Task BuscarMedicos()
    {
        if (string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valorBusqueda))
        {
            ListaMedicos = await MedicosApiService.GetMedicosAsync();
        }
        else
        {
            ListaMedicos = await MedicosApiService.BuscarMedicosAsync(criterioBusqueda, valorBusqueda);
        }

        paginaActual = 1;
    }

    private async Task MostrarModalNuevo()
    {
        MedicoActual = new MedicoDto();
        modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModal()
    {
        modalVisible = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        mensaje = string.Empty;
    }

    private async Task EditarMedico(MedicoDto medico)
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var rol = authState.User.FindFirst(ClaimTypes.Role)?.Value ?? "";
        if (rol != "administrador")
        {
            await JS.InvokeVoidAsync("alert", "No tienes permisos para editar médicos.");
            return;
        }

        MedicoActual = medico;
        modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task ValidarYGuardar()
    {
        HttpResponseMessage result = MedicoActual.IdMedico == 0
            ? await MedicosApiService.CrearMedicoAsync(MedicoActual)
            : await MedicosApiService.EditarMedicoAsync(MedicoActual.IdMedico, MedicoActual);

        if (result.IsSuccessStatusCode)
        {
            mensaje = "Médico guardado correctamente.";
            tipoMensaje = "success";
            modalVisible = false;
            await JS.InvokeVoidAsync("marcarModalCerrado");
            await BuscarMedicos();
        }
        else
        {
            mensaje = "Error al guardar médico.";
            tipoMensaje = "danger";
        }
    }

    private async Task ConfirmarAnulacion(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea deshabilitar este médico?"))
        {
            var result = await MedicosApiService.AnularMedicoAsync(id);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Médico deshabilitado correctamente.";
                tipoMensaje = "success";
                await BuscarMedicos();
            }
        }
    }

    private async Task ConfirmarReactivacion(MedicoDto medico)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Desea reactivar al médico {medico.NombreMedico}?"))
        {
            medico.Anulado = false;
            var result = await MedicosApiService.EditarMedicoAsync(medico.IdMedico, medico);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Médico reactivado correctamente.";
                tipoMensaje = "success";
                await BuscarMedicos();
            }
        }
    }

    private async Task LimpiarBusqueda()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
        ListaMedicos = null;
    }

    private List<int> PaginasParaMostrar()
    {
        var paginas = new List<int>();

        if (TotalPaginas <= 10)
        {
            paginas.AddRange(Enumerable.Range(1, TotalPaginas));
            return paginas;
        }

        paginas.AddRange(Enumerable.Range(1, 3));
        if (paginaActual > 5) paginas.Add(-1);

        int inicio = Math.Max(4, paginaActual - 1);
        int fin = Math.Min(TotalPaginas - 3, paginaActual + 1);
        for (int i = inicio; i <= fin; i++) paginas.Add(i);

        if (paginaActual < TotalPaginas - 4) paginas.Add(-1);
        paginas.AddRange(Enumerable.Range(TotalPaginas - 2, 3));

        return paginas.Distinct().Where(p => p >= 1 && p <= TotalPaginas).ToList();
    }


    private void IrAPagina(int pagina) => paginaActual = pagina;
    private void PrevPagina() { if (paginaActual > 1) paginaActual--; }
    private void NextPagina() { if (paginaActual < TotalPaginas) paginaActual++; }
    private void CambiarTamPagina() => paginaActual = 1;
    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
