@page "/ajustes/perfil"
@inject Lab_Blazor.Services.Perfil.IPerfilApiService PerfilApi
@inject ILogger<Pages.Ajustes.Perfil> Logger
@inject Microsoft.AspNetCore.Components.Authorization.AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService
@using Lab_Contracts.Ajustes.Perfil
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization


<PageTitle>Mi Perfil</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "recepcionista" or "laboratorista" or "paciente";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">
                            No tienes permisos suficientes para acceder a este módulo.
                        </p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container py-4 px-3 perfil-container">
                <h4 class="mb-4 d-flex align-items-center border-bottom pb-2">
                    <i class="bi bi-person-circle text-primary fs-3 me-2"></i>
                    <span class="fw-semibold">Mi Perfil</span>
                </h4>

                @if (!cargado)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary mb-3" role="status"></div>
                        <p class="text-muted">Cargando información de usuario...</p>
                    </div>
                }
                else if (perfil is null)
                {
                    <div class="alert alert-danger shadow-sm" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        No se pudo cargar la información del perfil.
                    </div>
                }
                else
                {
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-4 bg-primary bg-gradient text-white d-flex flex-column justify-content-center align-items-center p-4">
                                <div class="text-center">
                                    <i class="bi bi-person-circle display-3 mb-3"></i>
                                    <h5 class="fw-bold">@perfil.Nombre</h5>
                                    <p class="mb-1"><i class="bi bi-envelope me-1"></i>@perfil.Correo</p>
                                    <span class="badge bg-light text-primary fw-semibold">@perfil.Rol</span>
                                </div>
                            </div>
                            <div class="col-lg-8 bg-white p-4">
                                <div class="row gy-3 gx-4">
                                    <div class="col-md-6">
                                        <label class="form-label text-secondary fw-semibold small text-uppercase">Estado</label>
                                        <div class="form-control-plaintext fs-6">
                                            <i class="bi @(perfil.Activo ? "bi-check-circle text-success" : "bi-x-circle text-danger") me-1"></i>
                                            @(perfil.Activo ? "ACTIVO" : "INACTIVO")
                                        </div>
                                    </div>
                                    @if (perfil.Rol.Equals("Paciente", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <div class="col-md-6">
                                            <label class="form-label text-secondary fw-semibold small text-uppercase">Cédula</label>
                                            <div class="form-control-plaintext">@perfil.Cedula</div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label text-secondary fw-semibold small text-uppercase">Fecha de nacimiento</label>
                                            <div class="form-control-plaintext">@perfil.FechaNacimiento.ToString("dd/MM/yyyy")</div>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label text-secondary fw-semibold small text-uppercase">Teléfono</label>
                                            <div class="form-control-plaintext">@perfil.Telefono</div>
                                        </div>
                                        <div class="col-12">
                                            <label class="form-label text-secondary fw-semibold small text-uppercase">Dirección</label>
                                            <div class="form-control-plaintext">@perfil.Direccion</div>
                                        </div>
                                    }
                                    <div class="col-md-6">
                                        <label class="form-label text-secondary fw-semibold small text-uppercase">Fecha de registro</label>
                                        <div class="form-control-plaintext">@perfil.FechaRegistro?.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label text-secondary fw-semibold small text-uppercase">Último acceso</label>
                                        <div class="form-control-plaintext">
                                            @(perfil.UltimoAcceso.HasValue ? perfil.UltimoAcceso.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "—")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">
                        Para acceder a esta sección, por favor inicie sesión con una cuenta autorizada.
                    </p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private PerfilDto? perfil;
    private bool cargado = false;

    protected override async Task OnInitializedAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        try
        {
            var response = await PerfilApi.ObtenerPerfilAsync();
            perfil = response?.Perfil;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cargar perfil.");
        }
        finally
        {
            cargado = true;
        }
    }

    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
