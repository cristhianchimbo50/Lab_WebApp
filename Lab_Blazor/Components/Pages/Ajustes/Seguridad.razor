@page "/ajustes/seguridad"
@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IAuthApiService AuthApi
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Seguridad de la Cuenta</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "recepcionista" or "laboratorista" or "paciente";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">
                            No tienes permisos suficientes para acceder a esta sección del sistema.
                        </p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-4">
                                <h4 class="text-primary fw-bold mb-3">
                                    <i class="bi bi-shield-lock me-2"></i> Cambiar Contraseña
                                </h4>
                                <p class="text-muted mb-4">Actualiza tu contraseña de acceso para mayor seguridad.</p>
                                <EditForm Model="@Cambio" OnValidSubmit="GuardarNuevaContrasenia">
                                    <DataAnnotationsValidator />
                                    <ValidationSummary />
                                    <div class="mb-3">
                                        <label class="form-label">Correo Electrónico</label>
                                        <InputText class="form-control" @bind-Value="Cambio.CorreoUsuario" readonly />
                                    </div>
                                    <div class="mb-3 position-relative">
                                        <label class="form-label">Contraseña Actual</label>
                                        <div class="input-group">
                                            <InputText class="form-control" @bind-Value="Cambio.ContraseniaActual" type="@passwordInputTypeActual" placeholder="Ingrese su contraseña actual" />
                                            <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordActual">
                                                <i class="@passwordIconActual"></i>
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => Cambio.ContraseniaActual)" />
                                    </div>
                                    <div class="mb-3 position-relative">
                                        <label class="form-label">Nueva Contraseña</label>
                                        <div class="input-group">
                                            <InputText class="form-control" @bind-Value="Cambio.NuevaContrasenia" type="@passwordInputTypeNueva" placeholder="Ingrese la nueva contraseña" />
                                            <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordNueva">
                                                <i class="@passwordIconNueva"></i>
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => Cambio.NuevaContrasenia)" />
                                    </div>
                                    @if (!string.IsNullOrEmpty(mensaje))
                                    {
                                        <div class="alert alert-@(exito ? "success" : "danger") mt-2" role="alert">
                                            <i class="bi @(exito ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill") me-2"></i>@mensaje
                                        </div>
                                    }
                                    <button type="submit" class="btn btn-primary w-100 mt-3">
                                        <i class="bi bi-save me-1"></i>Guardar Nueva Contraseña
                                    </button>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">
                        Para acceder a esta sección, por favor inicie sesión con una cuenta autorizada.
                    </p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private CambiarContraseniaDto Cambio = new();
    private string mensaje = "";
    private bool exito;
    private string passwordInputTypeActual = "password";
    private string passwordIconActual = "bi bi-eye-slash";
    private string passwordInputTypeNueva = "password";
    private string passwordIconNueva = "bi bi-eye-slash";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated ?? false)
        {
            Cambio.CorreoUsuario = user.FindFirst("email")?.Value ?? user.FindFirst(ClaimTypes.Email)?.Value ?? user.Identity?.Name ?? "";
        }
        else
        {
            Navigation.NavigateTo("/login", true);
        }
    }

    private async Task GuardarNuevaContrasenia()
    {
        mensaje = "";
        exito = false;
        var (resultado, msg) = await AuthApi.CambiarContraseniaAsync(Cambio);
        mensaje = msg;
        exito = resultado;
        if (resultado)
        {
            if (AuthProvider is CustomAuthenticationStateProvider customAuth)
                await customAuth.SignOutAsync();
            await JS.InvokeVoidAsync("alert", "Contraseña actualizada correctamente. Inicie sesión nuevamente.");
            Navigation.NavigateTo("/login", true);
        }
    }

    private void TogglePasswordActual()
    {
        if (passwordInputTypeActual == "password")
        {
            passwordInputTypeActual = "text";
            passwordIconActual = "bi bi-eye";
        }
        else
        {
            passwordInputTypeActual = "password";
            passwordIconActual = "bi bi-eye-slash";
        }
    }

    private void TogglePasswordNueva()
    {
        if (passwordInputTypeNueva == "password")
        {
            passwordInputTypeNueva = "text";
            passwordIconNueva = "bi bi-eye";
        }
        else
        {
            passwordInputTypeNueva = "password";
            passwordIconNueva = "bi bi-eye-slash";
        }
    }

    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
