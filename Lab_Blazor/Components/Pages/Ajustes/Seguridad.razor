@page "/ajustes/seguridad"
@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IAuthApiService AuthService
@inject AuthenticationStateProvider ProveedorAutenticacion
@inject NavigationManager Navegacion
@inject IJSRuntime JsRuntime

<PageTitle>Seguridad de la Cuenta</PageTitle>

<AuthorizeView>
    <Authorized Context="estadoAutenticacion">
        @{
            var usuario = estadoAutenticacion.User;
            var rol = usuario.FindFirst(ClaimTypes.Role)?.Value ?? usuario.FindFirst("IdRol")?.Value ?? string.Empty;
            bool puedeVer = rol is "1" or "2" or "3" or "4";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">
                            No tienes permisos suficientes para acceder a esta sección del sistema.
                        </p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-4">
                                <h4 class="text-primary fw-bold mb-3">
                                    <i class="bi bi-shield-lock me-2"></i> Cambiar Contraseña
                                </h4>
                                <p class="text-muted mb-4">Actualiza tu contraseña de acceso para mayor seguridad.</p>
                                <EditForm Model="@_cambio" OnValidSubmit="GuardarNuevaContraseniaAsync">
                                    <DataAnnotationsValidator />
                                    <ValidationSummary />
                                    <div class="mb-3">
                                        <label class="form-label">Correo Electrónico</label>
                                        <InputText class="form-control" @bind-Value="_cambio.CorreoUsuario" readonly />
                                    </div>
                                    <div class="mb-3 position-relative">
                                        <label class="form-label">Contraseña Actual</label>
                                        <div class="input-group">
                                            <InputText class="form-control" @bind-Value="_cambio.ContraseniaActual" type="@_tipoEntradaContraseniaActual" placeholder="Ingrese su contraseña actual" />
                                            <button type="button" class="btn btn-outline-secondary" @onclick="AlternarContraseniaActual">
                                                <i class="@_iconoContraseniaActual"></i>
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => _cambio.ContraseniaActual)" />
                                    </div>
                                    <div class="mb-3 position-relative">
                                        <label class="form-label">Nueva Contraseña</label>
                                        <div class="input-group">
                                            <InputText class="form-control" @bind-Value="_cambio.NuevaContrasenia" type="@_tipoEntradaContraseniaNueva" placeholder="Ingrese la nueva contraseña" />
                                            <button type="button" class="btn btn-outline-secondary" @onclick="AlternarContraseniaNueva">
                                                <i class="@_iconoContraseniaNueva"></i>
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => _cambio.NuevaContrasenia)" />
                                    </div>
                                    @if (!string.IsNullOrEmpty(_mensaje))
                                    {
                                        <div class="alert alert-@(_exito ? "success" : "danger") mt-2" role="alert">
                                            <i class="bi @(_exito ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill") me-2"></i>@_mensaje
                                        </div>
                                    }
                                    <button type="submit" class="btn btn-primary w-100 mt-3">
                                        <i class="bi bi-save me-1"></i>Guardar Nueva Contraseña
                                    </button>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">
                        Para acceder a esta sección, por favor inicie sesión con una cuenta autorizada.
                    </p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private CambiarContraseniaDto _cambio = new();
    private string _mensaje = string.Empty;
    private bool _exito;
    private string _tipoEntradaContraseniaActual = "password";
    private string _iconoContraseniaActual = "bi bi-eye-slash";
    private string _tipoEntradaContraseniaNueva = "password";
    private string _iconoContraseniaNueva = "bi bi-eye-slash";

    protected override async Task OnInitializedAsync()
    {
        var estadoAutenticacion = await ProveedorAutenticacion.GetAuthenticationStateAsync();
        var usuario = estadoAutenticacion.User;
        if (usuario.Identity?.IsAuthenticated ?? false)
        {
            _cambio.CorreoUsuario = usuario.FindFirst("email")?.Value ?? usuario.FindFirst(ClaimTypes.Email)?.Value ?? usuario.Identity?.Name ?? string.Empty;
        }
        else
        {
            Navegacion.NavigateTo("/login", true);
        }
    }

    private async Task GuardarNuevaContraseniaAsync()
    {
        _mensaje = string.Empty;
        _exito = false;
        var (resultado, mensajeRespuesta) = await AuthService.CambiarContraseniaAsync(_cambio);
        _mensaje = mensajeRespuesta;
        _exito = resultado;
        if (resultado)
        {
            if (ProveedorAutenticacion is CustomAuthenticationStateProvider autenticacionPersonalizada)
                await autenticacionPersonalizada.CerrarSesionAsync();
            await JsRuntime.InvokeVoidAsync("alert", "Contraseña actualizada correctamente. Inicie sesión nuevamente.");
            Navegacion.NavigateTo("/login", true);
        }
    }

    private void AlternarContraseniaActual()
    {
        if (_tipoEntradaContraseniaActual == "password")
        {
            _tipoEntradaContraseniaActual = "text";
            _iconoContraseniaActual = "bi bi-eye";
        }
        else
        {
            _tipoEntradaContraseniaActual = "password";
            _iconoContraseniaActual = "bi bi-eye-slash";
        }
    }

    private void AlternarContraseniaNueva()
    {
        if (_tipoEntradaContraseniaNueva == "password")
        {
            _tipoEntradaContraseniaNueva = "text";
            _iconoContraseniaNueva = "bi bi-eye";
        }
        else
        {
            _tipoEntradaContraseniaNueva = "password";
            _iconoContraseniaNueva = "bi bi-eye-slash";
        }
    }

    private async Task VolverAtrasAsync() => await JsRuntime.InvokeVoidAsync("history.back");
}
