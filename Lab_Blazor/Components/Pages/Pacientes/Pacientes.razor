@page "/pacientes"
@rendermode InteractiveServer
<PageTitle>Gestión de Pacientes</PageTitle>

@using Lab_Blazor.Services.Pacientes
@using Lab_Contracts.Pacientes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IPacientesApiService PacientesApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "recepcionista";
            bool puedeModificar = rol is "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">
                            No tienes permisos suficientes para acceder a este módulo.
                        </p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4 class="mb-4 d-flex align-items-center justify-content-between flex-wrap">
                <span><i class="bi bi-people text-primary fs-4 me-2"></i>Gestión de Pacientes</span>
                <button class="btn btn-success shadow-sm" @onclick="MostrarModalNuevo">
                    <i class="bi bi-person-plus-fill me-1"></i>Nuevo Paciente
                </button>
            </h4>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect @bind-Value="criterioBusqueda" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="cedula">Cédula</option>
                            <option value="nombre">Nombre</option>
                            <option value="correo">Correo</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="valorBusqueda" placeholder="Ingrese valor a buscar"
                                   @onkeypress="@(e => { if (e.Key == "Enter") BuscarPacientes(); })" />
                    </div>
                    <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-primary" @onclick="BuscarPacientes"><i class="bi bi-search me-1"></i>Buscar</button>
                        <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                    </div>
                </div>
            </div>


            @if (ListaPacientes == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (ListaPacientes.Count == 0)
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron pacientes registrados.
                </div>
            }
            else
            {
                <div class="tabla-scroll shadow-sm rounded border">
                    <table class="table table-striped table-hover align-middle text-center mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width: 10%;">Cédula</th>
                                <th style="width: 15%;">Nombre</th>
                                <th style="width: 7%;">Edad</th>
                                <th style="width: 15%;">Dirección</th>
                                <th style="width: 15%;">Correo</th>
                                <th style="width: 10%;">Teléfono</th>
                                <th style="width: 10%;">Estado</th>
                                <th style="width: 8%;">Contraseña</th>
                                <th style="width: 10%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paciente in PacientesPaginados)
                            {
                                <tr>
                                    <td data-label="Cédula" class="text-truncate">@paciente.CedulaPaciente</td>
                                    <td data-label="Nombre" class="text-truncate">@paciente.NombrePaciente</td>
                                    <td data-label="Edad">@paciente.EdadPaciente</td>
                                    <td data-label="Dirección" class="text-truncate">@paciente.DireccionPaciente</td>
                                    <td data-label="Correo" class="text-truncate">@paciente.CorreoElectronicoPaciente</td>
                                    <td data-label="Teléfono" class="text-truncate">@paciente.TelefonoPaciente</td>
                                    <td data-label="Estado">
                                        <span class="badge bg-@(paciente.Anulado ? "danger" : "success")">
                                            @(paciente.Anulado ? "Deshabilitado" : "Activo")
                                        </span>
                                    </td>
                                    <td data-label="Contraseña">
                                        <span class="badge bg-@(paciente.EsContraseñaTemporal == true ? "warning text-dark" : "info")">
                                            @(paciente.EsContraseñaTemporal == true ? "Pendiente" : "Cambiada")
                                        </span>
                                    </td>
                                    <td data-label="Acciones">
                                        @if (puedeModificar)
                                        {
                                            <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarPaciente(paciente)">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>
                                            @if (paciente.Anulado)
                                            {
                                                <button class="btn btn-success btn-sm" @onclick="() => ConfirmarReactivacion(paciente)">
                                                    <i class="bi bi-check-circle-fill"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarAnulacion(paciente.IdPaciente)">
                                                    <i class="bi bi-x-circle-fill"></i>
                                                </button>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Sin permisos</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ListaPacientes?.Count > 0)
                {
                    <div class="d-flex flex-wrap justify-content-between align-items-center mt-3 gap-2">
                        <div class="text-muted small">
                            Mostrando @((paginaActual - 1) * tamPagina + 1)
                            - @(Math.Min(paginaActual * tamPagina, ListaPacientes.Count))
                            de @ListaPacientes.Count registros
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 small">Registros por página:</label>
                            <select class="form-select form-select-sm w-auto" @bind="tamPagina" @bind:after="CambiarTamPagina">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>

                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="PrevPagina">&laquo;</button>
                                    </li>

                                    @foreach (var num in PaginasParaMostrar())
                                    {
                                        if (num == -1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">…</span></li>
                                        }
                                        else
                                        {
                                            <li class="page-item @(paginaActual == num ? "active" : "")">
                                                <button class="page-link" @onclick="@(() => IrAPagina(num))">@num</button>
                                            </li>
                                        }
                                    }

                                    <li class="page-item @(paginaActual == TotalPaginas ? "disabled" : "")">
                                        <button class="page-link" @onclick="NextPagina">&raquo;</button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            }

            <div class="modal fade @(modalVisible ? "show d-block" : "")" tabindex="-1" role="dialog" aria-modal="true" style="display:@(modalVisible ? "block" : "none")">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content shadow-lg border-0">
                        <EditForm Model="@PacienteActual" OnValidSubmit="ValidarYGuardar">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-person-circle me-2"></i>@(PacienteActual.IdPaciente == 0 ? "Nuevo Paciente" : "Editar Paciente")
                                </h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                            </div>
                            <div class="modal-body">
                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Cédula</label>
                                        <InputText class="form-control" @bind-Value="PacienteActual.CedulaPaciente" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Nombre</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="PacienteActual.NombrePaciente"
                                                   @oninput="(e => PacienteActual.NombrePaciente = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Fecha de Nacimiento</label>
                                        <InputDate class="form-control" @bind-Value="PacienteActual.FechaNacPaciente" TValue="DateTime" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Teléfono</label>
                                        <InputText class="form-control" @bind-Value="PacienteActual.TelefonoPaciente" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Correo Electrónico</label>
                                        <InputText class="form-control" @bind-Value="PacienteActual.CorreoElectronicoPaciente"
                                                   readonly="@(PacienteActual.IdPaciente != 0)" disabled="@(PacienteActual.IdPaciente != 0)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Dirección</label>
                                        <InputText class="form-control" @bind-Value="PacienteActual.DireccionPaciente" />
                                    </div>
                                    @if (PacienteActual.IdPaciente != 0)
                                    {
                                        <div class="col-md-6">
                                            <label class="form-label">Estado de Contraseña</label>
                                            <div class="input-group">
                                                <input class="form-control" readonly value="@(PacienteActual.EsContraseñaTemporal == true ? "Pendiente de cambio" : "Cambiada")" />
                                                @if (PacienteActual.EsContraseñaTemporal == true)
                                                {
                                                    <button type="button" class="btn btn-outline-warning" @onclick="ReenviarTemporal">
                                                        <i class="bi bi-envelope-arrow-up me-1"></i>Reenviar temporal
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary px-3">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                                    <i class="bi bi-x-lg me-1"></i>Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        }
    </Authorized>
</AuthorizeView>

@code {
    private List<PacienteDto>? ListaPacientes;
    private PacienteDto PacienteActual = new();
    private bool modalVisible;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private string mensaje = "";
    private string tipoMensaje = "info";
    private int paginaActual = 1;
    private int tamPagina = 10;
    private int TotalPaginas => (int)Math.Ceiling((ListaPacientes?.Count ?? 1) / (double)tamPagina);
    private IEnumerable<PacienteDto> PacientesPaginados => ListaPacientes?.Skip((paginaActual - 1) * tamPagina).Take(tamPagina) ?? new List<PacienteDto>();

    protected override Task OnInitializedAsync() => Task.CompletedTask;

    private async Task BuscarPacientes()
    {
        if (string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valorBusqueda))
            ListaPacientes = await PacientesApiService.GetPacientesAsync();
        else
            ListaPacientes = await PacientesApiService.BuscarPacientesAsync(criterioBusqueda, valorBusqueda);

        paginaActual = 1;
    }

    private async Task MostrarModalNuevo()
    {
        PacienteActual = new PacienteDto { FechaNacPaciente = DateTime.Today.AddYears(-20) };
        modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModal()
    {
        modalVisible = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        mensaje = string.Empty;
    }

    private async Task EditarPaciente(PacienteDto paciente)
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var rol = authState.User.FindFirst(ClaimTypes.Role)?.Value ?? "";

        if (rol != "administrador")
        {
            await JS.InvokeVoidAsync("alert", "No tienes permisos para editar pacientes.");
            return;
        }

        PacienteActual = paciente;
        modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task ValidarYGuardar()
    {
        if (PacienteActual.IdPaciente == 0)
        {
            var (exito, msg, _) = await PacientesApiService.CrearPacienteAsync(PacienteActual);
            tipoMensaje = exito ? "success" : "danger";
            mensaje = msg;

            await JS.InvokeVoidAsync("mostrarToastAsync", mensaje, tipoMensaje);

            if (exito)
            {
                modalVisible = false;
                await JS.InvokeVoidAsync("marcarModalCerrado");
                await BuscarPacientes();
            }
        }
        else
        {
            var result = await PacientesApiService.EditarPacienteAsync(PacienteActual.IdPaciente, PacienteActual);
            tipoMensaje = result.IsSuccessStatusCode ? "success" : "danger";
            mensaje = result.IsSuccessStatusCode ? "Paciente actualizado correctamente." : "Error al actualizar paciente.";

            await JS.InvokeVoidAsync("mostrarToastAsync", mensaje, tipoMensaje);

            if (result.IsSuccessStatusCode)
            {
                modalVisible = false;
                await JS.InvokeVoidAsync("marcarModalCerrado");
                await BuscarPacientes();
            }
        }
    }

    private async Task ConfirmarAnulacion(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea anular este paciente?"))
        {
            var result = await PacientesApiService.AnularPacienteAsync(id);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Paciente anulado correctamente.";
                tipoMensaje = "success";
                await BuscarPacientes();
            }
        }
    }

    private async Task ConfirmarReactivacion(PacienteDto paciente)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Desea reactivar al paciente {paciente.NombrePaciente}?"))
        {
            paciente.Anulado = false;
            var result = await PacientesApiService.EditarPacienteAsync(paciente.IdPaciente, paciente);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Paciente reactivado correctamente.";
                tipoMensaje = "success";
                await BuscarPacientes();
            }
        }
    }

    private async Task LimpiarBusqueda()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
        ListaPacientes = null;
    }

    private void IrAPagina(int pagina) => paginaActual = pagina;
    private void PrevPagina() { if (paginaActual > 1) paginaActual--; }
    private void NextPagina() { if (paginaActual < TotalPaginas) paginaActual++; }
    private void CambiarTamPagina() => paginaActual = 1;

    private async Task ReenviarTemporal()
    {
        if (PacienteActual.IdPaciente == 0) return;
        var ok = await JS.InvokeAsync<bool>("confirm", $"¿Reenviar una nueva contraseña temporal a {PacienteActual.CorreoElectronicoPaciente}?");
        if (!ok) return;
        var (exito, msg) = await PacientesApiService.ReenviarTemporalAsync(PacienteActual.IdPaciente);
        mensaje = msg;
        tipoMensaje = exito ? "success" : "danger";
        if (exito) await BuscarPacientes();
    }

    private List<int> PaginasParaMostrar()
    {
        var paginas = new List<int>();

        if (TotalPaginas <= 10)
        {
            paginas.AddRange(Enumerable.Range(1, TotalPaginas));
            return paginas;
        }

        paginas.AddRange(Enumerable.Range(1, 3));
        if (paginaActual > 5) paginas.Add(-1);

        int inicio = Math.Max(4, paginaActual - 1);
        int fin = Math.Min(TotalPaginas - 3, paginaActual + 1);
        for (int i = inicio; i <= fin; i++) paginas.Add(i);

        if (paginaActual < TotalPaginas - 4) paginas.Add(-1);
        paginas.AddRange(Enumerable.Range(TotalPaginas - 2, 3));

        return paginas.Distinct().Where(p => p >= 1 && p <= TotalPaginas).ToList();
    }


    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
