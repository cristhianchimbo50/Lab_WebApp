@page "/pacientes"
@using Lab_Blazor.Services.Pacientes
@using Lab_Contracts.Pacientes
@inject IPacientesApiService PacientesApiService
@inject IJSRuntime JS

<h3 class="mb-4 d-flex align-items-center justify-content-between flex-wrap">
    <span><i class="fas fa-users me-2 text-primary"></i>Gestión de Pacientes</span>
    <button class="btn btn-success" @onclick="MostrarModalNuevo">
        <i class="bi bi-person-plus-fill me-1"></i>Nuevo Paciente
    </button>
</h3>

<div class="card mb-3 shadow-sm">
    <div class="card-body row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Buscar por</label>
            <InputSelect @bind-Value="criterioBusqueda" TValue="string" class="form-select">
                <option value="">-- Seleccione --</option>
                <option value="cedula">Cédula</option>
                <option value="nombre">Nombre</option>
                <option value="correo">Correo</option>
            </InputSelect>
        </div>
        <div class="col-md-5">
            <label class="form-label">Valor</label>
            <InputText class="form-control" @bind-Value="valorBusqueda" />
        </div>
        <div class="col-md-4 text-md-end text-center">
            <button class="btn btn-primary me-2" @onclick="BuscarPacientes">
                <i class="bi bi-search"></i> Buscar
            </button>
            <button class="btn btn-secondary" @onclick="LimpiarBusqueda">
                <i class="bi bi-eraser"></i> Limpiar
            </button>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(mensaje))
{
    <div class="alert alert-@tipoMensaje alert-dismissible fade show" role="alert">
        @mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ListaPacientes is null || ListaPacientes.Count == 0)
{
    <div class="alert alert-warning text-center">No se encontraron pacientes registrados.</div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Dirección</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th>Contraseña</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var paciente in PacientesPaginados)
                {
                    <tr>
                        <td>@paciente.CedulaPaciente</td>
                        <td>@paciente.NombrePaciente</td>
                        <td>@paciente.EdadPaciente</td>
                        <td>@paciente.DireccionPaciente</td>
                        <td>@paciente.CorreoElectronicoPaciente</td>
                        <td>@paciente.TelefonoPaciente</td>
                        <td>
                            <span class="badge bg-@(paciente.Anulado ? "danger" : "success")">
                                @(paciente.Anulado ? "Deshabilitado" : "Activo")
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-@(paciente.EsContraseñaTemporal == true ? "warning text-dark" : "info")">
                                @(paciente.EsContraseñaTemporal == true ? "Pendiente" : "Cambiada")
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarPaciente(paciente)">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            @if (paciente.Anulado)
                            {
                                <button class="btn btn-success btn-sm" @onclick="() => ConfirmarReactivacion(paciente)">
                                    <i class="bi bi-check-circle-fill"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarAnulacion(paciente.IdPaciente)">
                                    <i class="bi bi-x-circle-fill"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex flex-wrap justify-content-between align-items-center mt-3 gap-2">
        <div class="text-muted small">
            Mostrando @((paginaActual - 1) * tamPagina + 1) - @(Math.Min(paginaActual * tamPagina, ListaPacientes.Count))
            de @ListaPacientes.Count registros
        </div>

        <div class="d-flex align-items-center gap-2">
            <label class="form-label mb-0 small">Registros por página:</label>
            <select class="form-select form-select-sm w-auto" @bind="tamPagina" @bind:after="CambiarTamPagina">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
            </select>

            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="PrevPagina">&laquo;</button>
                    </li>
                    @for (int i = 1; i <= TotalPaginas; i++)
                    {
                        <li class="page-item @(paginaActual == i ? "active" : "")">
                            <button class="page-link" @onclick="@(() => IrAPagina(i))">@i</button>
                        </li>
                    }
                    <li class="page-item @(paginaActual == TotalPaginas ? "disabled" : "")">
                        <button class="page-link" @onclick="NextPagina">&raquo;</button>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}

<div class="modal fade @(modalVisible ? "show d-block" : "")" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <EditForm Model="@PacienteActual" OnValidSubmit="ValidarYGuardar">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-person-circle me-2"></i>@(PacienteActual.IdPaciente == 0 ? "Nuevo Paciente" : "Editar Paciente")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                </div>

                <div class="modal-body">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Cédula</label>
                            <InputText class="form-control" @bind-Value="PacienteActual.CedulaPaciente" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nombre</label>
                            <InputText class="form-control text-uppercase"
                                       @bind-Value="PacienteActual.NombrePaciente"
                                       @oninput="(e => PacienteActual.NombrePaciente = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Fecha de Nacimiento</label>
                            <InputDate class="form-control" @bind-Value="PacienteActual.FechaNacPaciente" TValue="DateTime" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Teléfono</label>
                            <InputText class="form-control" @bind-Value="PacienteActual.TelefonoPaciente" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo Electrónico</label>
                            <InputText class="form-control"
                                       @bind-Value="PacienteActual.CorreoElectronicoPaciente"
                                       readonly="@(PacienteActual.IdPaciente != 0)"
                                       disabled="@(PacienteActual.IdPaciente != 0)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Dirección</label>
                            <InputText class="form-control" @bind-Value="PacienteActual.DireccionPaciente" />
                        </div>
                        @if (PacienteActual.IdPaciente != 0)
                        {
                            <div class="col-md-6">
                                <label class="form-label">Estado de Contraseña</label>
                                <div class="input-group">
                                    <input class="form-control" readonly
                                           value="@(PacienteActual.EsContraseñaTemporal == true ? "Pendiente de cambio" : "Cambiada")" />
                                    @if (PacienteActual.EsContraseñaTemporal == true)
                                    {
                                        <button type="button" class="btn btn-outline-warning" @onclick="ReenviarTemporal">
                                            <i class="bi bi-envelope-arrow-up me-1"></i> Reenviar temporal
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save-fill me-1"></i>Guardar
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                        <i class="bi bi-x-lg me-1"></i>Cancelar
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<PacienteDto> ListaPacientes = new();
    private PacienteDto PacienteActual = new();
    private bool modalVisible = false;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private string mensaje = "";
    private string tipoMensaje = "info";
    private int paginaActual = 1;
    private int tamPagina = 10;
    private bool errorNoAutorizado = false;
    private bool alertaPendiente = false;

    private int TotalPaginas => (int)Math.Ceiling(ListaPacientes.Count / (double)tamPagina);
    private IEnumerable<PacienteDto> PacientesPaginados => ListaPacientes.Skip((paginaActual - 1) * tamPagina).Take(tamPagina);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await BuscarPacientes();
        }
        catch (HttpRequestException)
        {
            errorNoAutorizado = true;
            alertaPendiente = true;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && alertaPendiente)
        {
            await JS.InvokeVoidAsync("alert", "No autorizado para acceder a pacientes.");
            alertaPendiente = false;
        }
    }

    private async Task BuscarPacientes()
    {
        ListaPacientes = string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valorBusqueda)
            ? await PacientesApiService.GetPacientesAsync()
            : await PacientesApiService.BuscarPacientesAsync(criterioBusqueda, valorBusqueda);
        paginaActual = 1;
    }

    private void MostrarModalNuevo()
    {
        PacienteActual = new PacienteDto { FechaNacPaciente = DateTime.Today.AddYears(-20) };
        modalVisible = true;
    }

    private void CerrarModal()
    {
        modalVisible = false;
        mensaje = string.Empty;
    }

    private void EditarPaciente(PacienteDto paciente)
    {
        PacienteActual = paciente;
        modalVisible = true;
    }

    private async Task ValidarYGuardar()
    {
        PacienteActual.EdadPaciente = CalcularEdad(PacienteActual.FechaNacPaciente);
        if (PacienteActual.IdPaciente == 0)
        {
            var (exito, msg, _) = await PacientesApiService.CrearPacienteAsync(PacienteActual);
            mensaje = msg;
            tipoMensaje = exito ? "success" : "danger";
            if (exito)
            {
                modalVisible = false;
                await BuscarPacientes();
            }
        }
        else
        {
            var result = await PacientesApiService.EditarPacienteAsync(PacienteActual.IdPaciente, PacienteActual);
            mensaje = result.IsSuccessStatusCode ? "Paciente actualizado correctamente." : "Error al actualizar paciente.";
            tipoMensaje = result.IsSuccessStatusCode ? "success" : "danger";
            if (result.IsSuccessStatusCode)
            {
                modalVisible = false;
                await BuscarPacientes();
            }
        }
    }

    private async Task ConfirmarAnulacion(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea anular este paciente?"))
        {
            var result = await PacientesApiService.AnularPacienteAsync(id);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Paciente anulado correctamente.";
                tipoMensaje = "success";
                await BuscarPacientes();
            }
        }
    }

    private async Task ConfirmarReactivacion(PacienteDto paciente)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Desea reactivar al paciente {paciente.NombrePaciente}?"))
        {
            paciente.Anulado = false;
            var result = await PacientesApiService.EditarPacienteAsync(paciente.IdPaciente, paciente);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Paciente reactivado correctamente.";
                tipoMensaje = "success";
                await BuscarPacientes();
            }
        }
    }

    private int CalcularEdad(DateTime fechaNacimiento)
    {
        var hoy = DateTime.Today;
        var edad = hoy.Year - fechaNacimiento.Year;
        if (fechaNacimiento > hoy.AddYears(-edad)) edad--;
        return edad;
    }

    private async Task LimpiarBusqueda()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
        await BuscarPacientes();
    }

    private void IrAPagina(int pagina) => paginaActual = pagina;
    private void PrevPagina() { if (paginaActual > 1) paginaActual--; }
    private void NextPagina() { if (paginaActual < TotalPaginas) paginaActual++; }
    private void CambiarTamPagina() { paginaActual = 1; }

    private async Task ReenviarTemporal()
    {
        if (PacienteActual.IdPaciente == 0) return;
        var ok = await JS.InvokeAsync<bool>("confirm", $"¿Reenviar una nueva contraseña temporal a {PacienteActual.CorreoElectronicoPaciente}?");
        if (!ok) return;
        var (exito, msg) = await PacientesApiService.ReenviarTemporalAsync(PacienteActual.IdPaciente);
        mensaje = msg;
        tipoMensaje = exito ? "success" : "danger";
        if (exito) await BuscarPacientes();
    }
}
