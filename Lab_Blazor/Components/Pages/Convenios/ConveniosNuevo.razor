@page "/convenios/nuevo"
@inject SesionVerificacionService SesionService
@rendermode InteractiveServer

@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Convenios
@using Lab_Contracts.Medicos
@using Lab_Blazor.Services.Convenios
@using Lab_Blazor.Services.Medicos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IConveniosApiService ConveniosApi
@inject IMedicosApiService MedicosApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Registrar Convenio</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value
            ?? user.FindFirst("role")?.Value
            ?? user.FindFirst("roles")?.Value
            ?? "";

            bool esPaciente = rol == "paciente";
            bool puedeVer = rol is "administrador" or "recepcionista";
            bool puedeAnular = rol == "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4 class="mb-4 d-flex align-items-center text-uppercase fw-bold">
                <i class="bi bi-handshake text-primary fs-4 me-2"></i>Registrar Nuevo Convenio
            </h4>

            @if (!isRendered)
            {
                <div class="text-center py-5 text-primary">
                    <div class="spinner-border me-2"></div>
                    <strong>Cargando...</strong>
                </div>
            }
            else
            {
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-body row g-3 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Médico</label>
                            <select class="form-select" @bind="idMedicoSeleccionado">
                                <option value="">Seleccione un médico</option>
                                @foreach (var m in medicos)
                                {
                                    <option value="@m.IdMedico">@m.NombreMedico</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Fecha Convenio</label>
                            <input type="text" class="form-control" value="@fechaConvenio.ToString("dd/MM/yyyy")" disabled />
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary w-100" @onclick="CargarOrdenes" disabled="@(!idMedicoSeleccionado.HasValue)">
                                <i class="bi bi-search me-1"></i> Cargar Órdenes
                            </button>
                        </div>
                    </div>
                </div>

                @if (idMedicoSeleccionado == null)
                {
                    <div class="alert alert-info text-center shadow-sm">
                        <i class="bi bi-info-circle me-2"></i>Seleccione un médico y presione <strong>Cargar Órdenes</strong> para continuar.
                    </div>
                }

                @if (cargandoOrdenes)
                {
                    <div class="text-center py-5 text-primary">
                        <div class="spinner-border me-2"></div>
                        <strong>Cargando órdenes...</strong>
                    </div>
                }


                @if (ordenesDisponibles.Any())
                {
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-light fw-semibold d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-list-check me-2"></i>Órdenes Disponibles</span>
                                    <small class="text-muted">Seleccione las órdenes para incluir en el convenio</small>
                                </div>
                                <div class="card-body p-2">
                                    <div class="table-responsive tabla-scroll" style="max-height: 380px;">
                                        <table class="table table-sm table-bordered table-hover align-middle text-center mb-0">
                                            <thead class="table-light sticky-top">
                                                <tr>
                                                    <th style="width: 25%;">N° Orden</th>
                                                    <th style="width: 45%;">Paciente</th>
                                                    <th style="width: 20%;">Total</th>
                                                    <th style="width: 10%;">✔</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var o in ordenesDisponibles)
                                                {
                                                    <tr>
                                                        <td data-label="N° Orden">@o.NumeroOrden</td>
                                                        <td data-label="Paciente" class="text-truncate">@o.Paciente</td>
                                                        <td data-label="Total">@o.Total.ToString("C")</td>
                                                        <td data-label="Seleccionar">
                                                            <input type="checkbox" class="form-check-input" @bind="@o.Seleccionado" />
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3 px-2">
                                        <small class="text-muted">Total de órdenes disponibles: <strong>@ordenesDisponibles.Count</strong></small>
                                        <div class="text-end fw-bold mt-2 border-top pt-2">
                                            <span class="text-muted me-2">Total general:</span>
                                            <span class="text-primary fs-6">@ordenesDisponibles.Sum(o => o.Total).ToString("C")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card shadow-sm border-0 h-100">
                                <div class="card-header bg-light fw-semibold d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-clipboard2-check me-2"></i>Órdenes Seleccionadas</span>
                                    <small class="text-muted">Estas órdenes serán incluidas en el convenio</small>
                                </div>
                                <div class="card-body p-2">
                                    @if (ordenesSeleccionadas.Count == 0)
                                    {
                                        <div class="alert alert-info text-center my-3 shadow-sm">
                                            <i class="bi bi-info-circle me-2"></i>No ha seleccionado ninguna orden.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="table-responsive tabla-scroll" style="max-height: 380px;">
                                            <table class="table table-sm table-bordered align-middle text-center mb-0">
                                                <thead class="table-light sticky-top">
                                                    <tr>
                                                        <th style="width: 25%;">N° Orden</th>
                                                        <th style="width: 55%;">Paciente</th>
                                                        <th style="width: 20%;">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var s in ordenesSeleccionadas)
                                                    {
                                                        <tr>
                                                            <td data-label="N° Orden">@s.NumeroOrden</td>
                                                            <td data-label="Paciente" class="text-truncate">@s.Paciente</td>
                                                            <td data-label="Total">@s.Total.ToString("C")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mt-3 px-2">
                                            <small class="text-muted">Órdenes seleccionadas: <strong>@ordenesSeleccionadas.Count</strong></small>
                                            <div class="text-end fw-bold mt-2 border-top pt-2">
                                                <span class="text-muted me-2">Total seleccionado:</span>
                                                <span class="text-success fs-6">@ordenesSeleccionadas.Sum(o => o.Total).ToString("C")</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-end">
                        <button class="btn btn-success px-4" @onclick="MostrarModalPago" disabled="@(ordenesSeleccionadas.Count == 0)">
                            <i class="bi bi-cash-coin me-1"></i> Calcular Pago
                        </button>
                    </div>
                }

                @if (mostrarModal)
                {
                    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5); z-index:1050;">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content shadow-lg">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title">
                                        <i class="bi bi-calculator me-2"></i>Pago al Médico
                                    </h5>
                                    <button class="btn-close" @onclick="CerrarModal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Porcentaje de Comisión (%)</label>
                                        <InputNumber class="form-control" @bind-Value="porcentajeComision" Min="0" Max="100" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Monto Total</label>
                                        <input class="form-control" value="@ordenesSeleccionadas.Sum(o => o.Total).ToString("C")" disabled />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">Total a Pagar</label>
                                        <input class="form-control" value="@totalPagar.ToString("C")" disabled />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                                    <button class="btn btn-primary" @onclick="RegistrarConvenio">
                                        <i class="bi bi-save me-1"></i> Registrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<MedicoDto> medicos = new();
    private List<OrdenDisponibleExtendida> ordenesDisponibles = new();
    private List<OrdenDisponibleExtendida> ordenesSeleccionadas => ordenesDisponibles.Where(o => o.Seleccionado).ToList();
    private int? idMedicoSeleccionado;
    private DateTime fechaConvenio = DateTime.Today;
    private decimal porcentajeComision;
    private bool isRendered;
    private bool mostrarModal;
    private decimal totalPagar => ordenesSeleccionadas.Sum(o => o.Total) * (porcentajeComision / 100m);

    private bool _sesionVerificada = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            var authState = await AuthProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (!user.Identity?.IsAuthenticated ?? true)
            {
                isRendered = true;
                StateHasChanged();
                return;
            }

            var rol = user.FindFirst(ClaimTypes.Role)?.Value
                ?? user.FindFirst("role")?.Value
                ?? user.FindFirst("roles")?.Value
                ?? "";

            bool puedeVer = rol is "administrador" or "recepcionista";

            if (puedeVer)
            {
                medicos = await MedicosApi.ListarMedicosAsync();
            }

            isRendered = true;
            StateHasChanged();
        }
    }

    private bool cargandoOrdenes = false;

    private async Task CargarOrdenes()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (idMedicoSeleccionado.HasValue)
        {
            cargandoOrdenes = true;
            StateHasChanged();

            var result = await ConveniosApi.ListarOrdenesDisponiblesPorMedicoAsync(idMedicoSeleccionado.Value);

            ordenesDisponibles = result.Select(o => new OrdenDisponibleExtendida
            {
                IdOrden = o.IdOrden,
                NumeroOrden = o.NumeroOrden,
                Paciente = o.Paciente,
                FechaOrden = o.FechaOrden,
                Total = o.Total
            }).ToList();

            cargandoOrdenes = false;
            await JS.InvokeVoidAsync("mostrarToastAsync", $"{ordenesDisponibles.Count} órdenes cargadas correctamente.", "success");
            StateHasChanged();
        }
    }

    private async Task MostrarModalPago()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        mostrarModal = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
        StateHasChanged();
    }

    private async Task CerrarModal()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        mostrarModal = false;
        porcentajeComision = 0;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        StateHasChanged();
    }




    private async Task RegistrarConvenio()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var dto = new ConvenioRegistroDto
        {
            IdMedico = idMedicoSeleccionado,
            FechaConvenio = DateOnly.FromDateTime(fechaConvenio),
            PorcentajeComision = porcentajeComision,
            MontoTotal = ordenesSeleccionadas.Sum(o => o.Total),
            Ordenes = ordenesSeleccionadas.Select(o => new DetalleConvenioRegistroDto
            {
                IdOrden = o.IdOrden,
                Subtotal = o.Total
            }).ToList()
        };

        var exito = await ConveniosApi.RegistrarConvenioAsync(dto);

        mostrarModal = false;
        await JS.InvokeVoidAsync("eval", @"
        document.body.classList.remove('modal-activo','modal-open');
        document.body.style.overflow='';
        const backdrop=document.querySelector('.modal-backdrop');
        if(backdrop) backdrop.remove();
    ");
        StateHasChanged();

        if (exito)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Convenio registrado correctamente.", "success");
            Navigation.NavigateTo("/convenios");
        }
        else
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al registrar el convenio.", "danger");
        }
    }

    public class OrdenDisponibleExtendida : OrdenDisponibleDto
    {
        public bool Seleccionado { get; set; }
    }




    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
