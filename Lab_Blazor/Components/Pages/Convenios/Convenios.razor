@page "/convenios"
@inject SesionVerificacionService SesionService
@rendermode InteractiveServer

@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Convenios
@using Lab_Blazor.Services.Convenios
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using System.Security.Claims
@using Lab_Contracts.Common

@inject IConveniosApiService ConveniosApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Gestión de Convenios</PageTitle>

<AuthorizeView>
    <Authorized Context="EstadoAutenticacion">
        @{
            var Usuario = EstadoAutenticacion.User;
            var Rol = (Usuario.FindFirst(ClaimTypes.Role)?.Value
            ?? Usuario.FindFirst("role")?.Value
            ?? Usuario.FindFirst("roles")?.Value
            ?? "");

            bool EsPaciente = Rol == "paciente";
            bool PuedeVer = Rol is "administrador" or "recepcionista";
            bool PuedeAnular = Rol is "administrador";
        }

        @if (!PuedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase justify-content-between fw-bold flex-wrap">
                <span>
                    <i class="bi bi-person-vcard text-primary me-1"></i>
                    <i class="bi bi-beaker text-success me-1"></i>
                    <i class="bi bi-handshake text-warning"></i>
                    Gestión de Convenios
                </span>
                <button class="btn btn-success shadow-sm" @onclick="IrARegistrarConvenio">
                    <i class="bi bi-plus-circle me-1"></i>Nuevo Convenio
                </button>
            </h3>

            @if (!EstaRenderizado)
            {
                <div class="text-center py-5 text-primary">
                    <div class="spinner-border me-2"></div>
                    <strong>Cargando...</strong>
                </div>
            }
            else
            {
                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Buscar por</label>
                            <InputSelect @bind-Value="Filtro.CriterioBusqueda" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="numero">Número Convenio</option>
                                <option value="medico">Nombre Médico</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label fw-semibold">Valor</label>
                            <InputText class="form-control" @bind-Value="Filtro.ValorBusqueda" placeholder="Ingrese valor a buscar" @onkeypress="@(e => { if (e.Key == "Enter") BuscarConvenios(); })" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Desde</label>
                            <InputDate class="form-control" @bind-Value="Filtro.FechaDesde" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Hasta</label>
                            <InputDate class="form-control" @bind-Value="Filtro.FechaHasta" />
                        </div>
                        <div class="col-md-12 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                            <button class="btn btn-primary" @onclick="BuscarConvenios" disabled="@Buscando"><i class="bi bi-search me-1"></i>Buscar</button>
                            <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda" disabled="@Buscando"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                        </div>
                    </div>
                </div>

                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body row g-3">
                        <div class="col-md-3 d-flex align-items-center">
                            <InputCheckbox @bind-Value="Filtro.IncluirAnuladas" class="form-check-input me-2" />
                            <label class="form-check-label">Anulado</label>
                        </div>
                        <div class="col-md-3 d-flex align-items-center">
                            <InputCheckbox @bind-Value="Filtro.IncluirVigentes" class="form-check-input me-2" />
                            <label class="form-check-label">Vigente</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-wrap justify-content-between align-items-center mb-2 gap-2">
                    <div class="text-muted small">
                        @if (Resultado != null)
                        {
                            <span>Mostrando página @Resultado.PageNumber de @TotalPaginas (Total: @Resultado.TotalCount)</span>
                        }
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label mb-0 small">Registros por página:</label>
                        <select class="form-select form-select-sm w-auto" @bind="Filtro.PageSize" @bind:after="(() => { Filtro.PageNumber = 1; BuscarConvenios(); })">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                        </select>

                        <div class="d-flex align-items-center ms-2">
                            <button class="btn btn-sm btn-outline-secondary me-1"
                                    disabled="@(Resultado == null || Resultado.PageNumber == 1)"
                                    @onclick="(() => CambiarPagina(-1))">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary"
                                    disabled="@(Resultado == null || Resultado.PageNumber >= TotalPaginas)"
                                    @onclick="(() => CambiarPagina(1))">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

                @if (Resultado == null || Resultado.Items == null)
                {
                    <div class="alert alert-info text-center shadow-sm">
                        <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los convenios.
                    </div>
                }
                else if (!Resultado.Items.Any())
                {
                    <div class="alert alert-warning text-center shadow-sm">
                        <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron convenios.
                    </div>
                }
                else
                {
                    <div class="tabla-fija shadow-sm rounded border">
                        <div class="tabla-body">
                            <table class="table align-middle mb-0 tabla-convenios">
                                <thead>
                                    <tr>
                                        <th style="width: 10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ConvenioDto.IdConvenio))">Número @OrdenIcono(nameof(ConvenioDto.IdConvenio))</th>
                                        <th style="width: 20%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ConvenioDto.NombreMedico))">Médico @OrdenIcono(nameof(ConvenioDto.NombreMedico))</th>
                                        <th style="width: 10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ConvenioDto.FechaConvenio))">Fecha @OrdenIcono(nameof(ConvenioDto.FechaConvenio))</th>
                                        <th style="width: 15%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ConvenioDto.MontoTotal))">Total Órdenes @OrdenIcono(nameof(ConvenioDto.MontoTotal))</th>
                                        <th style="width: 10%;">% Comisión</th>
                                        <th style="width: 15%;">Total Médico</th>
                                        <th style="width: 10%;">Estado</th>
                                        <th style="width: 10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Convenio in Resultado.Items)
                                    {
                                        var TotalMedico = Math.Round(Convenio.MontoTotal * Convenio.PorcentajeComision / 100, 2);
                                        <tr>
                                            <td data-label="Número">@Convenio.IdConvenio</td>
                                            <td data-label="Médico" class="text-truncate">@Convenio.NombreMedico</td>
                                            <td data-label="Fecha">@Convenio.FechaConvenio.ToString("dd/MM/yyyy")</td>
                                            <td data-label="Total Órdenes">@Convenio.MontoTotal.ToString("C")</td>
                                            <td data-label="% Comisión">@Convenio.PorcentajeComision.ToString("0.##")%</td>
                                            <td data-label="Total Médico">@TotalMedico.ToString("C")</td>
                                            <td data-label="Estado">
                                                <span class="badge bg-@(Convenio.Anulado == true ? "danger" : "success")">
                                                    @(Convenio.Anulado == true ? "Anulado" : "Activo")
                                                </span>
                                            </td>
                                            <td data-label="Acciones">
                                                <button class="btn btn-primary btn-sm me-1" @onclick="() => VerDetalle(Convenio.IdConvenio)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                @if (PuedeAnular && Convenio.Anulado == false)
                                                {
                                                    <button class="btn btn-danger btn-sm" @onclick="() => AnularConvenio(Convenio.IdConvenio)">
                                                        <i class="bi bi-x-circle-fill"></i>
                                                    </button>
                                                }
                                                else if (!PuedeAnular)
                                                {
                                                    <span class="text-muted small">Sin permisos</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }

            @if (MostrarModal && ConvenioDetalle != null)
            {
                var TotalMedico = Math.Round(ConvenioDetalle.MontoTotal * ConvenioDetalle.PorcentajeComision / 100, 2);
                <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5); z-index:1050;">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content shadow-lg">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-info-circle me-2"></i>Detalle Convenio #@ConvenioDetalle.IdConvenio
                                </h5>
                                <button class="btn-close" @onclick="CerrarModal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row mb-3">
                                    <div class="col-md-4"><strong>Médico:</strong> @ConvenioDetalle.NombreMedico</div>
                                    <div class="col-md-4"><strong>Fecha:</strong> @ConvenioDetalle.FechaConvenio.ToString("dd/MM/yyyy")</div>
                                    <div class="col-md-4"><strong>Órdenes:</strong> @ConvenioDetalle.Ordenes.Count</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4"><strong>Total Órdenes:</strong> @ConvenioDetalle.MontoTotal.ToString("C")</div>
                                    <div class="col-md-4"><strong>% Comisión:</strong> @ConvenioDetalle.PorcentajeComision.ToString("0.##")%</div>
                                    <div class="col-md-4"><strong>Total Médico:</strong> @TotalMedico.ToString("C")</div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered align-middle text-center">
                                        <thead class="table-light">
                                            <tr>
                                                <th>N° Orden</th>
                                                <th>Paciente</th>
                                                <th>Fecha</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var Orden in ConvenioDetalle.Ordenes)
                                            {
                                                <tr>
                                                    <td>@Orden.NumeroOrden</td>
                                                    <td>@Orden.Paciente</td>
                                                    <td>@Orden.FechaOrden?.ToString("dd/MM/yyyy")</td>
                                                    <td>@Orden.Subtotal.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private ResultadoPaginadoDto<ConvenioDto>? Resultado;
    private ConvenioFiltroDto Filtro = new()
    {
        FechaHasta = DateOnly.FromDateTime(DateTime.Today),
        FechaDesde = DateOnly.FromDateTime(DateTime.Today.AddDays(-15)),
        PageNumber = 1,
        PageSize = 10,
        SortBy = nameof(ConvenioDto.FechaConvenio),
        SortAsc = false,
        IncluirAnuladas = true,
        IncluirVigentes = true
    };

    private ConvenioDetalleDto? ConvenioDetalle;
    private bool EstaRenderizado;
    private bool MostrarModal;
    private bool SesionVerificada = false;
    private bool Buscando = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !SesionVerificada)
        {
            SesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            EstaRenderizado = true;
            StateHasChanged();

            await BuscarConvenios();
        }
    }

    private int TotalPaginas => Resultado == null || Resultado.PageSize == 0
        ? 1
        : (int)Math.Ceiling(Resultado.TotalCount / (double)Resultado.PageSize);

    private MarkupString OrdenIcono(string columna)
    {
        if (Filtro.SortBy != columna) return (MarkupString)string.Empty;
        var icon = Filtro.SortAsc ? "&uarr;" : "&darr;";
        return (MarkupString)$"<span class=\"ms-1\">{icon}</span>";
    }

    private void OrdenarPor(string columna)
    {
        if (Filtro.SortBy == columna)
            Filtro.SortAsc = !Filtro.SortAsc;
        else
        {
            Filtro.SortBy = columna;
            Filtro.SortAsc = true;
        }
        Filtro.PageNumber = 1;
        _ = BuscarConvenios();
    }

    private async Task CambiarPagina(int delta)
    {
        if (Resultado == null) return;
        var nueva = Math.Max(1, Math.Min(TotalPaginas, Resultado.PageNumber + delta));
        if (nueva == Resultado.PageNumber) return;
        Filtro.PageNumber = nueva;
        await BuscarConvenios();
    }

    private async Task BuscarConvenios()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;
        if (Buscando) return;

        try
        {
            Buscando = true;
            Resultado = await ConveniosApi.BuscarConveniosAsync(Filtro);
        }
        catch
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al buscar los convenios.", "danger");
        }
        finally
        {
            Buscando = false;
        }
    }

    private async Task VerDetalle(int IdConvenio)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        ConvenioDetalle = await ConveniosApi.ObtenerDetalleAsync(IdConvenio);
        MostrarModal = ConvenioDetalle != null;

        await JS.InvokeVoidAsync("marcarModalAbierto");
        StateHasChanged();
    }

    private async Task LimpiarBusqueda()
    {
        Filtro = new ConvenioFiltroDto
        {
            FechaHasta = DateOnly.FromDateTime(DateTime.Today),
            FechaDesde = DateOnly.FromDateTime(DateTime.Today.AddDays(-15)),
            PageNumber = 1,
            PageSize = 10,
            SortBy = nameof(ConvenioDto.FechaConvenio),
            SortAsc = false,
            IncluirAnuladas = true,
            IncluirVigentes = true
        };
        await BuscarConvenios();
    }

    private async Task CerrarModal()
    {
        MostrarModal = false;
        ConvenioDetalle = null;
        await JS.InvokeVoidAsync("marcarModalCerrado");
    }

    private async Task AnularConvenio(int IdConvenio)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        bool Confirmar = await JS.InvokeAsync<bool>("confirm", "¿Desea anular este convenio?");
        if (!Confirmar) return;

        var ResultadoAnular = await ConveniosApi.AnularConvenioAsync(IdConvenio);
        if (ResultadoAnular)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Convenio anulado correctamente.", "success");
            await BuscarConvenios();
        }
        else
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "No se pudo anular el convenio.", "danger");
        }
    }

    private void IrARegistrarConvenio() => Navigation.NavigateTo("/convenios/nuevo");

    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
