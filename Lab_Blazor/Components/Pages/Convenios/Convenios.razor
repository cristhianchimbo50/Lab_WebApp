@page "/convenios"
@inject SesionVerificacionService SesionService
@rendermode InteractiveServer

@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Convenios
@using Lab_Blazor.Services.Convenios
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IConveniosApiService ConveniosApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Gestión de Convenios</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = (user.FindFirst(ClaimTypes.Role)?.Value
            ?? user.FindFirst("role")?.Value
            ?? user.FindFirst("roles")?.Value
            ?? "");


            bool esPaciente = rol == "paciente";
            bool puedeVer = rol is "administrador" or "recepcionista";
            bool puedeAnular = rol is "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4 class="mb-4 d-flex align-items-center justify-content-between flex-wrap">
                <span><i class="bi bi-handshake text-primary fs-4 me-2"></i>Gestión de Convenios</span>
                <button class="btn btn-success shadow-sm" @onclick="IrARegistrarConvenio">
                    <i class="bi bi-plus-circle me-1"></i>Nuevo Convenio
                </button>
            </h4>

            @if (!isRendered)
            {
                <div class="text-center py-5 text-primary">
                    <div class="spinner-border me-2"></div>
                    <strong>Cargando...</strong>
                </div>
            }
            else
            {
                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Buscar por</label>
                            <InputSelect @bind-Value="criterioBusqueda" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="numero">Número Convenio</option>
                                <option value="medico">Nombre Médico</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label fw-semibold">Valor</label>
                            <InputText class="form-control" @bind-Value="valorBusqueda" placeholder="Ingrese valor a buscar"
                                       @onkeypress="@(e => { if (e.Key == "Enter") FiltrarConvenios(); })" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Desde</label>
                            <InputDate class="form-control" @bind-Value="fechaDesde" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Hasta</label>
                            <InputDate class="form-control" @bind-Value="fechaHasta" />
                        </div>
                        <div class="col-md-12 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                            <button class="btn btn-primary" @onclick="FiltrarConvenios"><i class="bi bi-search me-1"></i>Buscar</button>
                            <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                        </div>
                    </div>
                </div>

                @if (convenios == null || convenios.Count == 0)
                {
                    <div class="alert alert-info text-center shadow-sm">
                        <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                    </div>
                }
                else
                {
                    @if (convenios?.Count > 0)
                    {
                        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                            <div class="text-muted small">
                                Mostrando @((CurrentPage - 1) * PageSize + 1)
                                - @(Math.Min(CurrentPage * PageSize, convenios.Count))
                                de @convenios.Count convenios
                            </div>

                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label mb-0 small">Registros por página:</label>
                                <select class="form-select form-select-sm w-auto" @bind="PageSize" @bind:after="CambiarTamPagina">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>

                                <div class="d-flex align-items-center ms-2">
                                    <button class="btn btn-sm btn-outline-secondary me-1"
                                            disabled="@(CurrentPage == 1)"
                                            @onclick="PrevPagina">
                                        <i class="bi bi-chevron-left"></i>
                                    </button>

                                    <button class="btn btn-sm btn-outline-secondary"
                                            disabled="@(CurrentPage >= TotalPages)"
                                            @onclick="NextPagina">
                                        <i class="bi bi-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="tabla-fija shadow-sm rounded border">
                        <div class="tabla-body">
                            <table class="table align-middle mb-0 tabla-convenios">
                                <thead>
                                    <tr>
                                        <th style="width: 10%;">Número</th>
                                        <th style="width: 20%;">Médico</th>
                                        <th style="width: 10%;">Fecha</th>
                                        <th style="width: 15%;">Total Órdenes</th>
                                        <th style="width: 10%;">% Comisión</th>
                                        <th style="width: 15%;">Total Médico</th>
                                        <th style="width: 10%;">Estado</th>
                                        <th style="width: 10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in PaginatedConvenios)
                                    {
                                        var totalMedico = Math.Round(c.MontoTotal * c.PorcentajeComision / 100, 2);
                                        <tr>
                                            <td data-label="Número">@c.IdConvenio</td>
                                            <td data-label="Médico" class="text-truncate">@c.NombreMedico</td>
                                            <td data-label="Fecha">@c.FechaConvenio.ToString("dd/MM/yyyy")</td>
                                            <td data-label="Total Órdenes">@c.MontoTotal.ToString("C")</td>
                                            <td data-label="% Comisión">@c.PorcentajeComision.ToString("0.##")%</td>
                                            <td data-label="Total Médico">@totalMedico.ToString("C")</td>
                                            <td data-label="Estado">
                                                <span class="badge bg-@(c.Anulado == true ? "danger" : "success")">
                                                    @(c.Anulado == true ? "Anulado" : "Activo")
                                                </span>
                                            </td>
                                            <td data-label="Acciones">
                                                <button class="btn btn-primary btn-sm me-1" @onclick="() => VerDetalle(c.IdConvenio)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                @if (puedeAnular && c.Anulado == false)
                                                {
                                                    <button class="btn btn-danger btn-sm" @onclick="() => AnularConvenio(c.IdConvenio)">
                                                        <i class="bi bi-x-circle-fill"></i>
                                                    </button>
                                                }
                                                else if (!puedeAnular)
                                                {
                                                    <span class="text-muted small">Sin permisos</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }

            @if (mostrarModal && convenioDetalle != null)
            {
                var totalMedico = Math.Round(convenioDetalle.MontoTotal * convenioDetalle.PorcentajeComision / 100, 2);
                <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5); z-index:1050;">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content shadow-lg">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-info-circle me-2"></i>Detalle Convenio #@convenioDetalle.IdConvenio
                                </h5>
                                <button class="btn-close" @onclick="CerrarModal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row mb-3">
                                    <div class="col-md-4"><strong>Médico:</strong> @convenioDetalle.NombreMedico</div>
                                    <div class="col-md-4"><strong>Fecha:</strong> @convenioDetalle.FechaConvenio.ToString("dd/MM/yyyy")</div>
                                    <div class="col-md-4"><strong>Órdenes:</strong> @convenioDetalle.Ordenes.Count</div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4"><strong>Total Órdenes:</strong> @convenioDetalle.MontoTotal.ToString("C")</div>
                                    <div class="col-md-4"><strong>% Comisión:</strong> @convenioDetalle.PorcentajeComision.ToString("0.##")%</div>
                                    <div class="col-md-4"><strong>Total Médico:</strong> @totalMedico.ToString("C")</div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered align-middle text-center">
                                        <thead class="table-light">
                                            <tr>
                                                <th>N° Orden</th>
                                                <th>Paciente</th>
                                                <th>Fecha</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var o in convenioDetalle.Ordenes)
                                            {
                                                <tr>
                                                    <td>@o.NumeroOrden</td>
                                                    <td>@o.Paciente</td>
                                                    <td>@o.FechaOrden?.ToString("dd/MM/yyyy")</td>
                                                    <td>@o.Subtotal.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<ConvenioDto> convenios = new();
    private ConvenioDetalleDto? convenioDetalle;
    private bool isRendered;
    private bool mostrarModal;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private DateTime? fechaDesde;
    private DateTime? fechaHasta;
    private int CurrentPage = 1;
    private int PageSize = 10;
    private int TotalPages => (int)Math.Ceiling(convenios.Count / (double)PageSize);
    private IEnumerable<ConvenioDto> PaginatedConvenios => convenios.Skip((CurrentPage - 1) * PageSize).Take(PageSize);

    private bool _sesionVerificada = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            var authState = await AuthProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (!user.Identity?.IsAuthenticated ?? true)
            {
                isRendered = true;
                StateHasChanged();
                return;
            }

            isRendered = true;
            StateHasChanged();
        }
    }

    private async Task FiltrarConvenios()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var todos = await ConveniosApi.ObtenerConveniosAsync();
        var filtrados = todos.AsEnumerable();

        bool tieneFiltros = !string.IsNullOrWhiteSpace(criterioBusqueda)
                            || !string.IsNullOrWhiteSpace(valorBusqueda)
                            || fechaDesde.HasValue
                            || fechaHasta.HasValue;

        if (tieneFiltros)
        {
            if (!string.IsNullOrWhiteSpace(criterioBusqueda) && !string.IsNullOrWhiteSpace(valorBusqueda))
            {
                var val = valorBusqueda.ToLower();
                filtrados = criterioBusqueda switch
                {
                    "numero" => filtrados.Where(c => c.IdConvenio.ToString().Contains(val)),
                    "medico" => filtrados.Where(c => c.NombreMedico != null && c.NombreMedico.ToLower().Contains(val)),
                    _ => filtrados
                };
            }

            if (fechaDesde.HasValue)
                filtrados = filtrados.Where(c => c.FechaConvenio >= DateOnly.FromDateTime(fechaDesde.Value));
            if (fechaHasta.HasValue)
                filtrados = filtrados.Where(c => c.FechaConvenio <= DateOnly.FromDateTime(fechaHasta.Value));

            convenios = filtrados.ToList();
        }
        else
        {
            convenios = todos.ToList();
        }

        CurrentPage = 1;
    }

    private async Task VerDetalle(int id)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        convenioDetalle = await ConveniosApi.ObtenerDetalleAsync(id);
        mostrarModal = convenioDetalle != null;

        await JS.InvokeVoidAsync("marcarModalAbierto");
        StateHasChanged();
    }

    private async Task LimpiarBusqueda()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
    }

    private async Task CerrarModal()
    {
        mostrarModal = false;
        convenioDetalle = null;
        await JS.InvokeVoidAsync("marcarModalCerrado");
    }

    private async Task AnularConvenio(int id)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        bool confirmar = await JS.InvokeAsync<bool>("confirm", "¿Desea anular este convenio?");
        if (!confirmar) return;

        var result = await ConveniosApi.AnularConvenioAsync(id);
        if (result)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Convenio anulado correctamente.", "success");
            convenios = await ConveniosApi.ObtenerConveniosAsync();
        }
        else
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "No se pudo anular el convenio.", "danger");
        }

        StateHasChanged();
    }

    private void IrARegistrarConvenio()
    {
        Navigation.NavigateTo("/convenios/nuevo");
    }

    private void PrevPagina()
    {
        if (CurrentPage > 1)
            CurrentPage--;
    }

    private void NextPagina()
    {
        if (CurrentPage < TotalPages)
            CurrentPage++;
    }

    private void CambiarTamPagina()
    {
        CurrentPage = 1;
    }


    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
