@page "/cuentasporcobrar"
@inject SesionVerificacionService SesionService

@rendermode InteractiveServer

@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Pagos
@using Lab_Contracts.Ordenes
@using Lab_Blazor.Services.Pagos
@using Lab_Contracts.Common
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IPagosApiService PagosApi
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS

<PageTitle>Cuentas por Cobrar</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value
            ?? user.FindFirst("IdRol")?.Value
            ?? user.FindFirst("role")?.Value
            ?? user.FindFirst("roles")?.Value
            ?? string.Empty;

            bool puedeVer = rol is "1" or "2";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase justify-content-between fw-bold flex-wrap">
                <span><i class="bi bi-cash-coin text-primary fs-4 me-2"></i>Cuentas por Cobrar</span>
            </h3>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Número de Orden</label>
                        <InputText class="form-control" @bind-Value="_filtro.NumeroOrden" placeholder="ORD-00001" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Cédula</label>
                        <InputText class="form-control" @bind-Value="_filtro.Cedula" placeholder="Cédula del paciente" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Nombre</label>
                        <InputText class="form-control" @bind-Value="_filtro.NombrePaciente" placeholder="Nombre del paciente" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Estado de Pago</label>
                        <select class="form-select" @bind="_filtro.EstadoPago">
                            <option value="">Todos</option>
                            <option value="PENDIENTE">Pendiente</option>
                            <option value="PAGADO">Pagado</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Desde</label>
                        <InputDate class="form-control" @bind-Value="_filtro.FechaInicio" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Hasta</label>
                        <InputDate class="form-control" @bind-Value="_filtro.FechaFin" />
                    </div>
                    <div class="col-md-3 d-flex align-items-center mt-4">
                        <InputCheckbox @bind-Value="_verAnulados" class="form-check-input me-2" />
                        <label class="form-check-label">Anulado</label>
                    </div>
                    <div class="col-md-3 d-flex align-items-center mt-4">
                        <InputCheckbox @bind-Value="_verNoAnulados" class="form-check-input me-2" />
                        <label class="form-check-label">No Anulado</label>
                    </div>
                </div>
            </div>

            <div class="text-end mb-3">
                <button class="btn btn-primary me-2 shadow-sm" @onclick="BuscarAsync">
                    <i class="bi bi-search me-1"></i>Buscar
                </button>
                <button class="btn btn-outline-secondary shadow-sm" @onclick="LimpiarFiltrosAsync">
                    <i class="bi bi-eraser me-1"></i>Limpiar
                </button>
            </div>

            @if (_resultado == null || _resultado.Items == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (!_resultado.Items.Any())
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron registros.
                </div>
            }
            else
            {
                <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                    <div class="text-muted small">
                        Mostrando @((CurrentPage - 1) * PageSize + 1)
                        - @(Math.Min(CurrentPage * PageSize, _resultado.TotalCount))
                        de @_resultado.TotalCount registros
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label mb-0 small">Registros por página:</label>
                        <select class="form-select form-select-sm w-auto" @bind="PageSize" @bind:after="(() => { CurrentPage = 1; BuscarAsync(); })">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                        </select>

                        <div class="d-flex align-items-center ms-2">
                            <button class="btn btn-sm btn-outline-secondary me-1"
                                    disabled="@(CurrentPage == 1)"
                                    @onclick="(() => CambiarPaginaAsync(-1))">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary"
                                    disabled="@(CurrentPage >= TotalPages)"
                                    @onclick="(() => CambiarPaginaAsync(1))">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="tabla-fija shadow-sm">
                    <div class="tabla-body">
                        <table class="table align-middle tabla-pacientes">
                            <thead>
                                <tr>
                                    <th style="width:10%;">Número</th>
                                    <th style="width:10%;">Fecha</th>
                                    <th style="width:12%;">Cédula</th>
                                    <th style="width:18%;">Paciente</th>
                                    <th style="width:10%;">Total</th>
                                    <th style="width:10%;">Pagado</th>
                                    <th style="width:10%;">Saldo</th>
                                    <th style="width:10%;">Estado Pago</th>
                                    <th style="width:10%;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var o in _resultado.Items)
                                {
                                    <tr>
                                        <td>@o.NumeroOrden</td>
                                        <td>@o.FechaOrden.ToString("dd/MM/yyyy")</td>
                                        <td>@o.CedulaPaciente</td>
                                        <td>@o.NombrePaciente</td>
                                        <td>@o.Total.ToString("C")</td>
                                        <td>@o.TotalPagado.ToString("C")</td>
                                        <td class="fw-bold @(o.SaldoPendiente > 0 ? "text-danger" : "text-success")">@o.SaldoPendiente.ToString("C")</td>
                                        <td>
                                            <span class="badge bg-@(o.EstadoPago == "PAGADO" ? "success" : "warning text-dark")">@o.EstadoPago</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-success btn-sm shadow-sm" @onclick="(() => IrACobro(o.CedulaPaciente))">
                                                <i class="bi bi-cash-coin me-1"></i> Cobrar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private ResultadoPaginadoDto<OrdenDto> _resultado = new ResultadoPaginadoDto<OrdenDto>();
    private PagoFiltroDto _filtro = new();
    private bool _verAnulados = true;
    private bool _verNoAnulados = true;
    private int _pageSize = 10;
    private int PageSize { get => _pageSize; set { if (_pageSize != value) { _pageSize = value; CurrentPage = 1; } } }
    private int CurrentPage = 1;
    private int TotalPages => _resultado == null || _resultado.PageSize == 0 ? 1 : (int)Math.Ceiling(_resultado.TotalCount / (double)_resultado.PageSize);

    protected override async void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _resultado = new ResultadoPaginadoDto<OrdenDto>();
            StateHasChanged();
        }
    }

    private async Task BuscarAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (string.IsNullOrWhiteSpace(_filtro.NumeroOrden) &&
            string.IsNullOrWhiteSpace(_filtro.Cedula) &&
            string.IsNullOrWhiteSpace(_filtro.NombrePaciente) &&
            string.IsNullOrWhiteSpace(_filtro.EstadoPago) &&
            !_filtro.FechaInicio.HasValue && !_filtro.FechaFin.HasValue &&
            !_verAnulados && !_verNoAnulados)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Presione Buscar para cargar los datos.", "info");
            _resultado = new ResultadoPaginadoDto<OrdenDto>();
            return;
        }

        if (_verAnulados && !_verNoAnulados)
            _filtro.IncluirAnulados = true;
        else if (!_verAnulados && _verNoAnulados)
            _filtro.IncluirAnulados = false;
        else
            _filtro.IncluirAnulados = null;

        _filtro.PageNumber = CurrentPage;
        _filtro.PageSize = PageSize;

        _resultado = await PagosApi.ListarCuentasPorCobrarPaginadoAsync(_filtro);

        await JS.InvokeVoidAsync("mostrarToastAsync", "Datos cargados correctamente.", "success");
    }

    private async Task LimpiarFiltrosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _filtro = new();
        _verAnulados = true;
        _verNoAnulados = true;
        _resultado = new ResultadoPaginadoDto<OrdenDto>();
        await JS.InvokeVoidAsync("mostrarToastAsync", "Filtros restablecidos.", "secondary");
    }

    private async Task CambiarPaginaAsync(int cambio)
    {
        var nueva = Math.Max(1, Math.Min(TotalPages, CurrentPage + cambio));
        if (nueva == CurrentPage) return;
        CurrentPage = nueva;
        await BuscarAsync();
    }

    private void IrACobro(string? cedula)
    {
        _ = SesionService.VerificarOSalirAsync();
        if (!string.IsNullOrEmpty(cedula))
            Navigation.NavigateTo($"/cobros/{cedula}");
    }

    private async Task VolverAtrasAsync() => await JS.InvokeVoidAsync("history.back");
}
