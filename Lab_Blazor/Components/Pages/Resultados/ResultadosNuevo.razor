@page "/resultados/ingresar"
@rendermode InteractiveServer
<PageTitle>Ingreso de Resultados</PageTitle>

@using Lab_Contracts.Ordenes
@using Lab_Contracts.Examenes
@using Lab_Contracts.Resultados
@using Lab_Blazor.Services.Ordenes
@using Lab_Blazor.Services.Examenes
@using Lab_Blazor.Services.Resultados
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService
@inject IOrdenesApiService OrdenesApi
@inject IExamenesApiService ExamenesApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider
@inject IResultadosApiService ResultadosApi


<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeIngresar = rol is "administrador" or "laboratorista";
        }

        @if (!puedeIngresar)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para ingresar resultados.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            @if (_cargando)
            {
                <div class="text-center text-primary my-5">
                    <div class="spinner-border" role="status"></div>
                    <div class="mt-2">Cargando datos...</div>
                </div>
            }
            else if (_datosOrden == null)
            {
                <div class="alert alert-warning text-center mt-5">
                    <i class="bi bi-exclamation-triangle me-2"></i> No se encontraron datos de la orden.
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0 mt-3 mb-5">
                    <div class="card-header bg-primary text-white d-flex align-items-center">
                        <i class="bi bi-clipboard2-check me-2"></i>
                        <h5 class="m-0">@(_modoEdicion ? "Edición de Resultado" : "Ingreso de Resultados")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Cédula</label>
                                <input class="form-control" value="@_datosOrden.CedulaPaciente" disabled />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Nombre</label>
                                <input class="form-control" value="@_datosOrden.NombrePaciente" disabled />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Fecha Resultado</label>
                                <InputDate class="form-control" @bind-Value="_fechaResultado" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Médico</label>
                                <input class="form-control" value="@_datosOrden.NombreMedico" disabled />
                            </div>
                        </div>

                        <h6 class="fw-semibold mb-3 mt-4">
                            <i class="bi bi-microscope me-2 text-primary"></i> Parámetros del Examen
                        </h6>

                        <div class="table-responsive" style="max-height: 480px; overflow-y: auto; border: 1px solid #dee2e6;">
                            <table class="table table-bordered table-hover align-middle text-center mb-0">
                                <thead class="table-light sticky-top" style="top: 0; z-index: 1;">
                                    <tr>
                                        <th style="width: 40%;">Examen</th>
                                        <th style="width: 25%;">Valor</th>
                                        <th style="width: 15%;">Unidad</th>
                                        <th style="width: 20%;">Referencia</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var grupo in _examenesAgrupados)
                                    {
                                        <tr class="table-primary">
                                            <td class="text-start fw-semibold">@grupo.Padre.NombreExamen</td>
                                            <td colspan="3"></td>
                                        </tr>
                                        @if (grupo.Hijos.Any())
                                        {
                                            @foreach (var hijo in grupo.Hijos)
                                            {
                                                <tr>
                                                    <td class="ps-4">@hijo.NombreExamen</td>
                                                    <td>
                                                        <input type="text" class="form-control text-end" @bind="_valoresIngresados[hijo.IdExamen]" />
                                                    </td>
                                                    <td>@hijo.Unidad</td>
                                                    <td>@hijo.ValorReferencia</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td class="ps-4">@grupo.Padre.NombreExamen</td>
                                                <td>
                                                    <input type="text" class="form-control text-end" @bind="_valoresIngresados[grupo.Padre.IdExamen]" />
                                                </td>
                                                <td>@grupo.Padre.Unidad</td>
                                                <td>@grupo.Padre.ValorReferencia</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mb-4 mt-3">
                            <label class="form-label fw-semibold">Observaciones Generales</label>
                            <textarea class="form-control" rows="3" placeholder="Ingrese observaciones adicionales..." @bind="_observacionesGenerales"></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button class="btn btn-success shadow-sm" @onclick="GuardarResultadosAsync">
                                <i class="bi bi-save me-1"></i> @(_modoEdicion ? "Actualizar Resultado" : "Guardar Resultado")
                            </button>
                            <button class="btn btn-secondary shadow-sm" @onclick="@(() => Navigation.NavigateTo("/ordenes"))">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Para acceder a esta sección, por favor inicie sesión con una cuenta autorizada.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public int idOrden { get; set; }
    [Parameter] public List<int> idsExamenes { get; set; } = new();

    private OrdenDetalleDto? _datosOrden;
    private List<(ExamenDto Padre, List<ExamenDto> Hijos)> _examenesAgrupados = new();
    private Dictionary<int, string> _valoresIngresados = new();
    private DateTime _fechaResultado = DateTime.Today;
    private string _observacionesGenerales = string.Empty;
    private bool _cargando = true;

    private bool _sesionVerificada = false;
    private bool _modoEdicion = false;
    private int _idResultadoEdicion;
    private ResultadoDetalleDto? _detalleResultadoEdicion;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            try
            {
                var authState = await AuthProvider.GetAuthenticationStateAsync();
                var user = authState.User;
                if (user.Identity?.IsAuthenticated ?? false)
                {
                    var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
                    if (rol is "administrador" or "laboratorista")
                    {
                        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
                        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
                        if (query.TryGetValue("idResultado", out var idResultadoStr) && int.TryParse(idResultadoStr, out var idResultado))
                        {
                            _modoEdicion = true;
                            _idResultadoEdicion = idResultado;
                            await InicializarDatosEdicionAsync();
                        }
                        else
                        {
                            if (query.TryGetValue("idOrden", out var idOrdenStr))
                                idOrden = int.TryParse(idOrdenStr, out var parsedId) ? parsedId : 0;
                            if (query.TryGetValue("idsExamenes", out var ids))
                                idsExamenes = ids.Select(int.Parse).ToList();
                            await InicializarDatosAsync();
                        }
                    }
                }
            }
            catch (HttpRequestException)
            {
                await JS.InvokeVoidAsync("alert", "No autorizado para cargar datos de resultados.");
            }
            finally
            {
                _cargando = false;
                StateHasChanged();
            }
        }
    }

    private async Task InicializarDatosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _datosOrden = await OrdenesApi.ObtenerDetalleOrdenAsync(idOrden);
        if (_datosOrden == null) return;

        var todos = await ExamenesApi.ListarExamenesAsync();
        foreach (var idPadre in idsExamenes)
        {
            var padre = todos.FirstOrDefault(e => e.IdExamen == idPadre);
            if (padre == null) continue;
            var hijos = await ExamenesApi.ListarExamenesHijosAsync(idPadre);
            _examenesAgrupados.Add((padre, hijos));
            _valoresIngresados.TryAdd(padre.IdExamen, string.Empty);
            foreach (var hijo in hijos)
                _valoresIngresados.TryAdd(hijo.IdExamen, string.Empty);
        }
    }

    private async Task InicializarDatosEdicionAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _detalleResultadoEdicion = await ResultadosApi.ObtenerDetalleResultadoAsync(_idResultadoEdicion);
        if (_detalleResultadoEdicion == null)
        {
            await JS.InvokeVoidAsync("alert", "No se encontró el resultado para editar.");
            return;
        }

        if (!string.Equals(_detalleResultadoEdicion.EstadoResultado, "CORRECCION", StringComparison.OrdinalIgnoreCase))
        {
            await JS.InvokeVoidAsync("alert", "Solo se pueden modificar resultados en estado Corrección.");
            Navigation.NavigateTo("/ordenes");
            return;
        }

        idOrden = _detalleResultadoEdicion.IdOrden;
        _datosOrden = await OrdenesApi.ObtenerDetalleOrdenAsync(idOrden);
        if (_datosOrden == null)
        {
            await JS.InvokeVoidAsync("alert", "No se pudieron cargar los datos de la orden.");
            return;
        }

        _fechaResultado = _detalleResultadoEdicion.FechaResultado;
        _observacionesGenerales = _detalleResultadoEdicion.Observaciones ?? string.Empty;

        var todos = await ExamenesApi.ListarExamenesAsync();
        _examenesAgrupados = new();
        _valoresIngresados = new();

        foreach (var detalle in _detalleResultadoEdicion.Detalles)
        {
            var examen = todos.FirstOrDefault(e => e.IdExamen == detalle.IdExamen);
            if (examen == null) continue;
            _examenesAgrupados.Add((examen, new List<ExamenDto>()));
            _valoresIngresados[examen.IdExamen] = detalle.Valor ?? string.Empty;
        }
    }

    private async Task GuardarResultadosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        try
        {
            var resultados = new List<ResultadoExamenDto>();

            foreach (var grupo in _examenesAgrupados)
            {
                if (grupo.Hijos.Any())
                {
                    foreach (var hijo in grupo.Hijos)
                    {
                        resultados.Add(new ResultadoExamenDto
                        {
                            IdExamen = hijo.IdExamen,
                            NombreExamen = hijo.NombreExamen ?? "",
                            Valor = _valoresIngresados.GetValueOrDefault(hijo.IdExamen, ""),
                            Unidad = hijo.Unidad ?? "",
                            ValorReferencia = hijo.ValorReferencia ?? "",
                            Observacion = ""
                        });
                    }
                }
                else
                {
                    resultados.Add(new ResultadoExamenDto
                    {
                        IdExamen = grupo.Padre.IdExamen,
                        NombreExamen = grupo.Padre.NombreExamen ?? "",
                        Valor = _valoresIngresados.GetValueOrDefault(grupo.Padre.IdExamen, ""),
                        Unidad = grupo.Padre.Unidad ?? "",
                        ValorReferencia = grupo.Padre.ValorReferencia ?? "",
                        Observacion = ""
                    });
                }
            }

            if (_modoEdicion)
            {
                var dtoActualizacion = new ResultadoActualizarDto
                {
                    IdResultado = _idResultadoEdicion,
                    FechaResultado = _fechaResultado,
                    ObservacionesGenerales = _observacionesGenerales,
                    Examenes = resultados
                };

                var ok = await ResultadosApi.ActualizarResultadoAsync(dtoActualizacion);
                if (ok)
                {
                    await JS.InvokeVoidAsync("alert", "Resultado actualizado y enviado a revisión.");
                    Navigation.NavigateTo("/ordenes");
                }
                else
                {
                    await JS.InvokeVoidAsync("alert", "No se pudo actualizar el resultado.");
                }
                return;
            }

            var dto = new ResultadoGuardarDto
            {
                IdOrden = idOrden,
                IdPaciente = _datosOrden?.IdPaciente ?? 0,
                FechaResultado = _fechaResultado,
                Examenes = resultados,
                ObservacionesGenerales = _observacionesGenerales
            };

            var response = await OrdenesApi.GuardarResultadosAsync(dto);
            var contenido = await response.Content.ReadAsStringAsync();

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Resultados guardados correctamente.");
                await OrdenesApi.VerificarNotificacionResultadosOrdenAsync(idOrden);
                Navigation.NavigateTo("/resultados");
            }
            else
            {
                string mensaje = "Error al guardar el resultado.";
                try
                {
                    var errorObj = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, object>>(contenido);
                    if (errorObj != null && errorObj.ContainsKey("mensaje"))
                        mensaje = errorObj["mensaje"]?.ToString() ?? mensaje;
                }
                catch { }
                await JS.InvokeVoidAsync("alert", mensaje);
            }
        }
        catch (HttpRequestException)
        {
            await JS.InvokeVoidAsync("alert", "No autorizado para guardar resultados.");
        }
    }

    private async Task VolverAtrasAsync() => await JS.InvokeVoidAsync("history.back");
}
