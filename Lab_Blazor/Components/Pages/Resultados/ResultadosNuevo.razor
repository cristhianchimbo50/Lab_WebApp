@page "/resultados/ingresar"
@rendermode InteractiveServer
<PageTitle>Ingreso de Resultados</PageTitle>

@using Lab_Contracts.Ordenes
@using Lab_Contracts.Examenes
@using Lab_Contracts.Resultados
@using Lab_Blazor.Services.Ordenes
@using Lab_Blazor.Services.Examenes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IOrdenesApiService OrdenesApi
@inject IExamenesApiService ExamenesApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeIngresar = rol is "administrador" or "laboratorista";
        }

        @if (!puedeIngresar)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">
                            No tienes permisos suficientes para ingresar resultados.
                        </p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            @if (cargando)
            {
                <div class="text-center text-primary my-5">
                    <div class="spinner-border" role="status"></div>
                    <div class="mt-2">Cargando datos...</div>
                </div>
            }
            else if (DatosOrden == null)
            {
                <div class="alert alert-warning text-center mt-5">
                    <i class="bi bi-exclamation-triangle me-2"></i> No se encontraron datos de la orden.
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0 mt-3 mb-5">
                    <div class="card-header bg-primary text-white d-flex align-items-center">
                        <i class="bi bi-clipboard2-check me-2"></i>
                        <h5 class="m-0">Ingreso de Resultados</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Cédula</label>
                                <input class="form-control" value="@DatosOrden.CedulaPaciente" disabled />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Nombre</label>
                                <input class="form-control" value="@DatosOrden.NombrePaciente" disabled />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Fecha Resultado</label>
                                <InputDate class="form-control" @bind-Value="fechaResultado" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Médico</label>
                                <input class="form-control" value="@DatosOrden.NombreMedico" disabled />
                            </div>
                        </div>

                        <h6 class="fw-semibold mb-3 mt-4">
                            <i class="bi bi-microscope me-2 text-primary"></i> Parámetros del Examen
                        </h6>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th>Examen</th>
                                        <th>Valor</th>
                                        <th>Unidad</th>
                                        <th>Referencia</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ex in ExamenesSeleccionados)
                                    {
                                        <tr>
                                            <td class="text-start">@ex.NombreExamen</td>
                                            <td>
                                                <input type="text" class="form-control text-end"
                                                       @bind="ValoresIngresados[ex.IdExamen]" />
                                            </td>
                                            <td>@ex.Unidad</td>
                                            <td>@ex.ValorReferencia</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mb-4 mt-3">
                            <label class="form-label fw-semibold">Observaciones Generales</label>
                            <textarea class="form-control" rows="3"
                                      placeholder="Ingrese observaciones adicionales..."
                                      @bind="observacionesGenerales"></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button class="btn btn-success shadow-sm" @onclick="GuardarResultados">
                                <i class="bi bi-save me-1"></i> Guardar Resultado
                            </button>
                            <button class="btn btn-secondary shadow-sm" @onclick="@(() => Navigation.NavigateTo("/ordenes"))">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Para acceder a esta sección, por favor inicie sesión con una cuenta autorizada.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public int idOrden { get; set; }
    [Parameter] public List<int> idsExamenes { get; set; } = new();

    private OrdenDetalleDto? DatosOrden;
    private List<ExamenDto> ExamenesSeleccionados = new();
    private Dictionary<int, string> ValoresIngresados = new();
    private DateTime fechaResultado = DateTime.Today;
    private string observacionesGenerales = string.Empty;
    private bool cargando = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var authState = await AuthProvider.GetAuthenticationStateAsync();
                var user = authState.User;

                if (user.Identity?.IsAuthenticated ?? false)
                {
                    var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
                    if (rol is "administrador" or "laboratorista")
                    {
                        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
                        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
                        if (query.TryGetValue("idOrden", out var idOrdenStr))
                            idOrden = int.TryParse(idOrdenStr, out var parsedId) ? parsedId : 0;
                        if (query.TryGetValue("idsExamenes", out var ids))
                            idsExamenes = ids.Select(int.Parse).ToList();

                        await InicializarDatos();
                    }
                }
            }
            catch (HttpRequestException)
            {
                await JS.InvokeVoidAsync("alert", "No autorizado para cargar datos de resultados.");
            }
            finally
            {
                cargando = false;
                StateHasChanged();
            }
        }
    }

    private async Task InicializarDatos()
    {
        DatosOrden = await OrdenesApi.ObtenerDetalleOrdenAsync(idOrden);
        if (DatosOrden == null) return;

        var todos = (await ExamenesApi.GetExamenesAsync()).ToList();
        ExamenesSeleccionados = todos.Where(e => idsExamenes.Contains(e.IdExamen)).ToList();

        foreach (var ex in ExamenesSeleccionados)
            ValoresIngresados.TryAdd(ex.IdExamen, string.Empty);
    }

    private async Task GuardarResultados()
    {
        try
        {
            var resultados = ExamenesSeleccionados.Select(ex => new ResultadoExamenDto
            {
                IdExamen = ex.IdExamen,
                NombreExamen = ex.NombreExamen ?? "",
                Valor = ValoresIngresados.GetValueOrDefault(ex.IdExamen) ?? "",
                Unidad = ex.Unidad ?? "",
                ValorReferencia = ex.ValorReferencia ?? "",
                Observacion = ""
            }).ToList();

            var dto = new ResultadoGuardarDto
            {
                IdOrden = idOrden,
                IdPaciente = DatosOrden?.IdPaciente ?? 0,
                FechaResultado = fechaResultado,
                Examenes = resultados,
                ObservacionesGenerales = observacionesGenerales
            };

            var response = await OrdenesApi.GuardarResultadosAsync(dto);
            var contenido = await response.Content.ReadAsStringAsync();

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Resultado guardado correctamente.");
                Navigation.NavigateTo("/resultados");
            }
            else
            {
                string mensaje = "Error al guardar el resultado.";
                try
                {
                    var errorObj = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, object>>(contenido);
                    if (errorObj != null && errorObj.ContainsKey("mensaje"))
                        mensaje = errorObj["mensaje"]?.ToString() ?? mensaje;
                }
                catch { }
                await JS.InvokeVoidAsync("alert", mensaje);
            }
        }
        catch (HttpRequestException)
        {
            await JS.InvokeVoidAsync("alert", "No autorizado para guardar resultados.");
        }
    }

    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
