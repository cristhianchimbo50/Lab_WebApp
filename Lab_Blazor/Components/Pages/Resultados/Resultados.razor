@page "/resultados"
@rendermode InteractiveServer
<PageTitle>Gestión de Resultados</PageTitle>

@using Lab_Contracts.Resultados
@using Lab_Blazor.Services.Resultados
@inject IResultadosApiService ResultadosApi
@inject IJSRuntime JS

<h4 class="mb-4"><i class="fas fa-file-medical me-2 text-primary"></i>Gestión de Resultados</h4>

<div class="card mb-3 shadow-sm">
    <div class="card-body row g-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Buscar por</label>
            <InputSelect class="form-select" @bind-Value="criterioBusqueda" @onchange="CambioCriterioBusqueda">
                <option value="">-- Seleccione --</option>
                <option value="numero">Número de Resultado</option>
                <option value="cedula">Cédula</option>
                <option value="nombre">Nombre</option>
            </InputSelect>
        </div>
        <div class="col-md-5">
            <label class="form-label">Valor</label>
            <InputText class="form-control"
                       @bind-Value="valorBusqueda"
                       placeholder="@SampleTextBusqueda" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Fecha desde</label>
            <InputDate class="form-control" @bind-Value="fechaDesde" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Fecha hasta</label>
            <InputDate class="form-control" @bind-Value="fechaHasta" />
        </div>
        <div class="col-md-3">
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       checked="@mostrarNoAnulados"
                       @onchange="CambioCheckNoAnulados" />
                <label class="form-check-label">No anulados</label>
            </div>
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       checked="@mostrarAnulados"
                       @onchange="CambioCheckAnulados" />
                <label class="form-check-label">Anulados</label>
            </div>
        </div>
        <div class="col-md-2 d-flex gap-2">
            <button class="btn btn-primary" @onclick="BuscarResultados" title="Buscar">
                <i class="fas fa-search"></i>
            </button>
            <button class="btn btn-secondary" @onclick="LimpiarFiltros" title="Limpiar">
                <i class="fas fa-eraser"></i>
            </button>
        </div>
    </div>
</div>

@if (cargando)
{
    <div class="d-flex align-items-center text-primary justify-content-center" style="height:200px;">
        <div class="spinner-border me-2" role="status"></div>
        <strong>Cargando datos...</strong>
    </div>
}
else if (resultados.Count == 0)
{
    <div class="alert alert-warning">No se encontraron resultados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Número Resultado</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th style="width:110px;">Anulado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var res in resultados)
                {
                    <tr>
                        <td>@res.NumeroResultado</td>
                        <td>@res.CedulaPaciente</td>
                        <td>@res.NombrePaciente</td>
                        <td>@res.FechaResultado.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (res.Anulado)
                            {
                                <span class="badge bg-danger">ANULADO</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" @onclick="() => VerDetalleResultado(res.IdResultado)">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (mostrarDetalle && DetalleActual is not null)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5); z-index:1050;">
        <div class="modal-dialog modal-xl">
            <div class="modal-content shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-info-circle me-2"></i>Detalle Resultado
                        <span class="badge bg-light text-dark">@DetalleActual.NumeroResultado</span>
                    </h5>
                    <button class="btn-close" @onclick="CerrarDetalle"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-2 mb-3">
                        <div class="col-md-4">
                            <label><strong>Fecha Resultado</strong></label>
                            <input class="form-control" value="@DetalleActual.FechaResultado.ToString("dd/MM/yyyy")" disabled />
                        </div>
                        <div class="col-md-4">
                            <label><strong>Cédula</strong></label>
                            <input class="form-control" value="@DetalleActual.CedulaPaciente" disabled />
                        </div>
                        <div class="col-md-4">
                            <label><strong>Nombre Paciente</strong></label>
                            <input class="form-control" value="@DetalleActual.NombrePaciente" disabled />
                        </div>
                    </div>

                    <h6 class="mt-4 mb-3"><i class="fas fa-microscope me-1"></i>Detalle de Exámenes</h6>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered align-middle text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>Examen</th>
                                    <th>Valor</th>
                                    <th>Unidad</th>
                                    <th>Referencia</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in DetalleActual.Detalles)
                                {
                                    <tr>
                                        <td>@d.NombreExamen</td>
                                        <td>@d.Valor</td>
                                        <td>@d.Unidad</td>
                                        <td>@d.ValorReferencia</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mb-3 mt-4">
                        <label><strong>Observaciones Generales</strong></label>
                        <textarea class="form-control" value="@DetalleActual.Observaciones" disabled style="min-height:70px;"></textarea>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <button class="btn btn-danger" @onclick="AnularResultado" disabled="@(DetalleActual.Anulado)">
                            <i class="fas fa-ban me-1"></i> Anular Resultado
                        </button>
                        <button class="btn btn-secondary" @onclick="ImprimirResultado">
                            <i class="fas fa-print me-1"></i> Imprimir
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="modal fade" id="pdfModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Resultado PDF</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <iframe id="iframePdf" width="100%" height="600px"></iframe>
            </div>
        </div>
    </div>
</div>

@code {
    private List<ResultadoListadoDto> resultados = new();
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private bool mostrarAnulados = false;
    private bool mostrarNoAnulados = true;
    private bool cargando = true;
    private bool mostrarDetalle = false;
    private ResultadoDetalleDto? DetalleActual;
    private DateTime? fechaDesde;
    private DateTime? fechaHasta;

    private string SampleTextBusqueda => criterioBusqueda switch
    {
        "numero" => "RES-00001",
        "cedula" => "0101234567",
        "nombre" => "Juan Pérez",
        _ => "Ingrese un valor..."
    };

    protected override async Task OnInitializedAsync()
    {
        await BuscarResultados();
    }

    private async Task BuscarResultados()
    {
        cargando = true;
        var filtro = new ResultadoFiltroDto();

        if (!string.IsNullOrWhiteSpace(criterioBusqueda) && !string.IsNullOrWhiteSpace(valorBusqueda))
        {
            switch (criterioBusqueda)
            {
                case "numero": filtro.NumeroResultado = valorBusqueda; break;
                case "cedula": filtro.Cedula = valorBusqueda; break;
                case "nombre": filtro.Nombre = valorBusqueda; break;
            }
        }

        // Fechas
        if (fechaDesde.HasValue)
            filtro.FechaDesde = fechaDesde.Value;
        if (fechaHasta.HasValue)
            filtro.FechaHasta = fechaHasta.Value;

        // Anulado
        if (mostrarAnulados && !mostrarNoAnulados)
            filtro.Anulado = true;
        else if (!mostrarAnulados && mostrarNoAnulados)
            filtro.Anulado = false;
        else
            filtro.Anulado = null;

        resultados = await ResultadosApi.GetResultadosAsync(filtro);
        cargando = false;
        StateHasChanged();
    }

    private void LimpiarFiltros()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
        mostrarAnulados = false;
        mostrarNoAnulados = true;
        fechaDesde = null;
        fechaHasta = null;
        _ = BuscarResultados();
    }

    private async Task CambioCheckAnulados(ChangeEventArgs e)
    {
        mostrarAnulados = (bool)e.Value;
        if (mostrarAnulados)
            mostrarNoAnulados = false;
        await BuscarResultados();
    }
    private async Task CambioCheckNoAnulados(ChangeEventArgs e)
    {
        mostrarNoAnulados = (bool)e.Value;
        if (mostrarNoAnulados)
            mostrarAnulados = false;
        await BuscarResultados();
    }

    private void CambioCriterioBusqueda(ChangeEventArgs e)
    {
        valorBusqueda = "";
    }

    private async Task VerDetalleResultado(int idResultado)
    {
        DetalleActual = await ResultadosApi.GetDetalleResultadoAsync(idResultado);
        mostrarDetalle = true;
        StateHasChanged();
    }

    private void CerrarDetalle()
    {
        mostrarDetalle = false;
    }

    private async Task AnularResultado()
    {
        if (DetalleActual is null || DetalleActual.Anulado)
            return;

        bool confirmar = await JS.InvokeAsync<bool>("confirm", "¿Está seguro que desea anular este resultado?");
        if (!confirmar) return;

        var ok = await ResultadosApi.AnularResultadoAsync(DetalleActual.IdResultado);
        if (ok)
        {
            await JS.InvokeVoidAsync("alert", "Resultado anulado correctamente.");

            DetalleActual.Anulado = true;

            await BuscarResultados();

            mostrarDetalle = false;

            StateHasChanged();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "No se pudo anular el resultado.");
        }
    }


    private async Task ImprimirResultado()
    {
        if (DetalleActual is null)
            return;

        var idResultado = DetalleActual.IdResultado;

        var pdfBytes = await ResultadosApi.ObtenerResultadosPdfAsync(new List<int> { idResultado });
        if (pdfBytes.Length == 0)
        {
            await JS.InvokeVoidAsync("alert", "Error al generar el PDF.");
            return;
        }

        var base64Pdf = Convert.ToBase64String(pdfBytes);
        var pdfUrl = $"data:application/pdf;base64,{base64Pdf}";

        await JS.InvokeVoidAsync("mostrarModalPdfDesdeBytes", pdfUrl);
    }
}

