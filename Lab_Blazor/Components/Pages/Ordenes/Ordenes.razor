@page "/ordenes"
@rendermode InteractiveServer
<PageTitle>Gestión de Órdenes</PageTitle>

@using Lab_Contracts.Ordenes
@using Lab_Blazor.Services.Ordenes
@using Lab_Blazor.Services.Resultados
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Linq
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService

@inject IOrdenesApiService OrdenesApi
@inject IResultadosApiService ResultadosApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized Context="EstadoAutenticacion">
        @{
            var Usuario = EstadoAutenticacion.User;
            var Rol = Usuario.FindFirst(ClaimTypes.Role)?.Value ?? "";
            var IdPacienteClaim = Usuario.FindFirst("IdPaciente")?.Value;
            bool EsPaciente = Rol == "paciente";
            bool PuedeVer = Rol is "administrador" or "recepcionista" or "paciente";
        }

        @if (!PuedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">
                            No tienes permisos para acceder a la gestión de órdenes.
                        </p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase justify-content-between fw-bold flex-wrap">
                <span><i class="bi bi-file-medical text-primary fs-4 me-2"></i>@(EsPaciente ? "Mis Órdenes" : "Gestión de Órdenes")</span>
                @if (!EsPaciente)
                {
                    <button class="btn btn-success shadow-sm" @onclick="IrANuevaOrden">
                        <i class="bi bi-plus-circle-fill me-1"></i>Nueva Orden
                    </button>
                }
            </h3>

            @if (!ContenidoCargado)
            {
                <div class="d-flex align-items-center text-primary justify-content-center" style="height: 200px;">
                    <div class="spinner-border me-2" role="status"></div>
                    <span>Cargando...</span>
                </div>
            }
            else
            {
                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Buscar por</label>
                            <InputSelect class="form-select" @bind-Value="Filtro.CriterioBusqueda">
                                <option value="">-- Seleccione --</option>
                                <option value="numero">Número de Orden</option>
                                <option value="cedula">Cédula</option>
                                <option value="nombre">Nombre</option>
                                <option value="estadoPago">Estado de Pago</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label fw-semibold">Valor</label>
                            <InputText class="form-control" @bind-Value="Filtro.ValorBusqueda"
                                       placeholder="Ingrese valor a buscar"
                                       @onkeypress="@(e => { if (e.Key == "Enter") BuscarOrdenes(); })" />
                        </div>
                        <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                            <button type="button" class="btn btn-primary" @onclick="BuscarOrdenes" disabled="@Buscando">
                                @if (Buscando)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-search me-1"></i>Buscar
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="LimpiarBusqueda" disabled="@Buscando">
                                <i class="bi bi-eraser me-1"></i>Limpiar
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card mb-3 shadow-sm border-0">
                    <div class="card-body row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Desde</label>
                            <InputDate @bind-Value="Filtro.FechaDesde" class="form-control" @onchange="_ => ValidarRangoFechas()" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Hasta</label>
                            <InputDate @bind-Value="Filtro.FechaHasta" class="form-control" @onchange="_ => ValidarRangoFechas()" />
                        </div>
                        <div class="col-md-3 d-flex align-items-center mt-4">
                            <InputCheckbox @bind-Value="Filtro.IncluirAnuladas" class="form-check-input me-2" />
                            <label class="form-check-label">Anulado</label>
                        </div>
                        <div class="col-md-3 d-flex align-items-center mt-4">
                            <InputCheckbox @bind-Value="Filtro.IncluirVigentes" class="form-check-input me-2" />
                            <label class="form-check-label">No Anulado</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-wrap justify-content-between align-items-center mb-2 gap-2">
                    <div class="text-muted small">
                        @if (Resultado != null)
                        {
                            <span>Mostrando página @Resultado.PageNumber de @TotalPaginas (Total: @Resultado.TotalCount)</span>
                        }
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label mb-0 small">Registros por página:</label>
                        <select class="form-select form-select-sm w-auto" @bind="Filtro.PageSize" @bind:after="(() => { Filtro.PageNumber = 1; BuscarOrdenes(); })">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                        </select>
                        <div class="d-flex align-items-center ms-2">
                            <button class="btn btn-sm btn-outline-secondary me-1"
                                    disabled="@(Resultado == null || Resultado.PageNumber == 1)"
                                    @onclick="(() => CambiarPagina(-1))">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary"
                                    disabled="@(Resultado == null || Resultado.PageNumber >= TotalPaginas)"
                                    @onclick="(() => CambiarPagina(1))">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

                @if (Resultado == null || Resultado.Items == null)
                {
                    <div class="alert alert-info text-center shadow-sm">
                        <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar las órdenes.
                    </div>
                }
                else if (!Resultado.Items.Any())
                {
                    <div class="alert alert-warning text-center shadow-sm">
                        <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron órdenes.
                    </div>
                }
                else
                {
                    <div class="tabla-fija shadow-sm">
                        <div class="tabla-body">
                            <table class="table align-middle tabla-pacientes">
                                <thead>
                                    <tr>
                                        <th style="width:10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.NumeroOrden))">
                                            Número @OrdenIcono(nameof(OrdenDto.NumeroOrden))
                                        </th>
                                        @if (!EsPaciente)
                                        {
                                            <th style="width:12%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.CedulaPaciente))">
                                                Cédula @OrdenIcono(nameof(OrdenDto.CedulaPaciente))
                                            </th>
                                            <th style="width:18%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.NombrePaciente))">
                                                Paciente @OrdenIcono(nameof(OrdenDto.NombrePaciente))
                                            </th>
                                        }
                                        <th style="width:10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.FechaOrden))">
                                            Fecha @OrdenIcono(nameof(OrdenDto.FechaOrden))
                                        </th>
                                        <th style="width:10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.Total))">
                                            Total @OrdenIcono(nameof(OrdenDto.Total))
                                        </th>
                                        <th style="width:10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.TotalPagado))">
                                            Pagado @OrdenIcono(nameof(OrdenDto.TotalPagado))
                                        </th>
                                        <th style="width:10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(OrdenDto.SaldoPendiente))">
                                            Saldo @OrdenIcono(nameof(OrdenDto.SaldoPendiente))
                                        </th>
                                        <th style="width:10%;">Estado Pago</th>
                                        <th style="width:10%;">Estado</th>
                                        <th style="width:10%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Orden in Resultado.Items)
                                    {
                                        <tr @key="Orden.IdOrden">
                                            <td data-label="Número">@Orden.NumeroOrden</td>
                                            @if (!EsPaciente)
                                            {
                                                <td data-label="Cédula">@Orden.CedulaPaciente</td>
                                                <td data-label="Paciente">@Orden.NombrePaciente</td>
                                            }
                                            <td data-label="Fecha">@Orden.FechaOrden.ToString("dd/MM/yyyy")</td>
                                            <td data-label="Total">@Orden.Total.ToString("C")</td>
                                            <td data-label="Pagado">@Orden.TotalPagado.ToString("C")</td>
                                            <td data-label="Saldo">@Orden.SaldoPendiente.ToString("C")</td>
                                            <td data-label="Estado Pago">
                                                <span class="badge bg-@(Orden.EstadoPago == "PAGADO" ? "success" : "warning text-dark")">
                                                    @Orden.EstadoPago
                                                </span>
                                            </td>
                                            <td data-label="Estado">
                                                <span class="badge bg-@(Orden.Anulado ? "danger" : "success")">
                                                    @(Orden.Anulado ? "Anulado" : "Vigente")
                                                </span>
                                            </td>
                                            <td data-label="Acciones">
                                                <button class="btn btn-primary btn-sm shadow-sm me-1"
                                                        @onclick="() => VerDetalleOrden(Orden.IdOrden)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }

            @if (MostrarDetalleOrden && DetalleActual is not null)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-xl modal-dialog-centered">
                        <div class="modal-content shadow-lg border-0">
                            @if (!string.IsNullOrEmpty(PdfUrl))
                            {
                                <div class="modal-header bg-dark text-white">
                                    <h5 class="modal-title">
                                        <i class="fas fa-file-pdf me-2"></i>Visualización de Documento
                                    </h5>
                                    <button class="btn-close btn-close-white" @onclick="CerrarPdf"></button>
                                </div>
                                <div class="modal-body p-0">
                                    <iframe src="@PdfUrl" style="width:100%;height:80vh;border:none;"></iframe>
                                </div>
                            }
                            else
                            {
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title">
                                        <i class="fas fa-info-circle me-2"></i>Detalle de Orden
                                        <span class="badge bg-light text-dark">@DetalleActual.NumeroOrden</span>
                                    </h5>
                                    <button class="btn-close" @onclick="CerrarDetalle"></button>
                                </div>
                                <div class="modal-body">
                                    @if (DetalleActual.Anulado ?? false)
                                    {
                                        <div class="alert alert-danger text-center fw-bold">
                                            Esta orden ha sido anulada.
                                        </div>
                                    }
                                    <div class="row g-2 mb-3">
                                        <div class="col-md-3 col-6 mb-2">
                                            <label><strong>Fecha de Orden</strong></label>
                                            <input class="form-control" value="@DetalleActual.FechaOrden.ToString("dd/MM/yyyy")" disabled />
                                        </div>
                                        <div class="col-md-3 col-6 mb-2">
                                            <label><strong>Cédula</strong></label>
                                            <input class="form-control" value="@DetalleActual.CedulaPaciente" disabled />
                                        </div>
                                        <div class="col-md-6 col-12 mb-2">
                                            <label><strong>Nombre del Paciente</strong></label>
                                            <input class="form-control" value="@DetalleActual.NombrePaciente" disabled />
                                        </div>
                                        <div class="col-md-6 col-12 mb-2">
                                            <label><strong>Dirección</strong></label>
                                            <input class="form-control" value="@DetalleActual.DireccionPaciente" disabled />
                                        </div>
                                        <div class="col-md-3 col-6 mb-2">
                                            <label><strong>Teléfono</strong></label>
                                            <input class="form-control" value="@DetalleActual.TelefonoPaciente" disabled />
                                        </div>
                                        <div class="col-md-3 col-6 mb-2">
                                            <label><strong>Correo</strong></label>
                                            <input class="form-control" value="@DetalleActual.CorreoPaciente" disabled />
                                        </div>
                                        <div class="col-md-3 col-6 mb-2">
                                            <label><strong>Estado de Pago</strong></label>
                                            <input class="form-control" value="@DetalleActual.EstadoPago" disabled />
                                        </div>
                                    </div>
                                    <h5 class="mt-4 mb-3"><i class="fas fa-vials me-2"></i>Exámenes</h5>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered align-middle text-center">
                                            <thead class="table-light">
                                                <tr>
                                                    @if (!EsPaciente)
                                                    {
                                                        <th>Seleccionar</th>
                                                    }
                                                    <th>Nombre del Examen</th>
                                                    <th>Estudio</th>
                                                    <th>Número de Resultado</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < DetalleActual.Examenes.Count; i++)
                                                {
                                                    var Examen = DetalleActual.Examenes[i];
                                                    <tr>
                                                        @if (!EsPaciente)
                                                        {
                                                            <td>
                                                                <input type="checkbox" @bind="@Examen.Seleccionado"
                                                                       disabled="@(DetalleActual.Anulado == true || Examen.IdResultado.HasValue)" />
                                                            </td>
                                                        }
                                                        <td>@Examen.NombreExamen</td>
                                                        <td>@Examen.NombreEstudio</td>
                                                        <td>
                                                            @if (Examen.IdResultado.HasValue)
                                                            {
                                                                <span class="badge bg-success">@Examen.NumeroResultado</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">Pendiente</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    @if (!(DetalleActual.Anulado ?? false))
                                    {
                                        <div class="d-flex flex-wrap gap-2 justify-content-start mt-3">
                                            <button class="btn btn-secondary" @onclick="VisualizarTicketOrden">
                                                <i class="fas fa-receipt me-1"></i> Imprimir Orden
                                            </button>
                                            <button class="btn btn-primary"
                                                    @onclick="ImprimirResultados"
                                                    disabled="@(DetalleActual.Examenes.Any(x => !x.IdResultado.HasValue))">
                                                <i class="fas fa-file-pdf me-1"></i> Imprimir Resultados
                                            </button>
                                            @if (!EsPaciente)
                                            {
                                                <button class="btn btn-success"
                                                        @onclick="IrAIngresarResultados"
                                                        disabled="@(DetalleActual.Examenes.All(x => x.IdResultado.HasValue) || !DetalleActual.Examenes.Any(x => !x.IdResultado.HasValue))">
                                                    <i class="fas fa-flask me-1"></i> Ingresar Resultados
                                                </button>
                                                <button class="btn btn-danger" @onclick="AnularOrden">
                                                    <i class="fas fa-ban me-1"></i> Anular Orden
                                                </button>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">
                        Para acceder a esta sección, por favor inicie sesión con una cuenta autorizada.
                    </p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private PagedResultDto<OrdenDto>? Resultado;
    private OrdenFiltroDto Filtro = new();
    private OrdenDetalleDto? DetalleActual;
    private bool MostrarDetalleOrden = false;
    private bool ContenidoCargado = false;

    private string? PdfUrl;

    private bool SesionVerificada = false;
    private bool Buscando = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !SesionVerificada)
        {
            SesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            // Rango por defecto: últimos 15 días
            Filtro.FechaHasta = DateOnly.FromDateTime(DateTime.Today);
            Filtro.FechaDesde = DateOnly.FromDateTime(DateTime.Today.AddDays(-15));
            Filtro.PageNumber = 1;
            Filtro.PageSize = 10;
            Filtro.SortBy = nameof(OrdenDto.IdOrden);
            Filtro.SortAsc = false;

            ContenidoCargado = true;
            StateHasChanged();

            await BuscarOrdenes();
        }
    }

    private int TotalPaginas => Resultado == null || Resultado.PageSize == 0
        ? 1
        : (int)Math.Ceiling(Resultado.TotalCount / (double)Resultado.PageSize);

    private void IrANuevaOrden() => Navigation.NavigateTo("/nueva-orden", true);

    private async Task VerDetalleOrden(int idOrden)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var Estado = await AuthProvider.GetAuthenticationStateAsync();
        var Usuario = Estado.User;
        var Rol = Usuario.FindFirst(ClaimTypes.Role)?.Value ?? "";
        var IdPacienteClaim = Usuario.FindFirst("IdPaciente")?.Value;

        if (Rol == "paciente" && int.TryParse(IdPacienteClaim, out var idPaciente))
        {
            var result = await OrdenesApi.ObtenerDetalleOrdenPacienteAsync(idPaciente, idOrden);
            DetalleActual = result.Detalle;

            if (result.TieneSaldoPendiente)
            {
                await JS.InvokeVoidAsync("alert",
                    "Tiene un saldo pendiente. Por favor acérquese al laboratorio para completar su pago antes de visualizar los resultados.");
            }
        }
        else
        {
            DetalleActual = await OrdenesApi.ObtenerDetalleOrdenAsync(idOrden);
        }

        if (DetalleActual?.Examenes != null)
            foreach (var ex in DetalleActual.Examenes)
                ex.Seleccionado = false;

        MostrarDetalleOrden = true;
    }

    private void CerrarDetalle() => MostrarDetalleOrden = false;

    private async Task VisualizarTicketOrden()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (DetalleActual == null) return;
        var pdfBytes = await OrdenesApi.ObtenerTicketOrdenPdfAsync(DetalleActual.IdOrden);
        if (pdfBytes == null || pdfBytes.Length == 0)
        {
            await JS.InvokeVoidAsync("alert", "Error al generar el ticket.");
            return;
        }
        var base64Pdf = Convert.ToBase64String(pdfBytes);
        PdfUrl = $"data:application/pdf;base64,{base64Pdf}";
    }

    private async Task IrAIngresarResultados()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (DetalleActual == null) return;
        var seleccionados = DetalleActual.Examenes.Where(e => e.Seleccionado && !e.IdResultado.HasValue).ToList();
        if (!seleccionados.Any())
        {
            await JS.InvokeVoidAsync("alert", "Seleccione al menos un examen pendiente.");
            return;
        }
        var estudio = seleccionados.First().NombreEstudio;
        if (seleccionados.Any(e => e.NombreEstudio != estudio))
        {
            await JS.InvokeVoidAsync("alert", "Debe seleccionar exámenes del mismo estudio.");
            return;
        }
        var noSeleccionadosDelMismoEstudio = DetalleActual.Examenes
            .Where(e => !e.Seleccionado && e.NombreEstudio == estudio && !e.IdResultado.HasValue).ToList();
        if (noSeleccionadosDelMismoEstudio.Any())
        {
            await JS.InvokeVoidAsync("alert", $"Debe seleccionar todos los exámenes del estudio: {estudio}.");
            return;
        }
        var query = string.Join("&", seleccionados.Select(e => $"idsExamenes={e.IdExamen}"));
        Navigation.NavigateTo($"/resultados/ingresar?idOrden={DetalleActual.IdOrden}&{query}");
    }

    private async Task ImprimirResultados()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (DetalleActual == null) return;

        var Estado = await AuthProvider.GetAuthenticationStateAsync();
        var Usuario = Estado.User;
        var Rol = Usuario.FindFirst(ClaimTypes.Role)?.Value ?? "";
        if (Rol == "paciente" && !DetalleActual.EstadoPago.Equals("PAGADO", StringComparison.OrdinalIgnoreCase))
        {
            await JS.InvokeVoidAsync("alert", "No puede imprimir los resultados hasta completar el pago de la orden.");
            return;
        }

        var idsResultados = DetalleActual.Examenes
            .Where(e => e.IdResultado.HasValue)
            .Select(e => e.IdResultado!.Value)
            .Distinct()
            .ToList();

        if (!idsResultados.Any())
        {
            await JS.InvokeVoidAsync("alert", "No hay resultados para imprimir.");
            return;
        }

        var pdfBytes = await ResultadosApi.ObtenerResultadosPdfAsync(idsResultados);
        if (pdfBytes == null || pdfBytes.Length == 0)
        {
            await JS.InvokeVoidAsync("alert", "Error al generar el PDF de resultados.");
            return;
        }

        var base64Pdf = Convert.ToBase64String(pdfBytes);
        PdfUrl = $"data:application/pdf;base64,{base64Pdf}";
    }


    private void CerrarPdf()
    {
        PdfUrl = null;
    }

    private async Task AnularOrden()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (DetalleActual == null) return;
        if (!await JS.InvokeAsync<bool>("confirm", "¿Está seguro que desea anular esta orden? Esto anulará también resultados y pagos relacionados.")) return;

        var response = await OrdenesApi.AnularOrdenCompletaAsync(DetalleActual.IdOrden);
        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Orden anulada correctamente.", "success");
            await BuscarOrdenes();
            MostrarDetalleOrden = false;
        }
        else
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al anular la orden.", "danger");
        }
    }

    private void ValidarRangoFechas()
    {
        if (Filtro.FechaDesde.HasValue && Filtro.FechaHasta.HasValue && Filtro.FechaDesde.Value > Filtro.FechaHasta.Value)
        {
            Filtro.FechaHasta = Filtro.FechaDesde;
        }
    }

    private MarkupString OrdenIcono(string columna)
    {
        if (Filtro.SortBy != columna) return (MarkupString)string.Empty;
        var icon = Filtro.SortAsc ? "&uarr;" : "&darr;";
        return (MarkupString)$"<span class=\"ms-1\">{icon}</span>";
    }

    private void OrdenarPor(string columna)
    {
        if (Filtro.SortBy == columna)
            Filtro.SortAsc = !Filtro.SortAsc;
        else
        {
            Filtro.SortBy = columna;
            Filtro.SortAsc = true;
        }
        Filtro.PageNumber = 1;
        _ = BuscarOrdenes();
    }

    private async Task CambiarPagina(int delta)
    {
        if (Resultado == null) return;
        var nueva = Math.Max(1, Math.Min(TotalPaginas, Resultado.PageNumber + delta));
        if (nueva == Resultado.PageNumber) return;
        Filtro.PageNumber = nueva;
        await BuscarOrdenes();
    }

    private async Task BuscarOrdenes()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;
        if (Buscando) return;

        try
        {
            Buscando = true;
            var Estado = await AuthProvider.GetAuthenticationStateAsync();
            var Usuario = Estado.User;
            var Rol = Usuario.FindFirst(ClaimTypes.Role)?.Value ?? "";
            var IdPacienteClaim = Usuario.FindFirst("IdPaciente")?.Value;

            if (Rol == "paciente" && int.TryParse(IdPacienteClaim, out var idPaciente))
            {
                Filtro.IdPaciente = idPaciente;
                Filtro.IncluirAnuladas = false;
                Filtro.IncluirVigentes = true;
            }
            else
            {
                Filtro.IdPaciente = null;
            }

            Resultado = await OrdenesApi.BuscarOrdenesAsync(Filtro);
        }
        catch
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al buscar las órdenes.", "danger");
        }
        finally
        {
            Buscando = false;
        }
    }

    private async Task LimpiarBusqueda()
    {
        Filtro = new OrdenFiltroDto
        {
            FechaHasta = DateOnly.FromDateTime(DateTime.Today),
            FechaDesde = DateOnly.FromDateTime(DateTime.Today.AddDays(-15)),
            PageNumber = 1,
            PageSize = 10,
            SortBy = nameof(OrdenDto.IdOrden),
            SortAsc = false,
            IncluirAnuladas = true,
            IncluirVigentes = true
        };
        await BuscarOrdenes();
    }


    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
