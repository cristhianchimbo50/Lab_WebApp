    private bool IsAuthenticated;
    private bool _checkedAuth = false;
    private bool _esPaciente = false;
    private bool _esLaboratorista = false;
    private bool _esAdministrador = false;
    private bool _esRecepcionista = false;
    private bool _cargandoDashboard = false;
    private string _nombreUsuario = "Paciente";
    private string _correoUsuario = string.Empty;
    private PacienteDashboardDto _resumen = new();
    private LaboratoristaHomeDto _labData = new();
    private AdminHomeDto _adminData = new();
    private RecepcionistaHomeDto _recepData = new();

    private static bool TieneRol(IReadOnlyList<string> roles, string rolBuscado)
        => roles.Any(r => string.Equals(r, rolBuscado, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        IsAuthenticated = user.Identity?.IsAuthenticated ?? false;

        if (IsAuthenticated)
        {
            var rolClaim = user.FindFirst(ClaimTypes.Role)?.Value
                ?? user.FindFirst("role")?.Value
                ?? user.FindFirst("roles")?.Value
                ?? string.Empty;

            var roles = rolClaim
                .Split(new[] { ',', ';', ' ' }, StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
                .ToList();

            _esLaboratorista = TieneRol(roles, "laboratorista");
            _esPaciente = TieneRol(roles, "paciente");
            _esAdministrador = TieneRol(roles, "administrador");
            _esRecepcionista = TieneRol(roles, "recepcionista");

            _nombreUsuario = user.Identity?.Name
                ?? user.FindFirst("name")?.Value
                ?? "Paciente";
            _correoUsuario = user.FindFirst(ClaimTypes.Email)?.Value
                ?? user.FindFirst("email")?.Value
                ?? string.Empty;
        }

        _checkedAuth = true;
        StateHasChanged();

        if (!IsAuthenticated)
        {
            return;
        }

        if (_esLaboratorista)
        {
            await CargarDashboardLaboratoristaAsync();
        }
        else if (_esAdministrador)
        {
            await CargarDashboardAdministradorAsync();
        }
        else if (_esRecepcionista)
        {
            await CargarDashboardRecepcionistaAsync();
        }
        else if (_esPaciente)
        {
            await CargarDashboardPacienteAsync(user);
        }
    }

    private async Task CargarDashboardLaboratoristaAsync()
    {
        _cargandoDashboard = true;
        StateHasChanged();
        try
        {
            _labData = await OrdenesApi.ObtenerDashboardLaboratoristaAsync() ?? new();
        }
        catch
        {
            _labData = new LaboratoristaHomeDto();
        }
        finally
        {
            _cargandoDashboard = false;
            StateHasChanged();
        }
    }

    private async Task CargarDashboardPacienteAsync(ClaimsPrincipal user)
    {
        var idPacienteClaim = user.FindFirst("IdPaciente")?.Value;
        if (!int.TryParse(idPacienteClaim, out var idPaciente))
        {
            return;
        }

        _cargandoDashboard = true;
        StateHasChanged();
        try
        {
            _resumen = await OrdenesApi.ObtenerDashboardPacienteAsync(idPaciente) ?? new();
        }
        catch
        {
            _resumen = new PacienteDashboardDto();
        }
        finally
        {
            _cargandoDashboard = false;
            StateHasChanged();
        }
    }

    private async Task CargarDashboardAdministradorAsync()
    {
        _cargandoDashboard = true;
        StateHasChanged();
        try
        {
            _adminData = await OrdenesApi.ObtenerDashboardAdministradorAsync() ?? new();
        }
        catch
        {
            _adminData = new AdminHomeDto();
        }
        finally
        {
            _cargandoDashboard = false;
            StateHasChanged();
        }
    }

    private async Task CargarDashboardRecepcionistaAsync()
    {
        _cargandoDashboard = true;
        StateHasChanged();
        try
        {
            _recepData = await OrdenesApi.ObtenerDashboardRecepcionistaAsync() ?? new();
        }
        catch
        {
            _recepData = new RecepcionistaHomeDto();
        }
        finally
        {
            _cargandoDashboard = false;
            StateHasChanged();
        }
    }

