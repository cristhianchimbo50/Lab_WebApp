@page "/"
@page "/home"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation

@if (!_checkedAuth)
{
    <div class="d-flex align-items-center text-primary">
        <div class="spinner-border me-2" role="status"></div>
    </div>
}
else if (!IsAuthenticated)
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-3">
                            <i class="fas fa-user-lock text-primary me-2"></i> No has iniciado sesión
                        </h3>
                        <div class="alert alert-warning mt-4" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            Por favor, inicia sesión para acceder a las funcionalidades.
                            <div class="mt-3">
                                <button class="btn btn-primary" @onclick="IrALogin">
                                    <i class="fas fa-sign-in-alt me-1"></i> Iniciar sesión
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-3">
                            <i class="fas fa-house-user text-primary me-2"></i> Bienvenido
                        </h3>
                        <p class="card-text fs-5 mb-3">
                            Bienvenido a la Aplicación de gestión del laboratorio Clinico <strong>"La Inmaculada"</strong> <strong/>. Aquí puedes consultar resultados, administrar pacientes y gestionar exámenes.
                        </p>
                        <p class="card-text fs-6 mb-4">
                            Usa el menú lateral para navegar por las secciones disponibles.
                        </p>
                        <p class="text-muted small">
                            Laboratorio Clínico "La Inmaculada" - Cantón Guano
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool IsAuthenticated;
    private bool _checkedAuth = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authState = await AuthProvider.GetAuthenticationStateAsync();
            IsAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
            _checkedAuth = true;
            StateHasChanged();
        }
    }

    private void IrALogin()
    {
        var returnUrl = Uri.EscapeDataString(Navigation.Uri);
        Navigation.NavigateTo($"/login?returnUrl={returnUrl}", true);
    }
}
