@page "/"
@page "/home"
<PageTitle>Inicio</PageTitle>

@rendermode InteractiveServer

@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Lab_Blazor.Services.Ordenes
@using Lab_Contracts.Pacientes
@using Lab_Contracts.Dashboard
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation
@inject IOrdenesApiService OrdenesApi

@if (!_checkedAuth)
{
    <div class="d-flex align-items-center justify-content-center vh-100 text-primary">
        <div class="spinner-border me-2" role="status"></div>
    </div>
}
else if (!IsAuthenticated)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center py-5">
                        <div class="mb-3 text-primary">
                            <i class="bi bi-shield-lock-fill display-5"></i>
                        </div>
                        <h3 class="fw-bold mb-2">No has iniciado sesión</h3>
                        <p class="text-muted">Accede para gestionar tus operaciones.</p>
                        <button class="btn btn-primary px-4" @onclick="IrALogin">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar sesión
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (_esLaboratorista)
{
    <div class="lab-dashboard container-fluid py-4">
        <div class="lab-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <div class="lab-icon bg-primary-subtle text-primary"><i class="bi bi-eyedropper"></i></div>
                    <div>
                        <div class="badge bg-primary-subtle text-primary mb-1 text-uppercase">Laboratorista</div>
                        <h2 class="mb-0 fw-bold text-dark">Bienvenido, @_nombreUsuario</h2>
                    </div>
                </div>
                <p class="text-muted mb-0">Panel para gestionar órdenes médicas, resultados y reactivos del día a día.</p>
            </div>
        </div>

        @if (_cargandoDashboard)
        {
            <div class="d-flex align-items-center justify-content-center py-5 text-primary">
                <div class="spinner-border me-2" role="status"></div>
                <span>Cargando tu panel...</span>
            </div>
        }
        else
        {
            <div class="row g-3 mb-4">
                <div class="col-lg-4 col-md-6">
                    <div class="recep-card recep-stat bg-primary text-white">
                         <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Órdenes pendientes</div>
                                <div class="stat-value">@_labData.Resumen.OrdenesPendientes</div>
                                <small class="text-white-50">Órdenes médicas en espera</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-file-medical"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="recep-card recep-stat bg-success text-white">
                         <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Resultados por registrar</div>
                                <div class="stat-value">@_labData.Resumen.ResultadosPorRegistrar</div>
                                <small class="text-white-50">Exámenes pendientes</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-clipboard2-pulse"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="recep-card recep-stat bg-danger text-white">
                         <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Reactivos con stock bajo</div>
                                <div class="stat-value">@_labData.Resumen.ReactivosStockBajo</div>
                                <small class="text-white-50">Revisar inventario</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-exclamation-triangle"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="recep-card mb-4">
            <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                <div class="d-flex align-items-center gap-2">
                    <div class="pill-icon bg-primary-subtle text-primary"><i class="bi bi-lightning"></i></div>
                    <h5 class="mb-0 fw-bold text-dark">Acciones rápidas</h5>
                </div>
                <small class="text-muted">Accede a tus tareas frecuentes</small>
            </div>
            <div class="row g-3">
                <div class="col-sm-6 col-lg-3">
                    <button class="quick-btn btn btn-primary w-100" @onclick='() => Navigation.NavigateTo("/resultados/ingresar", true)'>
                        <i class="bi bi-clipboard2-plus me-2"></i> Registrar resultados
                    </button>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <button class="quick-btn btn btn-outline-primary w-100" @onclick='() => Navigation.NavigateTo("/ordenes", true)'>
                        <i class="bi bi-journal-text me-2"></i> Órdenes médicas
                    </button>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <button class="quick-btn btn btn-outline-success w-100" @onclick='() => Navigation.NavigateTo("/reactivos", true)'>
                        <i class="bi bi-boxes me-2"></i> Stock de reactivos
                    </button>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <button class="quick-btn btn btn-outline-danger w-100" @onclick='() => Navigation.NavigateTo("/movimientos", true)'>
                        <i class="bi bi-arrow-left-right me-2"></i> Movimientos
                    </button>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-lg-8">
                <div class="recep-card">
                    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                        <div class="d-flex align-items-center gap-2">
                            <div class="pill-icon bg-secondary-subtle text-secondary"><i class="bi bi-clock-history"></i></div>
                            <h5 class="mb-0 fw-bold text-dark">Órdenes recientes</h5>
                        </div>
                        <small class="text-muted">Últimas 5 órdenes</small>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Código</th>
                                    <th>Paciente</th>
                                    <th>Médico</th>
                                    <th>Estado pago</th>
                                    <th>Entrega</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (_labData.OrdenesRecientes.Any())
                                {
                                    @foreach (var ord in _labData.OrdenesRecientes)
                                    {
                                        <tr>
                                            <td>@ord.NumeroOrden</td>
                                            <td>@ord.NombrePaciente</td>
                                            <td>@ord.Medico</td>
                                            <td>
                                                <span class="badge bg-@(ord.EstadoPago?.Equals("PAGADO", StringComparison.OrdinalIgnoreCase) == true ? "success" : "warning text-dark")">@ord.EstadoPago</span>
                                            </td>
                                            <td>
                                                @if (ord.ListoParaEntrega)
                                                {
                                                    <span class="badge bg-primary">Listo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">En proceso</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Sin órdenes recientes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="recep-card">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="pill-icon bg-danger-subtle text-danger"><i class="bi bi-bell"></i></div>
                        <h5 class="mb-0 fw-bold text-dark">Alertas</h5>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        @if (_labData?.Alertas?.Mensajes.Any() == true)
                        {
                            @foreach (var alerta in _labData.Alertas.Mensajes)
                            {
                                <div class="alert alert-warning mb-0 py-2 px-3">@alerta</div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-success mb-0 py-2 px-3">Sin alertas pendientes.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (_esAdministrador)
{
    <div class="admin-dashboard container-fluid py-4">
        <div class="lab-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <div class="lab-icon bg-primary-subtle text-primary"><i class="bi bi-shield-check"></i></div>
                    <div>
                        <div class="badge bg-primary-subtle text-primary mb-1 text-uppercase">Administrador</div>
                        <h2 class="mb-0 fw-bold text-dark">Bienvenido, @_nombreUsuario</h2>
                    </div>
                </div>
                <p class="text-muted mb-0">Panel de gestión general del laboratorio clínico.</p>
            </div>
        </div>

        @if (_cargandoDashboard)
        {
            <div class="d-flex align-items-center justify-content-center py-5 text-primary">
                <div class="spinner-border me-2" role="status"></div>
                <span>Cargando tu panel...</span>
            </div>
        }
        else
        {
            <div class="row row-cols-xxl-5 row-cols-lg-3 row-cols-md-2 row-cols-1 g-3 mb-4">
                <div class="col">
                    <div class="recep-card recep-stat bg-primary text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Órdenes de hoy</div>
                                <div class="stat-value">@_adminData.Resumen.OrdenesHoy</div>
                                <small class="text-white-50">Órdenes médicas del día</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-calendar-event"></i></div>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="recep-card recep-stat bg-danger text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Reactivos críticos</div>
                                <div class="stat-value">@_adminData.Resumen.ReactivosCriticos</div>
                                <small class="text-white-50">Stock por debajo del mínimo</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-exclamation-octagon"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="recep-card recep-stat bg-secondary text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label"> Usuarios registrados</div>
                                <div class="stat-value">@_adminData.Resumen.UsuariosTotales</div>
                                <small class="text-white-50">Usuarios activos</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-people"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="recep-card recep-stat bg-success text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Resultados en revisión</div>
                                <div class="stat-value">@_adminData.Resumen.ResultadosPendientesAprobacion</div>
                                <small class="text-white-50">Pendientes de aprobación</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-check2-square"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="recep-card recep-stat bg-warning text-dark">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label text-dark">Resultados en corrección</div>
                                <div class="stat-value">@_adminData.Resumen.ResultadosCorreccion</div>
                                <small class="text-muted">Requieren ajustes</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-50 text-dark"><i class="bi bi-pencil-square"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="recep-card mb-4">
            <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                <div class="d-flex align-items-center gap-2">
                    <div class="pill-icon bg-primary-subtle text-primary"><i class="bi bi-grid-1x2"></i></div>
                    <h5 class="mb-0 fw-bold text-dark">Accesos rápidos</h5>
                </div>
                <small class="text-muted">Funciones principales de administración</small>
            </div>
            <div class="row g-3">
                <div class="col-md-4 col-sm-6">
                    <button class="quick-btn btn btn-primary w-100" @onclick='() => Navigation.NavigateTo("/usuarios", true)'>
                        <i class="bi bi-people-fill me-2"></i> Gestión de usuarios
                    </button>
                </div>
                <div class="col-md-4 col-sm-6">
                    <button class="quick-btn btn btn-outline-primary w-100" @onclick='() => Navigation.NavigateTo("/convenios", true)'>
                        <i class="bi bi-diagram-3 me-2"></i> Administración de convenios
                    </button>
                </div>
                <div class="col-md-4 col-sm-6">
                    <button class="quick-btn btn btn-outline-success w-100" @onclick='() => Navigation.NavigateTo("/ordenes", true)'>
                        <i class="bi bi-check2-circle me-2"></i> Aprobar resultados
                    </button>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-lg-8">
                <div class="recep-card">
                    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                        <div class="d-flex align-items-center gap-2">
                            <div class="pill-icon bg-secondary-subtle text-secondary"><i class="bi bi-list-check"></i></div>
                            <h5 class="mb-0 fw-bold text-dark">Resultados pendientes de aprobación</h5>
                        </div>
                        <small class="text-muted">Revisión rápida</small>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Orden</th>
                                    <th>Paciente</th>
                                    <th>Examen</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (_adminData.Pendientes.Any())
                                {
                                    @foreach (var item in _adminData.Pendientes)
                                    {
                                        <tr>
                                            <td>@item.NumeroOrden</td>
                                            <td>@item.Paciente</td>
                                            <td>@item.TipoExamen</td>
                                            <td><span class="badge bg-warning text-dark">@item.Estado</span></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Sin resultados pendientes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="recep-card">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="pill-icon bg-danger-subtle text-danger"><i class="bi bi-bell"></i></div>
                        <h5 class="mb-0 fw-bold text-dark">Alertas</h5>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        @if (_adminData.Alertas.Mensajes.Any())
                        {
                            @foreach (var alerta in _adminData.Alertas.Mensajes)
                            {
                                <div class="alert alert-warning mb-0 py-2 px-3">@alerta</div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-success mb-0 py-2 px-3">Sin alertas pendientes.</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (_esRecepcionista)
{
    <div class="recep-dashboard container-fluid py-4">
        <div class="lab-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
            <div>
                <div class="d-flex align-items-center gap-2 mb-1">
                    <div class="lab-icon bg-primary-subtle text-primary"><i class="bi bi-headset"></i></div>
                    <div>
                        <div class="badge bg-primary-subtle text-primary mb-1 text-uppercase">Recepcionista</div>
                        <h2 class="mb-0 fw-bold text-dark">Bienvenido, @_nombreUsuario</h2>
                    </div>
                </div>
                <p class="text-muted mb-0">Panel para gestionar pacientes, órdenes, médicos, cuentas por cobrar y resultados.</p>
            </div>
        </div>

        @if (_cargandoDashboard)
        {
            <div class="d-flex align-items-center justify-content-center py-5 text-primary">
                <div class="spinner-border me-2" role="status"></div>
                <span>Cargando tu panel...</span>
            </div>
        }
        else
        {
            <div class="row row-cols-xxl-3 row-cols-md-3 row-cols-1 g-3 mb-4">
                <div class="col">
                    <div class="recep-card recep-stat bg-success text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label text-white-75">Órdenes registradas</div>
                                <div class="stat-value">@_recepData.Resumen.OrdenesRegistradas</div>
                                <small class="text-white-75">Órdenes médicas totales</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-file-earmark-medical"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="recep-card recep-stat bg-warning text-dark">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label text-dark">Cuentas por cobrar</div>
                                <div class="stat-value">@_recepData.Resumen.CuentasPorCobrar</div>
                                <small class="text-muted">Pendientes de pago</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-50 text-dark"><i class="bi bi-cash-coin"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="recep-card recep-stat bg-primary text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label text-white-75">Resultados disponibles</div>
                                <div class="stat-value">@_recepData.Resumen.ResultadosDisponibles</div>
                                <small class="text-white-75">Listos para entregar</small>
                            </div>
                            <div class="stat-icon bg-white bg-opacity-25 text-white"><i class="bi bi-clipboard-check"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="recep-card recep-quick mb-4">
            <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                <div class="d-flex align-items-center gap-2">
                    <div class="pill-icon bg-primary-subtle text-primary"><i class="bi bi-lightning"></i></div>
                    <h5 class="mb-0 fw-bold text-dark">Accesos rápidos</h5>
                </div>
                <small class="text-muted">Tareas principales de recepción</small>
            </div>
            <div class="row row-cols-xxl-4 row-cols-lg-3 row-cols-md-2 row-cols-1 g-3">
                <div class="col">
                    <button class="quick-btn btn btn-primary w-100" @onclick='() => Navigation.NavigateTo("/pacientes", true)'>
                        <i class="bi bi-person-plus me-2"></i> Registrar paciente
                    </button>
                </div>
                <div class="col">
                    <button class="quick-btn btn btn-success w-100" @onclick='() => Navigation.NavigateTo("/nueva-orden", true)'>
                        <i class="bi bi-file-plus me-2"></i> Nueva orden médica
                    </button>
                </div>
                <div class="col">
                    <button class="quick-btn btn btn-outline-primary w-100" @onclick='() => Navigation.NavigateTo("/medicos", true)'>
                        <i class="bi bi-person-badge me-2"></i> Gestionar médicos
                    </button>
                </div>
                <div class="col">
                    <button class="quick-btn btn btn-outline-warning w-100" @onclick='() => Navigation.NavigateTo("/cuentas", true)'>
                        <i class="bi bi-cash-stack me-2"></i> Cuentas por cobrar
                    </button>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-lg-8">
                <div class="recep-card h-100">
                    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                        <div class="d-flex align-items-center gap-2">
                            <div class="pill-icon bg-secondary-subtle text-secondary"><i class="bi bi-clock-history"></i></div>
                            <h5 class="mb-0 fw-bold text-dark">Órdenes médicas recientes</h5>
                        </div>
                        <small class="text-muted">Últimas 5 órdenes</small>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Código</th>
                                    <th>Paciente</th>
                                    <th>Médico</th>
                                    <th>Estado pago</th>
                                    <th>Entrega</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (_recepData?.OrdenesRecientes?.Any() == true)
                                {
                                    @foreach (var ord in _recepData.OrdenesRecientes)
                                    {
                                        <tr>
                                            <td>@ord.NumeroOrden</td>
                                            <td>@ord.Paciente</td>
                                            <td>@ord.Medico</td>
                                            <td>
                                                <span class="badge bg-@(ord.EstadoPago?.Equals("PAGADO", StringComparison.OrdinalIgnoreCase) == true ? "success" : "warning text-dark")">@ord.EstadoPago</span>
                                            </td>
                                            <td>
                                                @if (ord.ListoParaEntrega)
                                                {
                                                    <span class="badge bg-primary">Listo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">En proceso</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">Sin órdenes recientes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="recep-card">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="pill-icon bg-warning-subtle text-warning"><i class="bi bi-bell"></i></div>
                        <h5 class="mb-0 fw-bold text-dark">Alertas administrativas</h5>
