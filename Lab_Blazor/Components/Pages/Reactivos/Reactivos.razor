@page "/reactivos"
@rendermode InteractiveServer
<PageTitle>Gestión de Reactivos</PageTitle>

@using Lab_Contracts.Reactivos
@using Lab_Blazor.Services.Reactivos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IReactivosApiService ReactivosApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "laboratorista";
            bool puedeGestionar = rol == "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a este módulo.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4 class="mb-4 d-flex align-items-center justify-content-between flex-wrap">
                <span><i class="bi bi-droplet-half text-primary fs-4 me-2"></i>Gestión de Reactivos</span>
                @if (puedeGestionar)
                {
                    <button class="btn btn-success shadow-sm" @onclick="MostrarModalNuevo">
                        <i class="bi bi-plus-circle me-1"></i>Nuevo Reactivo
                    </button>
                }
            </h4>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect @bind-Value="criterioBusqueda" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="nombre">Nombre</option>
                            <option value="fabricante">Fabricante</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="valorBusqueda" placeholder="Ingrese valor a buscar"
                                   @onkeypress="@(e => { if (e.Key == "Enter") BuscarReactivos(); })" />
                    </div>
                    <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-primary" @onclick="BuscarReactivos"><i class="bi bi-search me-1"></i>Buscar</button>
                        <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                    </div>
                </div>
            </div>

            @if (ListaReactivos == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (ListaReactivos.Count == 0)
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron reactivos registrados.
                </div>
            }
            else
            {
                @if (ListaReactivos?.Count > 0)
                {
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                        <div class="text-muted small">
                            Mostrando @((paginaActual - 1) * tamPagina + 1)
                            - @(Math.Min(paginaActual * tamPagina, ListaReactivos.Count))
                            de @ListaReactivos.Count reactivos
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 small">Registros por página:</label>
                            <select class="form-select form-select-sm w-auto" @bind="tamPagina" @bind:after="CambiarTamPagina">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>

                            <div class="d-flex align-items-center ms-2">
                                <button class="btn btn-sm btn-outline-secondary me-1"
                                        disabled="@(paginaActual == 1)"
                                        @onclick="PrevPagina">
                                    <i class="bi bi-chevron-left"></i>
                                </button>

                                <button class="btn btn-sm btn-outline-secondary"
                                        disabled="@(paginaActual >= TotalPaginas)"
                                        @onclick="NextPagina">
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div class="tabla-fija shadow-sm">
                    <div class="tabla-body">
                        <table class="table align-middle tabla-pacientes">
                            <thead>
                                <tr>
                                    <th style="width:25%;">Nombre</th>
                                    <th style="width:20%;">Fabricante</th>
                                    <th style="width:15%;">Unidad</th>
                                    <th style="width:10%;">Cantidad</th>
                                    <th style="width:10%;">Estado</th>
                                    <th style="width:20%;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reactivo in ReactivosPaginados)
                                {
                                    <tr>
                                        <td data-label="Nombre">@reactivo.NombreReactivo</td>
                                        <td data-label="Fabricante">@reactivo.Fabricante</td>
                                        <td data-label="Unidad">@reactivo.Unidad</td>
                                        <td data-label="Cantidad">@reactivo.CantidadDisponible.ToString("N2")</td>
                                        <td data-label="Estado">
                                            <span class="badge bg-@(reactivo.Anulado ? "danger" : "success")">
                                                @(reactivo.Anulado ? "Deshabilitado" : "Activo")
                                            </span>
                                        </td>
                                        <td data-label="Acciones">
                                            @if (puedeGestionar)
                                            {
                                                <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarReactivo(reactivo)">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                @if (reactivo.Anulado)
                                                {
                                                    <button class="btn btn-success btn-sm" @onclick="() => ReactivarReactivo(reactivo)">
                                                        <i class="bi bi-check-circle-fill"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarAnulacion(reactivo.IdReactivo)">
                                                        <i class="bi bi-x-circle-fill"></i>
                                                    </button>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Sin permisos</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <div class="modal fade @(modalVisible ? "show d-block" : "")" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content shadow-lg border-0">
                        <EditForm Model="@ReactivoActual" OnValidSubmit="ValidarYGuardar">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-flask me-2"></i>@(ReactivoActual.IdReactivo == 0 ? "Nuevo Reactivo" : "Editar Reactivo")
                                </h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                            </div>
                            <div class="modal-body">
                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Nombre</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="ReactivoActual.NombreReactivo"
                                                   @oninput="(e => ReactivoActual.NombreReactivo = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Fabricante</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="ReactivoActual.Fabricante"
                                                   @oninput="(e => ReactivoActual.Fabricante = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Unidad</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="ReactivoActual.Unidad" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Cantidad Disponible</label>
                                        <InputNumber class="form-control text-end" @bind-Value="ReactivoActual.CantidadDisponible" Min="0" Step="0.01" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary px-3">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                                    <i class="bi bi-x-lg me-1"></i>Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        }
    </Authorized>
</AuthorizeView>

@code {
    private List<ReactivoDto>? ListaReactivos;
    private ReactivoDto ReactivoActual = new();
    private bool modalVisible;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private string mensaje = "";
    private string tipoMensaje = "info";
    private int paginaActual = 1;
    private int tamPagina = 10;
    private int TotalPaginas => (int)Math.Ceiling((ListaReactivos?.Count ?? 1) / (double)tamPagina);
    private IEnumerable<ReactivoDto> ReactivosPaginados => ListaReactivos?.Skip((paginaActual - 1) * tamPagina).Take(tamPagina) ?? new List<ReactivoDto>();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
            await BuscarReactivos();
    }

    private async Task BuscarReactivos()
    {
        var data = await ReactivosApiService.GetReactivosAsync();
        if (string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valorBusqueda))
            ListaReactivos = data;
        else
        {
            valorBusqueda = valorBusqueda.ToLower();
            ListaReactivos = criterioBusqueda switch
            {
                "nombre" => data.Where(x => x.NombreReactivo.ToLower().Contains(valorBusqueda)).ToList(),
                "fabricante" => data.Where(x => x.Fabricante?.ToLower().Contains(valorBusqueda) ?? false).ToList(),
                _ => data
            };
        }
        paginaActual = 1;
    }

    private async Task MostrarModalNuevo()
    {
        ReactivoActual = new ReactivoDto();
        modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModal()
    {
        modalVisible = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        mensaje = string.Empty;
    }

    private async Task EditarReactivo(ReactivoDto reactivo)
    {
        ReactivoActual = new()
        {
            IdReactivo = reactivo.IdReactivo,
            NombreReactivo = reactivo.NombreReactivo,
            Fabricante = reactivo.Fabricante,
            Unidad = reactivo.Unidad,
            CantidadDisponible = reactivo.CantidadDisponible,
            Anulado = reactivo.Anulado
        };
        modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task ValidarYGuardar()
    {
        HttpResponseMessage result = ReactivoActual.IdReactivo == 0
            ? await ReactivosApiService.CrearReactivoAsync(ReactivoActual)
            : await ReactivosApiService.EditarReactivoAsync(ReactivoActual.IdReactivo, ReactivoActual);

        if (result.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Reactivo guardado correctamente.", "success");
            modalVisible = false;
            await JS.InvokeVoidAsync("marcarModalCerrado");
            await BuscarReactivos();
        }
        else
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al guardar el reactivo.", "danger");
    }

    private async Task ConfirmarAnulacion(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea anular este reactivo?"))
        {
            var result = await ReactivosApiService.AnularReactivoAsync(id);
            if (result.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("mostrarToastAsync", "Reactivo anulado correctamente.", "success");
                await BuscarReactivos();
            }
        }
    }

    private async Task ReactivarReactivo(ReactivoDto reactivo)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"¿Desea reactivar el reactivo {reactivo.NombreReactivo}?"))
        {
            reactivo.Anulado = false;
            var result = await ReactivosApiService.EditarReactivoAsync(reactivo.IdReactivo, reactivo);
            if (result.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("mostrarToastAsync", "Reactivo reactivado correctamente.", "success");
                await BuscarReactivos();
            }
        }
    }

    private async Task LimpiarBusqueda()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
        ListaReactivos = null;
    }

    private void IrAPagina(int pagina) => paginaActual = pagina;
    private void PrevPagina() { if (paginaActual > 1) paginaActual--; }
    private void NextPagina() { if (paginaActual < TotalPaginas) paginaActual++; }
    private void CambiarTamPagina() => paginaActual = 1;
    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
