@page "/reactivos"
@rendermode InteractiveServer
<PageTitle>Gestión de Reactivos</PageTitle>

@using Lab_Contracts.Reactivos
@using Lab_Contracts.Common
@using Lab_Blazor.Services.Reactivos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService
@inject IReactivosApiService ReactivosApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider


<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? user.FindFirst("IdRol")?.Value ?? string.Empty;
            bool puedeVer = rol is "1" or "3";
            bool puedeGestionar = rol == "1";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a este módulo.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase justify-content-between fw-bold flex-wrap">
                <span><i class="bi bi-droplet-half text-primary fs-4 me-2"></i>Gestión de Reactivos</span>
                @if (puedeGestionar)
                {
                    <button class="btn btn-success shadow-sm" @onclick="MostrarModalNuevoAsync">
                        <i class="bi bi-plus-circle me-1"></i>Nuevo Reactivo
                    </button>
                }
            </h3>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect @bind-Value="_filtro.CriterioBusqueda" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="nombre">Nombre</option>
                            <option value="fabricante">Fabricante</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="_filtro.ValorBusqueda" placeholder="Ingrese valor a buscar"
                                   @onkeypress="@(e => { if (e.Key == "Enter") BuscarReactivosAsync(); })" />
                    </div>
                    <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-primary" @onclick="BuscarReactivosAsync" disabled="@_buscando"><i class="bi bi-search me-1"></i>Buscar</button>
                        <button class="btn btn-outline-secondary" @onclick="LimpiarBusquedaAsync" disabled="@_buscando"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                    </div>
                </div>
            </div>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3">
                    <div class="col-md-3 d-flex align-items-center mt-2">
                        <InputCheckbox @bind-Value="_filtro.IncluirAnulados" class="form-check-input me-2" />
                        <label class="form-check-label">Anulado</label>
                    </div>
                    <div class="col-md-3 d-flex align-items-center mt-2">
                        <InputCheckbox @bind-Value="_filtro.IncluirVigentes" class="form-check-input me-2" />
                        <label class="form-check-label">No Anulado</label>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                <div class="text-muted small">
                    @if (_resultado != null)
                    {
                        <span>Mostrando página @_resultado.PageNumber de @TotalPaginas (Total: @_resultado.TotalCount)</span>
                    }
                </div>

                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 small">Registros por página:</label>
                    <select class="form-select form-select-sm w-auto" @bind="_filtro.PageSize" @bind:after="(() => { _filtro.PageNumber = 1; BuscarReactivosAsync(); })">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>

                    <div class="d-flex align-items-center ms-2">
                        <button class="btn btn-sm btn-outline-secondary me-1"
                                disabled="@(_resultado == null || _resultado.PageNumber == 1)"
                                @onclick="(() => CambiarPaginaAsync(-1))">
                            <i class="bi bi-chevron-left"></i>
                        </button>

                        <button class="btn btn-sm btn-outline-secondary"
                                disabled="@(_resultado == null || _resultado.PageNumber >= TotalPaginas)"
                                @onclick="(() => CambiarPaginaAsync(1))">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (_resultado == null || _resultado.Items == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (!_resultado.Items.Any())
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron reactivos registrados.
                </div>
            }
            else
            {
                <div class="tabla-fija shadow-sm">
                    <div class="tabla-body">
                        <table class="table align-middle tabla-pacientes">
                            <thead>
                                <tr>
                                    <th style="width:25%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ReactivoDto.NombreReactivo))">Nombre @OrdenIcono(nameof(ReactivoDto.NombreReactivo))</th>
                                    <th style="width:20%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ReactivoDto.Fabricante))">Fabricante @OrdenIcono(nameof(ReactivoDto.Fabricante))</th>
                                    <th style="width:15%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ReactivoDto.Unidad))">Unidad @OrdenIcono(nameof(ReactivoDto.Unidad))</th>
                                    <th style="width:10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(ReactivoDto.CantidadDisponible))">Cantidad @OrdenIcono(nameof(ReactivoDto.CantidadDisponible))</th>
                                    <th style="width:10%">Estado</th>
                                    <th style="width:20%">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reactivo in _resultado.Items)
                                {
                                    <tr>
                                        <td data-label="Nombre">@reactivo.NombreReactivo</td>
                                        <td data-label="Fabricante">@reactivo.Fabricante</td>
                                        <td data-label="Unidad">@reactivo.Unidad</td>
                                        <td data-label="Cantidad">@reactivo.CantidadDisponible.ToString("N2")</td>
                                        <td data-label="Estado">
                                            <span class="badge bg-@(reactivo.Anulado ? "danger" : "success")">
                                                @(reactivo.Anulado ? "Deshabilitado" : "Activo")
                                            </span>
                                        </td>
                                        <td data-label="Acciones">
                                            @if (puedeGestionar)
                                            {
                                                <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarReactivoAsync(reactivo)">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                @if (reactivo.Anulado)
                                                {
                                                    <button class="btn btn-success btn-sm" @onclick="() => ReactivarReactivoAsync(reactivo)">
                                                        <i class="bi bi-check-circle-fill"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarAnulacionAsync(reactivo.IdReactivo)">
                                                        <i class="bi bi-x-circle-fill"></i>
                                                    </button>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Sin permisos</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <div class="modal fade @(_modalVisible ? "show d-block" : "")" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content shadow-lg border-0">
                        <EditForm Model="@_reactivoActual" OnValidSubmit="ValidarYGuardarAsync">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-flask me-2"></i>@(_reactivoActual.IdReactivo == 0 ? "Nuevo Reactivo" : "Editar Reactivo")
                                </h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModalAsync"></button>
                            </div>
                            <div class="modal-body">
                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Nombre</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="_reactivoActual.NombreReactivo"
                                                   @oninput="(e => _reactivoActual.NombreReactivo = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Fabricante</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="_reactivoActual.Fabricante"
                                                   @oninput="(e => _reactivoActual.Fabricante = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Unidad</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="_reactivoActual.Unidad" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Cantidad Disponible</label>
                                        <InputNumber class="form-control text-end" @bind-Value="_reactivoActual.CantidadDisponible" Min="0" Step="0.01" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary px-3">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="CerrarModalAsync">
                                    <i class="bi bi-x-lg me-1"></i>Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        }
    </Authorized>
</AuthorizeView>

@code {
    private ResultadoPaginadoDto<ReactivoDto>? _resultado;
    private ReactivoFiltroDto _filtro = new()
    {
        PageNumber = 1,
        PageSize = 10,
        SortBy = nameof(ReactivoDto.NombreReactivo),
        SortAsc = true,
        IncluirAnulados = true,
        IncluirVigentes = true
    };

    private ReactivoDto _reactivoActual = new();
    private bool _modalVisible;
    private bool _buscando = false;
    private bool _sesionVerificada = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            await BuscarReactivosAsync();
        }
    }

    private int TotalPaginas => _resultado == null || _resultado.PageSize == 0 ? 1 : (int)Math.Ceiling(_resultado.TotalCount / (double)_resultado.PageSize);

    private async Task BuscarReactivosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;
        if (_buscando) return;
        try
        {
            _buscando = true;
            _resultado = await ReactivosApiService.ListarReactivosPaginadosAsync(_filtro);
        }
        catch
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al cargar los reactivos.", "danger");
        }
        finally
        {
            _buscando = false;
        }
    }

    private async Task LimpiarBusquedaAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;
        _filtro = new ReactivoFiltroDto
        {
            PageNumber = 1,
            PageSize = 10,
            SortBy = nameof(ReactivoDto.NombreReactivo),
            SortAsc = true,
            IncluirAnulados = true,
            IncluirVigentes = true
        };
        _resultado = null;
        await JS.InvokeVoidAsync("mostrarToastAsync", "Filtros restablecidos.", "secondary");
    }

    private async Task CambiarPaginaAsync(int delta)
    {
        if (_resultado == null) return;
        var nueva = Math.Max(1, Math.Min(TotalPaginas, _resultado.PageNumber + delta));
        if (nueva == _resultado.PageNumber) return;
        _filtro.PageNumber = nueva;
        await BuscarReactivosAsync();
    }

    private MarkupString OrdenIcono(string columna)
    {
        if (_filtro.SortBy != columna) return (MarkupString)string.Empty;
        var icon = _filtro.SortAsc ? "&uarr;" : "&darr;";
        return (MarkupString)$"<span class=\"ms-1\">{icon}</span>";
    }

    private void OrdenarPor(string columna)
    {
        if (_filtro.SortBy == columna)
            _filtro.SortAsc = !_filtro.SortAsc;
        else
        {
            _filtro.SortBy = columna;
            _filtro.SortAsc = true;
        }
        _filtro.PageNumber = 1;
        _ = BuscarReactivosAsync();
    }

    private async Task MostrarModalNuevoAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _reactivoActual = new ReactivoDto();
        _modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModalAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _modalVisible = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
    }

    private async Task EditarReactivoAsync(ReactivoDto reactivo)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _reactivoActual = new()
        {
            IdReactivo = reactivo.IdReactivo,
            NombreReactivo = reactivo.NombreReactivo,
            Fabricante = reactivo.Fabricante,
            Unidad = reactivo.Unidad,
            CantidadDisponible = reactivo.CantidadDisponible,
            Anulado = reactivo.Anulado
        };
        _modalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task ValidarYGuardarAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        HttpResponseMessage result = _reactivoActual.IdReactivo == 0
            ? await ReactivosApiService.GuardarReactivoAsync(_reactivoActual)
            : await ReactivosApiService.GuardarReactivoAsync(_reactivoActual.IdReactivo, _reactivoActual);

        if (result.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Reactivo guardado correctamente.", "success");
            _modalVisible = false;
            await JS.InvokeVoidAsync("marcarModalCerrado");
            await BuscarReactivosAsync();
        }
        else
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al guardar el reactivo.", "danger");
        }
    }

    private async Task ConfirmarAnulacionAsync(int id)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (await JS.InvokeAsync<bool>("confirm", "¿Desea anular este reactivo?"))
        {
            var result = await ReactivosApiService.AnularReactivoAsync(id);
            if (result.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("mostrarToastAsync", "Reactivo anulado correctamente.", "success");
                await BuscarReactivosAsync();
            }
        }
    }

    private async Task ReactivarReactivoAsync(ReactivoDto reactivo)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (await JS.InvokeAsync<bool>("confirm", $"¿Desea reactivar el reactivo {reactivo.NombreReactivo}?"))
        {
            reactivo.Anulado = false;
            var result = await ReactivosApiService.GuardarReactivoAsync(reactivo.IdReactivo, reactivo);
            if (result.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("mostrarToastAsync", "Reactivo reactivado correctamente.", "success");
                await BuscarReactivosAsync();
            }
        }
    }

    private async Task VolverAtrasAsync() => await JS.InvokeVoidAsync("history.back");
}
