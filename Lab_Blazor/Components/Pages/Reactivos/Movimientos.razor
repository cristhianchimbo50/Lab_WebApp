@page "/movimientos"
@rendermode InteractiveServer
<PageTitle>Movimientos de Reactivos</PageTitle>

@using Lab_Contracts.Reactivos
@using Lab_Contracts.Common
@using Lab_Blazor.Services.Reactivos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService
@inject IMovimientosApiService MovimientosApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? user.FindFirst("IdRol")?.Value ?? string.Empty;
            bool puedeVer = rol is "1" or "3";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase justify-content-between fw-bold flex-wrap">
                <span><i class="bi bi-arrow-left-right text-primary fs-4 me-2"></i>Gestión de Movimientos de Reactivos</span>
                <div class="d-flex flex-wrap gap-2">
                    <button class="btn btn-success shadow-sm" @onclick='() => Navigation.NavigateTo("/reactivos/ingreso-stock")'>
                        <i class="bi bi-box-arrow-in-down me-1"></i>Registrar Ingreso
                    </button>
                    <button class="btn btn-danger shadow-sm" @onclick='() => Navigation.NavigateTo("/reactivos/egreso-stock")'>
                        <i class="bi bi-box-arrow-up me-1"></i>Registrar Egreso
                    </button>
                </div>
            </h3>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect class="form-select" @bind-Value="_filtroSeleccionado">
                            <option value="">-- Seleccione --</option>
                            <option value="numero">N° Movimiento</option>
                            <option value="reactivo">Reactivo</option>
                            <option value="observacion">Observación</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="_valorFiltro"
                                   placeholder="Ingrese valor a buscar"
                                   @onkeypress="@(e => { if (e.Key == "Enter") FiltrarMovimientosAsync(); })" />
                    </div>
                    <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-primary" @onclick="FiltrarMovimientosAsync" disabled="@_buscando"><i class="bi bi-search me-1"></i>Buscar</button>
                        <button class="btn btn-outline-secondary" @onclick="LimpiarFiltrosAsync" disabled="@_buscando"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                    </div>
                </div>
            </div>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Desde</label>
                        <InputDate @bind-Value="_filtro.FechaDesde" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Hasta</label>
                        <InputDate @bind-Value="_filtro.FechaHasta" class="form-control" />
                    </div>
                    <div class="col-md-3 d-flex align-items-center mt-4">
                        <InputCheckbox @bind-Value="_filtro.IncluirIngresos" class="form-check-input me-2" />
                        <label class="form-check-label">Ingresos</label>
                    </div>
                    <div class="col-md-3 d-flex align-items-center mt-4">
                        <InputCheckbox @bind-Value="_filtro.IncluirEgresos" class="form-check-input me-2" />
                        <label class="form-check-label">Egresos</label>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                <div class="text-muted small">
                    @if (_resultado != null)
                    {
                        <span>Mostrando página @_resultado.PageNumber de @TotalPaginas (Total: @_resultado.TotalCount)</span>
                    }
                </div>

                <div class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 small">Registros por página:</label>
                    <select class="form-select form-select-sm w-auto" @bind="_filtro.PageSize" @bind:after="(() => { _filtro.PageNumber = 1; FiltrarMovimientosAsync(); })">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="20">20</option>
                        <option value="50">50</option>
                    </select>

                    <div class="d-flex align-items-center ms-2">
                        <button class="btn btn-sm btn-outline-secondary me-1"
                                disabled="@(_resultado == null || _resultado.PageNumber == 1)"
                                @onclick="(() => CambiarPaginaAsync(-1))">
                            <i class="bi bi-chevron-left"></i>
                        </button>

                        <button class="btn btn-sm btn-outline-secondary"
                                disabled="@(_resultado == null || _resultado.PageNumber >= TotalPaginas)"
                                @onclick="(() => CambiarPaginaAsync(1))">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>

            @if (_resultado == null || _resultado.Items == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (!_resultado.Items.Any())
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron movimientos.
                </div>
            }
            else
            {
                <div class="tabla-fija shadow-sm rounded border">
                    <div class="tabla-body table-responsive" style="max-height: 420px; overflow-y: auto;">
                        <table class="table align-middle mb-0 tabla-movimientos">
                            <thead>
                                <tr>
                                    <th style="width: 12%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(MovimientoReactivoDto.IdMovimientoReactivo))">N° Movimiento @OrdenIcono(nameof(MovimientoReactivoDto.IdMovimientoReactivo))</th>
                                    <th style="width: 20%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(MovimientoReactivoDto.NombreReactivo))">Reactivo @OrdenIcono(nameof(MovimientoReactivoDto.NombreReactivo))</th>
                                    <th style="width: 10%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(MovimientoReactivoDto.TipoMovimiento))">Tipo @OrdenIcono(nameof(MovimientoReactivoDto.TipoMovimiento))</th>
                                    <th style="width: 10%; cursor:pointer;" class="text-end" @onclick="() => OrdenarPor(nameof(MovimientoReactivoDto.Cantidad))">Cantidad @OrdenIcono(nameof(MovimientoReactivoDto.Cantidad))</th>
                                    <th style="width: 15%; cursor:pointer;" @onclick="() => OrdenarPor(nameof(MovimientoReactivoDto.FechaMovimiento))">Fecha @OrdenIcono(nameof(MovimientoReactivoDto.FechaMovimiento))</th>
                                    <th style="width: 25%;">Observación</th>
                                    <th style="width: 10%;">N° Resultado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in _resultado.Items)
                                {
                                    <tr>
                                        <td data-label="N° Movimiento">@m.IdMovimientoReactivo</td>
                                        <td data-label="Reactivo" class="text-truncate">@m.NombreReactivo</td>
                                        <td data-label="Tipo">
                                            <span class="badge bg-@(m.TipoMovimiento == "INGRESO" ? "success" : "danger")">
                                                @m.TipoMovimiento
                                            </span>
                                        </td>
                                        <td data-label="Cantidad" class="text-end">@m.Cantidad.ToString("N2")</td>
                                        <td data-label="Fecha">@m.FechaMovimiento.ToString("dd/MM/yyyy")</td>
                                        <td data-label="Observación" class="text-truncate">@m.Observacion</td>
                                        <td data-label="N° Resultado">
                                            @if (!string.IsNullOrEmpty(m.NumeroResultado))
                                            {
                                                <span class="badge bg-info text-dark">@m.NumeroResultado</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private bool _cargado;
    private MovimientoReactivoFiltroDto _filtro = new();
    private ResultadoPaginadoDto<MovimientoReactivoDto>? _resultado = null;
    private string? _filtroSeleccionado = null;
    private string _valorFiltro = string.Empty;
    private bool _buscando = false;
    private bool _sesionVerificada = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            _cargado = true;
            _resultado = null;
            StateHasChanged();
        }
    }

    private int TotalPaginas => _resultado == null || _resultado.PageSize == 0 ? 1 : (int)Math.Ceiling(_resultado.TotalCount / (double)_resultado.PageSize);

    private async Task FiltrarMovimientosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;
        if (_buscando) return;

        try
        {
            _buscando = true;
            _filtro.PageNumber = 1;

            _filtro.IdMovimientoReactivo = null;
            _filtro.NombreReactivo = null;
            _filtro.Observacion = null;

            if (!string.IsNullOrWhiteSpace(_filtroSeleccionado) && !string.IsNullOrWhiteSpace(_valorFiltro))
            {
                switch (_filtroSeleccionado)
                {
                    case "numero":
                        if (int.TryParse(_valorFiltro, out var id))
                            _filtro.IdMovimientoReactivo = id.ToString();
                        break;
                    case "reactivo":
                        _filtro.NombreReactivo = _valorFiltro;
                        break;
                    case "observacion":
                        _filtro.Observacion = _valorFiltro;
                        break;
                }
            }

            _resultado = await MovimientosApi.BuscarMovimientosAsync(_filtro);
            await JS.InvokeVoidAsync("mostrarToastAsync", "Movimientos cargados correctamente.", "success");
        }
        catch
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al cargar movimientos.", "danger");
        }
        finally
        {
            _buscando = false;
            _cargado = true;
            StateHasChanged();
        }
    }

    private async Task LimpiarFiltrosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _filtro = new();
        _valorFiltro = string.Empty;
        _filtroSeleccionado = null;
        _resultado = null;
        StateHasChanged();
    }

    private async Task CambiarPaginaAsync(int delta)
    {
        if (_resultado == null) return;
        var nueva = Math.Max(1, Math.Min(TotalPaginas, _resultado.PageNumber + delta));
        if (nueva == _resultado.PageNumber) return;
        _filtro.PageNumber = nueva;
        await FiltrarMovimientosAsync();
    }

    private MarkupString OrdenIcono(string columna)
    {
        if (_filtro.SortBy != columna) return (MarkupString)string.Empty;
        var icon = _filtro.SortAsc ? "&uarr;" : "&darr;";
        return (MarkupString)$"<span class=\"ms-1\">{icon}</span>";
    }

    private void OrdenarPor(string columna)
    {
        if (_filtro.SortBy == columna)
            _filtro.SortAsc = !_filtro.SortAsc;
        else
        {
            _filtro.SortBy = columna;
            _filtro.SortAsc = true;
        }
        _filtro.PageNumber = 1;
        _ = FiltrarMovimientosAsync();
    }

    private async Task VolverAtrasAsync() => await JS.InvokeVoidAsync("history.back");
}
