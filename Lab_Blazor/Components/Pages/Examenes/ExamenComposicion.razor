@page "/examenes-composicion/{IdExamenPadre:int?}"
@inject SesionVerificacionService SesionService

@rendermode InteractiveServer

@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Examenes
@using Lab_Blazor.Services.Examenes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IExamenComposicionApiService ExamenComposicionApiService
@inject IExamenesApiService ExamenesApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation

<PageTitle>Composición de Exámenes</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value
            ?? user.FindFirst("role")?.Value
            ?? user.FindFirst("roles")?.Value
            ?? "";

            bool esPaciente = rol == "paciente";
            bool puedeVer = rol == "administrador";
            bool puedeAnular = rol == "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4 class="mb-4 d-flex align-items-center text-uppercase fw-bold">
                <i class="bi bi-diagram-3 text-primary fs-4 me-2"></i>
                Composición de Examen: <span class="ms-2 text-dark">@_nombreExamenPadre</span>
            </h4>

            @if (_cargando)
            {
                <div class="d-flex justify-content-center align-items-center py-5 text-primary">
                    <div class="spinner-border me-2"></div>
                    <strong>Cargando información...</strong>
                </div>
            }
            else if (_examenPadre == null)
            {
                <div class="alert alert-info shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Seleccione un examen para ver su composición.
                </div>
            }
            else
            {
                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-body row g-3 align-items-end">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Agregar examen hijo</label>
                            <select class="form-select" @bind="_idExamenHijoSeleccionado">
                                <option value="">-- Seleccionar examen --</option>
                                @foreach (var examen in _examenesDisponibles)
                                {
                                    <option value="@examen.IdExamen">@examen.NombreExamen</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4 text-end">
                            <button class="btn btn-primary px-4" @onclick="AgregarComposicionAsync">
                                <i class="bi bi-plus-circle me-1"></i> Agregar
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="mb-3 fw-bold text-secondary">
                            <i class="bi bi-list-check text-primary me-2"></i>Exámenes hijos asociados
                        </h5>

                        @if (_composiciones == null || _composiciones.Count == 0)
                        {
                            <div class="alert alert-warning shadow-sm">
                                <i class="bi bi-exclamation-triangle me-2"></i>No hay exámenes hijos asociados.
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered align-middle text-center">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Nombre Examen Hijo</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var composicion in _composiciones)
                                        {
                                            <tr>
                                                <td>@composicion.NombreExamenHijo</td>
                                                <td>
                                                    <button class="btn btn-danger btn-sm shadow-sm" @onclick="() => EliminarComposicionAsync(composicion)">
                                                        <i class="bi bi-x-circle"></i> Quitar
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter] public int? IdExamenPadre { get; set; }
    private ExamenDto? _examenPadre;
    private string? _nombreExamenPadre;
    private List<ExamenComposicionDto> _composiciones = new();
    private List<ExamenDto> _examenesDisponibles = new();
    private int? _idExamenHijoSeleccionado;
    private bool _cargando = true;
    private bool _datosCargados;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_datosCargados)
        {
            var authState = await AuthProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (!user.Identity?.IsAuthenticated ?? true)
            {
                _cargando = false;
                _datosCargados = true;
                StateHasChanged();
                return;
            }

            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol == "administrador";

            if (puedeVer && IdExamenPadre.HasValue)
            {
                _examenPadre = await ExamenesApiService.ObtenerDetalleExamenAsync(IdExamenPadre.Value);
                _nombreExamenPadre = _examenPadre?.NombreExamen;
                await CargarComposicionesAsync();
                await CargarExamenesDisponiblesAsync();
            }

            _cargando = false;
            _datosCargados = true;
            StateHasChanged();
        }
    }

    private async Task CargarComposicionesAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (IdExamenPadre.HasValue)
            _composiciones = await ExamenComposicionApiService.ListarComposicionesPorPadreAsync(IdExamenPadre.Value);
    }

    private async Task CargarExamenesDisponiblesAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var todos = await ExamenesApiService.ListarExamenesAsync();
        _examenesDisponibles = todos
            .Where(x => x.IdExamen != IdExamenPadre && !_composiciones.Any(c => c.IdExamenHijo == x.IdExamen))
            .OrderBy(x => x.NombreExamen)
            .ToList();
    }

    private async Task AgregarComposicionAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (!_idExamenHijoSeleccionado.HasValue)
        {
            await JS.InvokeVoidAsync("alert", "Seleccione un examen hijo.");
            return;
        }

        var dto = new ExamenComposicionDto
        {
            IdExamenPadre = IdExamenPadre!.Value,
            IdExamenHijo = _idExamenHijoSeleccionado.Value
        };

        var response = await ExamenComposicionApiService.GuardarComposicionAsync(dto);
        if (response.IsSuccessStatusCode)
        {
            await CargarComposicionesAsync();
            await CargarExamenesDisponiblesAsync();
            _idExamenHijoSeleccionado = null;
        }
        else
        {
            var msg = await response.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"Error al agregar: {msg}");
        }
    }

    private async Task EliminarComposicionAsync(ExamenComposicionDto composicion)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar la relación con {composicion.NombreExamenHijo}?");
        if (!confirmado) return;

        var response = await ExamenComposicionApiService.EliminarComposicionAsync(composicion.IdExamenPadre, composicion.IdExamenHijo);
        if (response.IsSuccessStatusCode)
        {
            await CargarComposicionesAsync();
            await CargarExamenesDisponiblesAsync();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "No se pudo eliminar la relación.");
        }
    }

    private async Task VolverAtrasAsync() => await JS.InvokeVoidAsync("history.back");
}
