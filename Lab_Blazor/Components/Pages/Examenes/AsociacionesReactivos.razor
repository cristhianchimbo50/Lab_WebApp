@page "/asociaciones-reactivos"
@rendermode InteractiveServer

@using Lab_Contracts.Examenes
@using Lab_Blazor.Services.Examenes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Linq

@inject IExamenReactivoAsociacionesApiService AsociacionesApi
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS

<PageTitle>Asociaciones Exámenes - Reactivos</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol == "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso restringido</h5>
                        <p class="text-muted mb-3">Solo los administradores pueden gestionar asociaciones.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center">
                <i class="bi bi-link-45deg fs-3 text-primary me-2"></i>
                Asociaciones Exámenes - Reactivos
            </h3>

            @if (cargando)
            {
                <div class="d-flex justify-content-center align-items-center py-5 text-primary">
                    <div class="spinner-border me-2" role="status"></div>
                    <strong>Cargando asociaciones...</strong>
                </div>
            }
            else
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Buscar por</label>
                            <InputSelect class="form-select" @bind-Value="criterioBusqueda">
                                <option value="">-- Seleccione --</option>
                                <option value="examen">Examen</option>
                                <option value="reactivo">Reactivo</option>
                                <option value="unidad">Unidad</option>
                            </InputSelect>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label">Valor</label>
                            <InputText class="form-control" @bind-Value="valorBusqueda" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end justify-content-md-end gap-2">
                            <button class="btn btn-primary" @onclick="BuscarAsociaciones">
                                <i class="bi bi-search me-1"></i> Buscar
                            </button>
                            <button class="btn btn-success" @onclick="IrAVinculoReactivos">
                                <i class="bi bi-plus-circle me-1"></i> Vincular Reactivos
                            </button>
                        </div>
                    </div>
                </div>

                @if (asociacionesFiltradas.Any())
                {
                    <div class="table-responsive shadow-sm rounded">
                        <table class="table table-hover table-bordered align-middle text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>Examen</th>
                                    <th>Reactivo</th>
                                    <th class="text-end">Cantidad Usada</th>
                                    <th>Unidad</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in asociacionesFiltradas)
                                {
                                    <tr>
                                        <td>@item.NombreExamen</td>
                                        <td>@item.NombreReactivo</td>
                                        <td class="text-end">@item.CantidadUsada</td>
                                        <td>@item.Unidad</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <button class="btn btn-warning btn-sm shadow-sm" title="Editar" @onclick="() => IrAEditar(item.IdExamen)">
                                                    <i class="bi bi-pencil-square text-dark"></i>
                                                </button>
                                                <button class="btn btn-danger btn-sm shadow-sm" title="Eliminar" @onclick="() => EliminarAsociacion(item.IdExamenReactivo)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning d-flex align-items-center mt-4 shadow-sm" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        No hay asociaciones registradas.
                    </div>
                }
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<AsociacionReactivoDto> asociaciones = new();
    private List<AsociacionReactivoDto> asociacionesFiltradas = new();
    private bool cargando = true;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            asociaciones = await AsociacionesApi.ObtenerTodasAsync();
            asociacionesFiltradas = asociaciones.ToList();
        }
        catch
        {
            await JS.InvokeVoidAsync("alert", "Error al cargar asociaciones.");
        }
        finally
        {
            cargando = false;
        }
    }

    private void BuscarAsociaciones()
    {
        if (string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valorBusqueda))
        {
            asociacionesFiltradas = asociaciones.ToList();
            return;
        }

        var valor = valorBusqueda.Trim().ToLower();
        asociacionesFiltradas = (criterioBusqueda switch
        {
            "examen" => asociaciones.Where(a => a.NombreExamen.ToLower().Contains(valor)).ToList(),
            "reactivo" => asociaciones.Where(a => a.NombreReactivo.ToLower().Contains(valor)).ToList(),
            "unidad" => asociaciones.Where(a => a.Unidad?.ToLower().Contains(valor) ?? false).ToList(),
            _ => asociaciones.ToList()
        }).ToList();
    }

    private void IrAEditar(int idExamen)
    {
        Navigation.NavigateTo($"/examenes-reactivos?idExamen={idExamen}");
    }

    private void IrAVinculoReactivos()
    {
        Navigation.NavigateTo("/examenes-reactivos");
    }

    private async Task EliminarAsociacion(int idAsociacion)
    {
        var confirmar = await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar esta asociación?");
        if (!confirmar) return;

        var ok = await AsociacionesApi.EliminarAsync(idAsociacion);
        if (ok)
        {
            await JS.InvokeVoidAsync("alert", "Asociación eliminada correctamente.");
            asociaciones = await AsociacionesApi.ObtenerTodasAsync();
            asociacionesFiltradas = asociaciones.ToList();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Error al eliminar la asociación.");
        }
    }

    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
