@page "/asociaciones-reactivos"
@inject SesionVerificacionService SesionService

@rendermode InteractiveServer

@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Examenes
@using Lab_Blazor.Services.Examenes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Linq

@inject IExamenReactivoAsociacionesApiService AsociacionesApi
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IJSRuntime JS

<PageTitle>Asociaciones Exámenes - Reactivos</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value
            ?? user.FindFirst("role")?.Value
            ?? user.FindFirst("roles")?.Value
            ?? "";

            bool esPaciente = rol == "paciente";
            bool puedeVer = rol == "administrador";
            bool puedeAnular = rol == "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase fw-bold">
                <i class="bi bi-link-45deg fs-3 text-primary me-2"></i>Asociaciones Exámenes - Reactivos
            </h3>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect class="form-select" @bind-Value="criterioBusqueda">
                            <option value="">-- Seleccione --</option>
                            <option value="examen">Examen</option>
                            <option value="reactivo">Reactivo</option>
                            <option value="unidad">Unidad</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="valorBusqueda"
                                   placeholder="@(criterioBusqueda switch
                                   {
                                       "examen" => "Ej: HEMOGRAMA COMPLETO",
                                       "reactivo" => "Ej: SUERO FISIOLÓGICO",
                                       "unidad" => "Ej: ML",
                                       _ => "Ingrese valor a buscar"
                                   })"
                               @onkeypress="@(e => { if (e.Key == "Enter") BuscarAsociaciones(); })" />
                </div>
                <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                    <button class="btn btn-primary shadow-sm" @onclick="BuscarAsociaciones">
                        <i class="bi bi-search me-1"></i>Buscar
                    </button>
                    <button class="btn btn-outline-secondary shadow-sm" @onclick="LimpiarBusqueda">
                        <i class="bi bi-eraser me-1"></i>Limpiar
                    </button>
                    <button class="btn btn-success shadow-sm" @onclick="IrAVinculoReactivos">
                        <i class="bi bi-plus-circle me-1"></i>Vincular Reactivos
                    </button>
                </div>
            </div>
        </div>

        @if (asociacionesFiltradas == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (asociacionesFiltradas.Count == 0)
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron asociaciones.
                </div>
            }
            else
            {
                @if (asociacionesFiltradas?.Count > 0)
                {
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                        <div class="text-muted small">
                            Mostrando @((paginaActual - 1) * tamPagina + 1)
                            - @(Math.Min(paginaActual * tamPagina, asociacionesFiltradas.Count))
                            de @asociacionesFiltradas.Count asociaciones
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 small">Registros por página:</label>
                            <select class="form-select form-select-sm w-auto" @bind="tamPagina" @bind:after="CambiarTamPagina">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>

                            <div class="d-flex align-items-center ms-2">
                                <button class="btn btn-sm btn-outline-secondary me-1"
                                        disabled="@(paginaActual == 1)"
                                        @onclick="PrevPagina">
                                    <i class="bi bi-chevron-left"></i>
                                </button>

                                <button class="btn btn-sm btn-outline-secondary"
                                        disabled="@(paginaActual >= TotalPaginas)"
                                        @onclick="NextPagina">
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
                <div class="tabla-fija shadow-sm rounded border">
                    <div class="tabla-body">
                        <table class="table align-middle mb-0 tabla-asociaciones">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 25%;">Examen</th>
                                    <th style="width: 25%;">Reactivo</th>
                                    <th style="width: 15%;" class="text-end">Cantidad Usada</th>
                                    <th style="width: 15%;">Unidad</th>
                                    <th style="width: 20%;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in AsociacionesPaginadas)
                                {
                                    <tr>
                                        <td data-label="Examen" class="text-truncate">@item.NombreExamen</td>
                                        <td data-label="Reactivo" class="text-truncate">@item.NombreReactivo</td>
                                        <td data-label="Cantidad" class="text-end">@item.CantidadUsada</td>
                                        <td data-label="Unidad">@item.Unidad</td>
                                        <td data-label="Acciones">
                                            <div class="d-flex justify-content-center gap-2">
                                                <button class="btn btn-warning btn-sm" title="Editar" @onclick="() => IrAEditar(item.IdExamen)">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                <button class="btn btn-danger btn-sm" title="Eliminar" @onclick="() => EliminarAsociacion(item.IdExamenReactivo)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<AsociacionReactivoDto> asociaciones = new();
    private List<AsociacionReactivoDto> asociacionesFiltradas = new();
    private bool cargando = true;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private bool errorCarga = false;
    private bool mostroError = false;
    private bool datosCargados;
    private int paginaActual = 1;
    private int tamPagina = 10;
    private int TotalPaginas => (int)Math.Ceiling((asociacionesFiltradas?.Count ?? 1) / (double)tamPagina);
    private IEnumerable<AsociacionReactivoDto> AsociacionesPaginadas =>
        asociacionesFiltradas?.Skip((paginaActual - 1) * tamPagina).Take(tamPagina) ?? new List<AsociacionReactivoDto>();

    private void PrevPagina()
    {
        if (paginaActual > 1) paginaActual--;
    }

    private void NextPagina()
    {
        if (paginaActual < TotalPaginas) paginaActual++;
    }

    private void CambiarTamPagina() => paginaActual = 1;



    protected override Task OnInitializedAsync()
    {
        asociaciones = new();
        asociacionesFiltradas = null;
        cargando = false;
        return Task.CompletedTask;
    }


    private async Task BuscarAsociaciones()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        cargando = true;
        StateHasChanged();

        try
        {
            asociaciones = await AsociacionesApi.ObtenerTodasAsync();
            var valor = valorBusqueda?.Trim().ToLower() ?? string.Empty;

            if (string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valor))
            {
                asociacionesFiltradas = asociaciones.ToList();
            }
            else
            {
                asociacionesFiltradas = criterioBusqueda switch
                {
                    "examen" => asociaciones.Where(a => a.NombreExamen.ToLower().Contains(valor)).ToList(),
                    "reactivo" => asociaciones.Where(a => a.NombreReactivo.ToLower().Contains(valor)).ToList(),
                    "unidad" => asociaciones.Where(a => a.Unidad?.ToLower().Contains(valor) ?? false).ToList(),
                    _ => asociaciones.ToList()
                };
            }
        }
        catch
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al cargar asociaciones.", "danger");
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task LimpiarBusqueda()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        criterioBusqueda = "";
        valorBusqueda = "";
        asociacionesFiltradas = null;
    }


    private async Task EliminarAsociacion(int idAsociacion)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (!await JS.InvokeAsync<bool>("confirm", "¿Desea eliminar esta asociación?")) return;

        var ok = await AsociacionesApi.EliminarAsync(idAsociacion);
        if (ok)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Asociación eliminada correctamente.", "success");
            asociaciones = await AsociacionesApi.ObtenerTodasAsync();
            asociacionesFiltradas = asociaciones.ToList();
        }
        else
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Error al eliminar la asociación.", "danger");
        }
    }

    private async void IrAEditar(int idExamen)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        Navigation.NavigateTo($"/examenes-reactivos?idExamen={idExamen}");
    }

    private async void IrAVinculoReactivos()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        Navigation.NavigateTo("/examenes-reactivos");
    }


    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
