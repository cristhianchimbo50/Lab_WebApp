@page "/examenes"
@rendermode InteractiveServer

<PageTitle>Gestión de Exámenes</PageTitle>

@using Lab_Contracts.Examenes
@using Lab_Blazor.Services.Examenes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService
@inject IExamenesApiService ExamenesApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider
@inject IExamenComposicionApiService ExamenComposicionApiService

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "laboratorista";
            bool puedeModificar = rol is "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a este módulo.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center text-uppercase justify-content-between fw-bold flex-wrap">
                <span><i class="bi bi-clipboard2-pulse text-primary fs-4 me-2"></i>Gestión de Exámenes</span>
                <button class="btn btn-success shadow-sm" @onclick="MostrarModalNuevo">
                    <i class="bi bi-plus-circle me-1"></i>Nuevo Examen
                </button>
            </h3>

            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Buscar por</label>
                        <InputSelect @bind-Value="criterioBusqueda" class="form-select">
                            <option value="">-- Seleccione --</option>
                            <option value="nombre">Nombre</option>
                            <option value="estudio">Estudio</option>
                            <option value="tipo">Tipo de Examen</option>
                            <option value="tecnica">Técnica</option>
                        </InputSelect>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label fw-semibold">Valor</label>
                        <InputText class="form-control" @bind-Value="valorBusqueda" placeholder="Ingrese valor a buscar"
                                   @onkeypress="@(e => { if (e.Key == "Enter") BuscarExamenes(); })" />
                    </div>
                    <div class="col-md-4 text-md-end text-center d-flex flex-wrap justify-content-md-end gap-2">
                        <button class="btn btn-primary" @onclick="BuscarExamenes"><i class="bi bi-search me-1"></i>Buscar</button>
                        <button class="btn btn-outline-secondary" @onclick="LimpiarBusqueda"><i class="bi bi-eraser me-1"></i>Limpiar</button>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-@tipoMensaje alert-dismissible fade show" role="alert">
                    @mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (ListaExamenes == null)
            {
                <div class="alert alert-info text-center shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>Presione <strong>Buscar</strong> para cargar los datos.
                </div>
            }
            else if (ListaExamenes.Count == 0)
            {
                <div class="alert alert-warning text-center shadow-sm">
                    <i class="bi bi-exclamation-triangle me-2"></i>No se encontraron resultados.
                </div>
            }
            else
            {


                @if (ListaExamenes?.Count > 0)
                {
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                        <div class="text-muted small">
                            Mostrando @((paginaActual - 1) * tamPagina + 1)
                            - @(Math.Min(paginaActual * tamPagina, ListaExamenes.Count))
                            de @ListaExamenes.Count exámenes
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <label class="form-label mb-0 small">Registros por página:</label>
                            <select class="form-select form-select-sm w-auto" @bind="tamPagina" @bind:after="CambiarTamPagina">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>

                            <div class="d-flex align-items-center ms-2">
                                <button class="btn btn-sm btn-outline-secondary me-1"
                                        disabled="@(paginaActual == 1)"
                                        @onclick="PrevPagina">
                                    <i class="bi bi-chevron-left"></i>
                                </button>

                                <button class="btn btn-sm btn-outline-secondary"
                                        disabled="@(paginaActual >= TotalPaginas)"
                                        @onclick="NextPagina">
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div class="tabla-fija shadow-sm rounded border">
                    <div class="tabla-body">
                        <table class="table align-middle mb-0 tabla-examenes">
                            <thead>
                                <tr>
                                    <th style="width: 18%;">Nombre</th>
                                    <th style="width: 15%;">Estudio</th>
                                    <th style="width: 14%;">Tipo de Muestra</th>
                                    <th style="width: 14%;">Tipo de Examen</th>
                                    <th style="width: 14%;">Técnica</th>
                                    <th style="width: 10%;">Precio</th>
                                    <th style="width: 7%;">Estado</th>
                                    <th style="width: 8%;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var examen in ExamenesPaginados)
                                {
                                    <tr>
                                        <td data-label="Nombre" class="text-truncate">@examen.NombreExamen</td>
                                        <td data-label="Estudio" class="text-truncate">@examen.Estudio</td>
                                        <td data-label="Tipo de Muestra" class="text-truncate">@examen.TipoMuestra</td>
                                        <td data-label="Tipo de Examen" class="text-truncate">@examen.TipoExamen</td>
                                        <td data-label="Técnica" class="text-truncate">@examen.Tecnica</td>
                                        <td data-label="Precio" class="text-truncate">$@examen.Precio</td>
                                        <td data-label="Estado">
                                            <span class="badge bg-@(examen.Anulado ? "danger" : "success")">
                                                @(examen.Anulado ? "Deshabilitado" : "Activo")
                                            </span>
                                        </td>
                                        <td data-label="Acciones">
                                            @if (puedeModificar)
                                            {
                                                <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarExamen(examen)">
                                                    <i class="bi bi-pencil-square"></i>
                                                </button>
                                                @if (examen.Anulado)
                                                {
                                                    <button class="btn btn-success btn-sm" @onclick="() => ConfirmarReactivacion(examen)">
                                                        <i class="bi bi-check-circle-fill"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-danger btn-sm" @onclick="() => ConfirmarAnulacion(examen.IdExamen)">
                                                        <i class="bi bi-x-circle-fill"></i>
                                                    </button>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Sin permisos</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <div class="modal fade @(ModalVisible ? "show d-block" : "")" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                    <div class="modal-content shadow-lg border-0">

                        <EditForm Model="@ExamenActual" OnValidSubmit="ValidarYGuardar">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-clipboard2-data me-2"></i>@(ExamenActual.IdExamen == 0 ? "Nuevo Examen" : "Editar Examen")
                                </h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                            </div>

                            <div class="modal-body">
                                <DataAnnotationsValidator />
                                <ValidationSummary />
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Nombre</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="ExamenActual.NombreExamen"
                                                   @oninput="(e => ExamenActual.NombreExamen = e.Value?.ToString()?.ToUpper() ?? string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Estudio</label>
                                        <input list="listaEstudios" class="form-control text-uppercase"
                                               @bind="ExamenActual.Estudio"
                                               @oninput="ValidarEstudio" />
                                        <datalist id="listaEstudios">
                                            @foreach (var item in EstudiosDisponibles)
                                            {
                                                <option value="@item"></option>
                                            }
                                        </datalist>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Tipo de Muestra</label>
                                        <input list="listaMuestras" class="form-control text-uppercase"
                                               @bind="ExamenActual.TipoMuestra"
                                               @oninput="ValidarTipoMuestra" />
                                        <datalist id="listaMuestras">
                                            @foreach (var item in TiposMuestraDisponibles)
                                            {
                                                <option value="@item"></option>
                                            }
                                        </datalist>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Tipo de Examen</label>
                                        <input list="listaTiposExamen" class="form-control text-uppercase"
                                               @bind="ExamenActual.TipoExamen"
                                               @oninput="ValidarTipoExamen" />
                                        <datalist id="listaTiposExamen">
                                            @foreach (var item in TiposExamenDisponibles)
                                            {
                                                <option value="@item"></option>
                                            }
                                        </datalist>
                                    </div>

                                    <div class="col-md-6">
                                        <label class="form-label">Técnica</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="ExamenActual.Tecnica" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Valor Referencia</label>
                                        <InputText class="form-control" @bind-Value="ExamenActual.ValorReferencia" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Unidad</label>
                                        <InputText class="form-control text-uppercase" @bind-Value="ExamenActual.Unidad" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Precio</label>
                                        <InputNumber class="form-control" @bind-Value="ExamenActual.Precio" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Tiempo de Entrega (días)</label>
                                        <InputText class="form-control" @bind-Value="ExamenActual.TiempoEntrega" />
                                    </div>
                                </div>

                                <hr class="my-3" />
                                <h5 class="fw-semibold"><i class="bi bi-diagram-3 me-1"></i> Exámenes Incluidos</h5>
                                <div class="mb-2 text-end">
                                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="AbrirModalBusquedaHijo">
                                        <i class="bi bi-plus-circle me-1"></i> Agregar Examen Hijo
                                    </button>
                                </div>

                                <div class="border rounded p-2" style="max-height: 250px; overflow-y: auto;">
                                    @if (HijosSeleccionados.Count == 0)
                                    {
                                        <div class="text-muted text-center py-2">No se han agregado exámenes hijos.</div>
                                    }
                                    else
                                    {
                                        <table class="table table-sm table-hover align-middle text-center mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Nombre</th>
                                                    <th>Estudio</th>
                                                    <th style="width:50px;"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var hijo in HijosSeleccionados)
                                                {
                                                    <tr>
                                                        <td>@hijo.NombreExamen</td>
                                                        <td>@hijo.Estudio</td>
                                                        <td>
                                                            <button type="button" class="btn btn-danger btn-sm"
                                                                    @onclick="() => QuitarHijo(hijo.IdExamen)">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary px-3">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                                    <i class="bi bi-x-lg me-1"></i>Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            @if (MostrarModalBusquedaHijo)
            {
                <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content shadow-lg">
                            <div class="modal-header">
                                <h5 class="modal-title"><i class="bi bi-search me-1"></i> Buscar Examen Hijo</h5>
                                <button type="button" class="btn-close" @onclick="CerrarModalBusquedaHijo"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row g-2 mb-2">
                                    <div class="col-md-4">
                                        <InputSelect class="form-select" @bind-Value="filtroBusquedaHijo">
                                            <option value="nombre">Nombre</option>
                                            <option value="estudio">Estudio</option>
                                        </InputSelect>
                                    </div>
                                    <div class="col-md-6">
                                        <InputText class="form-control" @bind-Value="valorBusquedaHijo" placeholder="Ingrese valor" />
                                    </div>
                                    <div class="col-md-2 d-grid">
                                        <button class="btn btn-primary" @onclick="BuscarHijos">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="border rounded" style="max-height: 300px; overflow-y: auto;">
                                    <table class="table table-sm table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Estudio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var hijo in ResultadosBusquedaHijos)
                                            {
                                                <tr style="cursor:pointer" @ondblclick="() => SeleccionarHijo(hijo)">
                                                    <td>@hijo.NombreExamen</td>
                                                    <td>@hijo.Estudio</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" @onclick="CerrarModalBusquedaHijo">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
    </Authorized>
</AuthorizeView>

@code {
    private List<ExamenDto>? ListaExamenes;
    private ExamenDto ExamenActual = new();
    private bool ModalVisible;
    private string criterioBusqueda = "";
    private string valorBusqueda = "";
    private string mensaje = "";
    private string tipoMensaje = "info";
    private int paginaActual = 1;
    private int tamPagina = 10;
    private int TotalPaginas => (int)Math.Ceiling((ListaExamenes?.Count ?? 1) / (double)tamPagina);
    private IEnumerable<ExamenDto> ExamenesPaginados => ListaExamenes?.Skip((paginaActual - 1) * tamPagina).Take(tamPagina) ?? new List<ExamenDto>();

    private List<ExamenDto> HijosSeleccionados = new();
    private bool MostrarModalBusquedaHijo = false;
    private string filtroBusquedaHijo = "nombre";
    private string valorBusquedaHijo = "";
    private List<ExamenDto> ResultadosBusquedaHijos = new();

    private bool cargadoInicial = false;

    private bool _sesionVerificada = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            await CargarListas();
            cargadoInicial = true;
            StateHasChanged();
        }
    }

    private async Task BuscarExamenes()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var examenes = await ExamenesApiService.ListarExamenesAsync();

        if (string.IsNullOrWhiteSpace(criterioBusqueda) || string.IsNullOrWhiteSpace(valorBusqueda))
            ListaExamenes = examenes;
        else
        {
            valorBusqueda = valorBusqueda.ToLower();
            ListaExamenes = criterioBusqueda switch
            {
                "nombre" => examenes.Where(x => x.NombreExamen.ToLower().Contains(valorBusqueda)).ToList(),
                "estudio" => examenes.Where(x => x.Estudio?.ToLower().Contains(valorBusqueda) ?? false).ToList(),
                "tipo" => examenes.Where(x => x.TipoExamen?.ToLower().Contains(valorBusqueda) ?? false).ToList(),
                "tecnica" => examenes.Where(x => x.Tecnica?.ToLower().Contains(valorBusqueda) ?? false).ToList(),
                _ => examenes
            };
        }

        paginaActual = 1;
    }

    private async Task MostrarModalNuevo()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        ExamenActual = new ExamenDto();
        HijosSeleccionados = new();
        ModalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModal()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        ModalVisible = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        mensaje = string.Empty;
    }

    private async Task EditarExamen(ExamenDto examen)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var rol = authState.User.FindFirst(ClaimTypes.Role)?.Value ?? "";
        if (rol != "administrador")
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "No tienes permisos para editar exámenes.", "danger");
            return;
        }

        ExamenActual = examen;
        HijosSeleccionados = await ExamenesApiService.ListarExamenesHijosAsync(examen.IdExamen) ?? new();
        ModalVisible = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task ValidarYGuardar()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        HttpResponseMessage result;

        if (ExamenActual.IdExamen == 0)
        {
            result = await ExamenesApiService.GuardarExamenAsync(ExamenActual);
            if (result.IsSuccessStatusCode)
            {
                var nuevo = await result.Content.ReadFromJsonAsync<ExamenDto>();
                ExamenActual.IdExamen = nuevo?.IdExamen ?? 0;
            }
        }
        else
        {
            result = await ExamenesApiService.GuardarExamenAsync(ExamenActual.IdExamen, ExamenActual);
        }

        if (result.IsSuccessStatusCode)
        {
            if (HijosSeleccionados.Any())
            {
                var hijosExistentes = await ExamenesApiService.ListarExamenesHijosAsync(ExamenActual.IdExamen);
                foreach (var hijo in hijosExistentes)
                {
                    await ExamenComposicionApiService.EliminarComposicionAsync(ExamenActual.IdExamen, hijo.IdExamen);
                }

                foreach (var hijo in HijosSeleccionados)
                {
                    await ExamenComposicionApiService.GuardarComposicionAsync(new ExamenComposicionDto
                    {
                        IdExamenPadre = ExamenActual.IdExamen,
                        IdExamenHijo = hijo.IdExamen
                    });
                }
            }
            mensaje = "Examen y composiciones guardadas correctamente.";
            tipoMensaje = "success";
            await JS.InvokeVoidAsync("mostrarToastAsync", mensaje, tipoMensaje);
            ModalVisible = false;
            await JS.InvokeVoidAsync("marcarModalCerrado");
            await BuscarExamenes();
        }
        else
        {
            mensaje = "Error al guardar examen.";
            tipoMensaje = "danger";
            await JS.InvokeVoidAsync("mostrarToastAsync", mensaje, tipoMensaje);
        }
    }

    private async Task ConfirmarAnulacion(int id)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (await JS.InvokeAsync<bool>("confirm", "¿Desea anular este examen?"))
        {
            var result = await ExamenesApiService.AnularExamenAsync(id);
            if (result.IsSuccessStatusCode)
            {
                mensaje = "Examen anulado correctamente.";
                tipoMensaje = "success";
                await BuscarExamenes();
            }
        }
    }

    private async Task BuscarHijos()
    {
        var todos = await ExamenesApiService.ListarExamenesAsync();
        var val = valorBusquedaHijo.ToLower();
        ResultadosBusquedaHijos = filtroBusquedaHijo switch
        {
            "nombre" => todos.Where(e => e.NombreExamen.ToLower().Contains(val)).ToList(),
            "estudio" => todos.Where(e => e.Estudio?.ToLower().Contains(val) ?? false).ToList(),
            _ => new()
        };
    }

    private async Task ConfirmarReactivacion(ExamenDto examen)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (await JS.InvokeAsync<bool>("confirm", $"¿Desea reactivar el examen {examen.NombreExamen}?"))
        {
            examen.Anulado = false;
            var result = await ExamenesApiService.GuardarExamenAsync(examen.IdExamen, examen);
            if (result.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("mostrarToastAsync", "Examen reactivado correctamente.", "success");
                await BuscarExamenes();
            }
            else
            {
                await JS.InvokeVoidAsync("mostrarToastAsync", "Error al reactivar el examen.", "danger");
            }
        }
    }


    private async void SeleccionarHijo(ExamenDto examen)
    {
        if (HijosSeleccionados.Any(x => x.IdExamen == examen.IdExamen))
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "Este examen ya está agregado como hijo.", "warning");
            return;
        }

        if (ExamenActual.IdExamen == examen.IdExamen)
        {
            await JS.InvokeVoidAsync("mostrarToastAsync", "No puede agregarse a sí mismo como hijo.", "warning");
            return;
        }

        HijosSeleccionados.Add(examen);
        MostrarModalBusquedaHijo = false;
    }

    private void QuitarHijo(int id) =>
        HijosSeleccionados = HijosSeleccionados.Where(e => e.IdExamen != id).ToList();

    private void AbrirModalBusquedaHijo()
    {
        valorBusquedaHijo = "";
        ResultadosBusquedaHijos = new();
        MostrarModalBusquedaHijo = true;
    }

    private void CerrarModalBusquedaHijo() => MostrarModalBusquedaHijo = false;

    private async Task LimpiarBusqueda()
    {
        criterioBusqueda = "";
        valorBusqueda = "";
        ListaExamenes = null;
    }

