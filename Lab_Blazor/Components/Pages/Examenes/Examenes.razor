@page "/examenes"
@rendermode InteractiveServer

@using Lab_Contracts.Examenes
@using Lab_Blazor.Services.Examenes
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IExamenesApiService ExamenesApiService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Gestión de Exámenes</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "laboratorista";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso restringido</h5>
                        <p class="text-muted mb-3">Solo el administrador o laboratorista puede gestionar exámenes.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtras">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h3 class="mb-4 d-flex align-items-center">
                <i class="bi bi-clipboard2-pulse text-primary fs-4 me-2"></i>Gestión de Exámenes
            </h3>

            <div class="d-flex justify-content-end mb-3">
                <button class="btn btn-success shadow-sm" @onclick="MostrarModalNuevo">
                    <i class="bi bi-plus-circle me-1"></i> Nuevo Examen
                </button>
            </div>

            @if (ListaExamenes is null || ListaExamenes.Count == 0)
            {
                <div class="alert alert-warning shadow-sm">
                    <i class="bi bi-exclamation-circle me-2"></i>No hay exámenes registrados.
                </div>
            }
            else
            {
                <div class="table-responsive shadow-sm rounded">
                    <table class="table table-hover table-bordered align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Estudio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var examen in ListaExamenes)
                            {
                                <tr>
                                    <td>@examen.NombreExamen</td>
                                    <td>@examen.Estudio</td>
                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <button class="btn btn-warning btn-sm shadow-sm" title="Editar"
                                                    @onclick="() => EditarExamen(examen.IdExamen)">
                                                <i class="bi bi-pencil-square text-dark"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm shadow-sm" title="Anular"
                                                    @onclick="() => AnularExamen(examen.IdExamen)">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if (ModalVisible)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content shadow">
                            <EditForm Model="ExamenActual" OnValidSubmit="GuardarExamen">
                                <div class="modal-header bg-primary text-white">
                                    <h5 class="modal-title">
                                        <i class="bi bi-clipboard2-data me-2"></i>
                                        @((ExamenActual.IdExamen == 0) ? "Nuevo Examen" : "Editar Examen")
                                    </h5>
                                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Nombre del Examen</label>
                                        <InputText class="form-control" @bind-Value="ExamenActual.NombreExamen" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Estudio</label>
                                        <InputText class="form-control" @bind-Value="ExamenActual.Estudio" />
                                    </div>

                                    <hr class="my-3" />

                                    <h6><i class="bi bi-diagram-3 me-2 text-primary"></i>Exámenes incluidos</h6>
                                    <button class="btn btn-secondary btn-sm mb-2 shadow-sm" @onclick="MostrarModalAgregarHijo">
                                        <i class="bi bi-plus"></i> Agregar Examen Hijo
                                    </button>

                                    @if (HijosSeleccionados.Count == 0)
                                    {
                                        <div class="alert alert-light border">
                                            <i class="bi bi-info-circle me-2"></i>No hay exámenes hijos asociados.
                                        </div>
                                    }
                                    else
                                    {
                                        <ul class="list-group">
                                            @foreach (var hijo in HijosSeleccionados)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    @hijo.NombreExamen
                                                    <button class="btn btn-sm btn-outline-danger" title="Quitar"
                                                            @onclick="() => QuitarHijo(hijo.IdExamen)">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary px-3">
                                        <i class="bi bi-save me-1"></i> Guardar
                                    </button>
                                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                                        <i class="bi bi-x-lg me-1"></i> Cancelar
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            }

            @if (ModalBuscarHijos)
            {
                <div class="modal fade show d-block" style="background:rgba(0,0,0,0.4);">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content shadow">
                            <div class="modal-header bg-secondary text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-search me-2"></i>Buscar Examen Hijo
                                </h5>
                                <button class="btn-close" @onclick="CerrarModalBuscarHijos"></button>
                            </div>
                            <div class="modal-body">
                                <div class="input-group mb-3">
                                    <InputText class="form-control" @bind-Value="TextoBusquedaHijo" placeholder="Buscar por nombre..." />
                                    <button class="btn btn-primary" @onclick="BuscarHijos">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>

                                @if (ResultadosBusquedaHijo.Count == 0)
                                {
                                    <div class="alert alert-light border text-center">Sin resultados.</div>
                                }
                                else
                                {
                                    <ul class="list-group">
                                        @foreach (var ex in ResultadosBusquedaHijo)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @ex.NombreExamen
                                                <button class="btn btn-success btn-sm" @onclick="() => SeleccionarHijo(ex)">
                                                    <i class="bi bi-plus-circle"></i>
                                                </button>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<ExamenDto> ListaExamenes = new();
    private ExamenDto ExamenActual = new();
    private List<ExamenDto> HijosSeleccionados = new();
    private List<ExamenDto> ResultadosBusquedaHijo = new();
    private bool ModalVisible = false;
    private bool ModalBuscarHijos = false;
    private string TextoBusquedaHijo = "";

    protected override async Task OnInitializedAsync() => await CargarExamenes();

    private async Task CargarExamenes()
    {
        ListaExamenes = await ExamenesApiService.GetExamenesAsync();
    }

    private void MostrarModalNuevo()
    {
        ExamenActual = new();
        HijosSeleccionados = new();
        ModalVisible = true;
    }

    private async Task EditarExamen(int id)
    {
        var examen = await ExamenesApiService.GetExamenPorIdAsync(id);
        if (examen is null)
        {
            await JS.InvokeVoidAsync("alert", "Examen no encontrado.");
            return;
        }

        ExamenActual = examen;
        HijosSeleccionados = await ExamenesApiService.ObtenerHijosDeExamenAsync(id);
        ModalVisible = true;
    }

    private async Task GuardarExamen()
    {
        HttpResponseMessage res = ExamenActual.IdExamen == 0
            ? await ExamenesApiService.CrearExamenAsync(ExamenActual)
            : await ExamenesApiService.EditarExamenAsync(ExamenActual.IdExamen, ExamenActual);

        if (ExamenActual.IdExamen != 0)
        {
            var hijosPrevios = await ExamenesApiService.ObtenerHijosDeExamenAsync(ExamenActual.IdExamen);
            foreach (var hijo in hijosPrevios)
                await ExamenesApiService.EliminarExamenHijoAsync(ExamenActual.IdExamen, hijo.IdExamen);

            foreach (var hijo in HijosSeleccionados)
                await ExamenesApiService.AgregarExamenHijoAsync(ExamenActual.IdExamen, hijo.IdExamen);
        }

        if (res.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Examen guardado correctamente.");
            ModalVisible = false;
            await CargarExamenes();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Error al guardar el examen.");
        }
    }

    private async Task AnularExamen(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¿Desea anular este examen?"))
        {
            await ExamenesApiService.AnularExamenAsync(id);
            await JS.InvokeVoidAsync("alert", "Examen anulado correctamente.");
            await CargarExamenes();
        }
    }

    private void QuitarHijo(int id) => HijosSeleccionados = HijosSeleccionados.Where(x => x.IdExamen != id).ToList();

    private void MostrarModalAgregarHijo()
    {
        TextoBusquedaHijo = "";
        ResultadosBusquedaHijo = new();
        ModalBuscarHijos = true;
    }

    private void CerrarModal() => ModalVisible = false;
    private void CerrarModalBuscarHijos() => ModalBuscarHijos = false;

    private async Task BuscarHijos()
    {
        var todos = await ExamenesApiService.GetExamenesAsync();
        ResultadosBusquedaHijo = todos
            .Where(x => x.NombreExamen.Contains(TextoBusquedaHijo, StringComparison.OrdinalIgnoreCase)
                     && !HijosSeleccionados.Any(h => h.IdExamen == x.IdExamen)
                     && x.IdExamen != ExamenActual.IdExamen)
            .OrderBy(x => x.NombreExamen)
            .ToList();
    }

    private void SeleccionarHijo(ExamenDto ex)
    {
        if (!HijosSeleccionados.Any(x => x.IdExamen == ex.IdExamen))
            HijosSeleccionados.Add(ex);
        ModalBuscarHijos = false;
    }

    private async Task VolverAtras() => await JS.InvokeVoidAsync("history.back");
}
