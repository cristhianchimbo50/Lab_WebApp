                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Buscar por</label>
                            <select class="form-select" @bind="criterioBusquedaReactivo">
                                <option value="nombre">Nombre</option>
                                <option value="fabricante">Fabricante</option>
                                <option value="unidad">Unidad</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Valor</label>
                            <InputText class="form-control" @bind-Value="valorBusquedaReactivo" placeholder="Ingrese valor a buscar" />
                        </div>
