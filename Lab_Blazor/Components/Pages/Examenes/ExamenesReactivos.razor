@page "/examenes-reactivos"
@page "/examenes-reactivos/{idExamen:int?}"
@rendermode InteractiveServer

@using Lab_Contracts.Examenes
@using Lab_Contracts.Reactivos
@using Lab_Blazor.Services.Examenes
@using Lab_Blazor.Services.Reactivos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Lab_Blazor.Services.Auth
@inject SesionVerificacionService SesionService
@inject IExamenesApiService ExamenesApi
@inject IReactivosApiService ReactivosApi
@inject IExamenReactivoAsociacionesApiService AsociacionesApi
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Asociar Reactivos a Examen</PageTitle>

<AuthorizeView>
    <Authorized Context="authState">
        @{
            var user = authState.User;
            var rol = user.FindFirst(ClaimTypes.Role)?.Value
            ?? user.FindFirst("role")?.Value
            ?? user.FindFirst("roles")?.Value
            ?? "";

            bool esPaciente = rol == "paciente";
            bool puedeVer = rol is "administrador" or "laboratorista";
            bool puedeAnular = rol == "administrador";
        }

        @if (!puedeVer)
        {
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                    <div class="card-body p-4">
                        <i class="bi bi-shield-lock text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold mb-2">Acceso no autorizado</h5>
                        <p class="text-muted mb-3">No tienes permisos suficientes para acceder a esta sección.</p>
                        <button class="btn btn-outline-primary" @onclick="VolverAtrasAsync">
                            <i class="bi bi-arrow-left"></i> Regresar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            @if (!_isRendered)
            {
                <div class="d-flex justify-content-center align-items-center py-5 text-primary">
                    <div class="spinner-border me-2" role="status"></div>
                </div>
            }
            else
            {
                <h3 class="mb-4 d-flex align-items-center text-uppercase fw-bold">
                    <i class="bi bi-link-45deg text-primary fs-4 me-2"></i>Asociar Reactivos a Examen
                </h3>

                <div class="card shadow-sm mb-4 border-0">
                    <div class="card-body row g-3 align-items-end">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Examen Seleccionado</label>
                            <input class="form-control" value="@_examenSeleccionado?.NombreExamen" disabled placeholder="Seleccione un examen..." />
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-primary w-100 shadow-sm" @onclick="MostrarModalExamenAsync">
                                <i class="bi bi-search me-1"></i> Buscar Examen
                            </button>
                        </div>
                    </div>
                </div>

                @if (_examenSeleccionado != null)
                {
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                        <div>
                            <button class="btn btn-success shadow-sm me-2" @onclick="MostrarModalReactivoAsync">
                                <i class="bi bi-plus-circle me-1"></i> Agregar Reactivo
                            </button>
                            <button class="btn btn-primary shadow-sm" @onclick="GuardarAsociacionesAsync">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>

                        @if (_reactivosAsociados?.Count > 0)
                        {
                            <div class="d-flex align-items-center gap-2">
                                <label class="form-label mb-0 small">Registros por página:</label>
                                <select class="form-select form-select-sm w-auto" @bind="PageSize" @bind:after="CambiarTamPagina">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>

                                <div class="d-flex align-items-center ms-2">
                                    <button class="btn btn-sm btn-outline-secondary me-1"
                                            disabled="@(_currentPage == 1)"
                                            @onclick="PrevPagina">
                                        <i class="bi bi-chevron-left"></i>
                                    </button>

                                    <button class="btn btn-sm btn-outline-secondary"
                                            disabled="@(_currentPage >= TotalPages)"
                                            @onclick="NextPagina">
                                        <i class="bi bi-chevron-right"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="tabla-scroll shadow-sm rounded border p-3">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0 tabla-reactivos">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th style="width: 40%;">Reactivo</th>
                                        <th style="width: 25%;">Cantidad Usada</th>
                                        <th style="width: 20%;">Unidad</th>
                                        <th style="width: 15%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in PaginatedReactivos)
                                    {
                                        <tr>
                                            <td data-label="Reactivo" class="text-truncate text-start">@item.NombreReactivo</td>
                                            <td data-label="Cantidad" class="text-end">
                                                <input type="number" step="0.01" class="form-control form-control-sm text-end" @bind="item.CantidadUsada" />
                                            </td>
                                            <td data-label="Unidad" class="text-end">@item.Unidad</td>
                                            <td data-label="Acciones" class="text-end">
                                                <button class="btn btn-danger btn-sm" @onclick="@(() => QuitarReactivo(item))">
                                                    <i class="bi bi-x-circle-fill"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
        }
    </Authorized>

    <NotAuthorized>
        <div class="d-flex justify-content-center align-items-center vh-100">
            <div class="card shadow-lg text-center border-0" style="max-width: 450px;">
                <div class="card-body p-4">
                    <i class="bi bi-person-x text-danger fs-1 mb-3"></i>
                    <h5 class="fw-bold mb-2">Debe iniciar sesión</h5>
                    <p class="text-muted mb-3">Inicie sesión con una cuenta autorizada para continuar.</p>
                    <NavLink href="/login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Ir al Login
                    </NavLink>
                </div>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@if (_mostrarModalExamen)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-search me-2"></i>Buscar Examen
                    </h5>
                    <button class="btn-close btn-close-white" @onclick="CerrarModalExamenAsync"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Buscar por</label>
                            <select class="form-select" @bind="_criterioBusquedaExamen">
                                <option value="nombre">Nombre</option>
                                <option value="estudio">Estudio</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Valor</label>
                            <InputText class="form-control" @bind-Value="_valorBusquedaExamen" placeholder="Ingrese valor a buscar" />
                        </div>
                        <div class="col-md-2 text-end">
                            <button class="btn btn-primary w-100" @onclick="BuscarExamenesAsync">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>

                    <div class="tabla-scroll-fija border rounded shadow-sm">
                        <table class="table align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Estudio</th>
                                    <th style="width: 120px;">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ex in _examenesEncontrados)
                                {
                                    <tr>
                                        <td>@ex.NombreExamen</td>
                                        <td>@ex.Estudio</td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-success" @onclick="@(() => SeleccionarExamenAsync(ex))">
                                                <i class="bi bi-check-circle"></i> Seleccionar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalExamenAsync">
                        <i class="bi bi-x-lg"></i> Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (_mostrarModalReactivo)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-vial me-2"></i>Buscar Reactivo
                    </h5>
                    <button class="btn-close btn-close-white" @onclick="CerrarModalReactivoAsync"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-3 align-items-end mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Buscar por</label>
                            <select class="form-select" @bind="_criterioBusquedaReactivo">
                                <option value="nombre">Nombre</option>
                                <option value="fabricante">Fabricante</option>
                                <option value="unidad">Unidad</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Valor</label>
                            <InputText class="form-control" @bind-Value="_valorBusquedaReactivo" placeholder="Ingrese valor a buscar" />
                        </div>
                        <div class="col-md-2 text-end">
                            <button class="btn btn-primary w-100" @onclick="BuscarReactivosAsync">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>

                    <div class="tabla-scroll-fija border rounded shadow-sm">
                        <table class="table align-middle mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Fabricante</th>
                                    <th>Unidad</th>
                                    <th style="width: 120px;">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in _reactivosEncontrados)
                                {
                                    <tr>
                                        <td>@r.NombreReactivo</td>
                                        <td>@r.Fabricante</td>
                                        <td>@r.Unidad</td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-success" @onclick="async () => await SeleccionarReactivoAsync(r)">
                                                <i class="bi bi-check-circle"></i> Seleccionar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CerrarModalReactivoAsync">
                        <i class="bi bi-x-lg"></i> Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int? IdExamen { get; set; }
    private bool _isRendered;
    private ExamenDto? _examenSeleccionado;
    private List<AsociacionReactivoDto> _reactivosAsociados = new();
    private bool _mostrarModalExamen;
    private bool _mostrarModalReactivo;
    private string _valorBusquedaExamen = "";
    private string _valorBusquedaReactivo = "";
    private List<ExamenDto> _examenesEncontrados = new();
    private List<ReactivoDto> _reactivosEncontrados = new();
    private List<ExamenDto> _todosLosExamenes = new();
    private List<ReactivoDto> _todosLosReactivos = new();
    private string _criterioBusquedaExamen = "nombre";
    private string _criterioBusquedaReactivo = "nombre";
    private bool _sesionVerificada = false;
    private int _pageSize = 10;
    private int _currentPage = 1;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_sesionVerificada)
        {
            _sesionVerificada = true;

            if (!await SesionService.VerificarOSalirAsync())
                return;

            var authState = await AuthProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (!user.Identity?.IsAuthenticated ?? true)
            {
                _isRendered = true;
                StateHasChanged();
                return;
            }

            var rol = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            bool puedeVer = rol is "administrador" or "laboratorista";

            if (puedeVer)
            {
                var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
                var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
                var idParam = query.Get("idExamen");
                if (!string.IsNullOrWhiteSpace(idParam) && int.TryParse(idParam, out var id))
                    await SeleccionarExamenPorIdAsync(id);
                else if (IdExamen is not null)
                    await SeleccionarExamenPorIdAsync(IdExamen.Value);
            }

            _isRendered = true;
            StateHasChanged();
        }
    }

    private async Task SeleccionarExamenPorIdAsync(int id)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _examenSeleccionado = await ExamenesApi.ObtenerDetalleExamenAsync(id);
        _reactivosAsociados = await AsociacionesApi.ListarAsociacionesPorExamenIdAsync(id) ?? new();
    }

    private async Task MostrarModalExamenAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _examenesEncontrados = new();
        _valorBusquedaExamen = "";
        _mostrarModalExamen = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModalExamenAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _mostrarModalExamen = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
    }

    private async Task BuscarExamenesAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (!_todosLosExamenes.Any())
            _todosLosExamenes = await ExamenesApi.ListarExamenesAsync();

        var val = _valorBusquedaExamen.Trim().ToLower();

        if (string.IsNullOrWhiteSpace(val))
        {
            _examenesEncontrados = _todosLosExamenes;
        }
        else
        {
            _examenesEncontrados = _criterioBusquedaExamen switch
            {
                "estudio" => _todosLosExamenes.Where(e => e.Estudio?.ToLower().Contains(val) ?? false).ToList(),
                _ => _todosLosExamenes.Where(e => e.NombreExamen.ToLower().Contains(val)).ToList()
            };
        }
    }

    private async Task SeleccionarExamenAsync(ExamenDto examen)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _examenSeleccionado = examen;
        _mostrarModalExamen = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        _reactivosAsociados = await AsociacionesApi.ListarAsociacionesPorExamenIdAsync(examen.IdExamen) ?? new();
        _currentPage = 1;
    }

    private async Task MostrarModalReactivoAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _reactivosEncontrados = new();
        _valorBusquedaReactivo = "";
        _mostrarModalReactivo = true;
        await JS.InvokeVoidAsync("marcarModalAbierto");
    }

    private async Task CerrarModalReactivoAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        _mostrarModalReactivo = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
    }

    private async Task BuscarReactivosAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (!_todosLosReactivos.Any())
            _todosLosReactivos = await ReactivosApi.ListarReactivosAsync();

        var val = _valorBusquedaReactivo.Trim().ToLower();

        if (string.IsNullOrWhiteSpace(val))
        {
            _reactivosEncontrados = _todosLosReactivos;
        }
        else
        {
            _reactivosEncontrados = _criterioBusquedaReactivo switch
            {
                "fabricante" => _todosLosReactivos.Where(r => r.Fabricante?.ToLower().Contains(val) ?? false).ToList(),
                "unidad" => _todosLosReactivos.Where(r => r.Unidad?.ToLower().Contains(val) ?? false).ToList(),
                _ => _todosLosReactivos.Where(r => r.NombreReactivo.ToLower().Contains(val)).ToList()
            };
        }
    }

    private async Task SeleccionarReactivoAsync(ReactivoDto reactivo)
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (_reactivosAsociados.Any(r => r.IdReactivo == reactivo.IdReactivo))
        {
            await JS.InvokeVoidAsync("alert", "Este reactivo ya está en la lista.");
            return;
        }

        _reactivosAsociados.Add(new AsociacionReactivoDto
        {
            IdReactivo = reactivo.IdReactivo,
            NombreReactivo = reactivo.NombreReactivo,
            Unidad = reactivo.Unidad,
            CantidadUsada = 0
        });

        _mostrarModalReactivo = false;
        await JS.InvokeVoidAsync("marcarModalCerrado");
        StateHasChanged();
    }

    private void QuitarReactivo(AsociacionReactivoDto item) => _reactivosAsociados.Remove(item);

    private async Task GuardarAsociacionesAsync()
    {
        if (!await SesionService.VerificarOSalirAsync()) return;

        if (_examenSeleccionado == null)
        {
            await JS.InvokeVoidAsync("alert", "Debe seleccionar un examen.");
            return;
        }

        var exito = await AsociacionesApi.GuardarAsociacionesPorExamenAsync(_examenSeleccionado.IdExamen, _reactivosAsociados);
        if (exito)
            Navigation.NavigateTo("/asociaciones-reactivos", true);
        else
            await JS.InvokeVoidAsync("alert", "Error al guardar asociaciones.");
    }

    private int PageSize
    {
        get => _pageSize;
        set
        {
            if (_pageSize != value)
            {
                _pageSize = value;
                _currentPage = 1;
                StateHasChanged();
            }
        }
    }

    private int TotalPages => (int)Math.Ceiling(_reactivosAsociados.Count / (double)PageSize);
    private IEnumerable<AsociacionReactivoDto> PaginatedReactivos =>
        _reactivosAsociados.Skip((_currentPage - 1) * PageSize).Take(PageSize);

    private void PrevPagina()
    {
        if (_currentPage > 1)
            _currentPage--;
    }

    private void NextPagina()
    {
        if (_currentPage < TotalPages)
            _currentPage++;
    }

    private void CambiarTamPagina()
    {
        _currentPage = 1;
    }

    private async Task VolverAtrasAsync() => await JS.InvokeVoidAsync("history.back");
}
