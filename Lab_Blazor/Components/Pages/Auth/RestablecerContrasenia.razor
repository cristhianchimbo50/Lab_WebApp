@page "/auth/restablecer"
@using Lab_Contracts.Auth
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject Lab_Blazor.Services.Auth.IRecuperacionApiService RecuperacionApi
@inject IJSRuntime JS

<PageTitle>Restablecer Contraseña</PageTitle>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm border-0" style="max-width: 450px; width: 100%;">
        <div class="card-body p-4">
            <h5 class="text-center mb-3 text-primary fw-semibold">
                <i class="bi bi-shield-lock me-2"></i>Restablecer Contraseña
            </h5>

            @if (!exito)
            {
                <EditForm Model="modelo" OnValidSubmit="RestablecerAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nueva contraseña</label>
                        <InputText @bind-Value="modelo.NuevaContrasenia" class="form-control" type="password" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Confirmar contraseña</label>
                        <InputText @bind-Value="modelo.ConfirmarContrasenia" class="form-control" type="password" required />
                    </div>

                    <button type="submit" class="btn btn-success w-100 shadow-sm" disabled="@procesando">
                        @if (procesando)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Procesando...</span>
                        }
                        else
                        {
                            <i class="bi bi-check2-circle me-1"></i>
                            <span>Guardar nueva contraseña</span>
                        }
                    </button>
                </EditForm>
            }
            else
            {
                <div class="text-center py-3">
                    <i class="bi bi-check-circle-fill text-success fs-1 mb-3"></i>
                    <p>La contraseña se ha restablecido correctamente.</p>
                    <button class="btn btn-outline-success mt-3" @onclick="IrLogin">Iniciar sesión</button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private RestablecerContraseniaDto modelo = new();
    private bool procesando = false;
    private bool exito = false;

    protected override void OnInitialized()
    {
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var token = query["token"];

        if (string.IsNullOrEmpty(token))
        {
            JS.InvokeVoidAsync("alert", "Token de recuperación inválido o ausente.");
            Navigation.NavigateTo("/auth/login");
            return;
        }

        modelo.Token = token;
    }

    private async Task RestablecerAsync()
    {
        procesando = true;
        var resp = await RecuperacionApi.RestablecerContraseniaAsync(modelo);
        procesando = false;

        if (resp.Exito)
        {
            exito = true;
        }
        else
        {
            await JS.InvokeVoidAsync("alert", resp.Mensaje);
        }
    }

    private void IrLogin() => Navigation.NavigateTo("/login");
}
