@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer

@using Lab_Blazor.Components.Layout
@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IAuthApiService AuthApi

<PageTitle>Iniciar Sesión</PageTitle>

@if (!_checkedAuth)
{
    <div class="d-flex align-items-center justify-content-center vh-100 text-primary">
        <div class="spinner-border me-2" role="status"></div>
    </div>
}
else
{
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="row w-100 shadow-lg rounded p-4 bg-white" style="max-width: 850px;">
            <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center bg-light">
                <img src="images/login.png" class="img-fluid rounded" alt="Inicio de sesión" />
            </div>

            <div class="col-md-6 p-3">
                <h3 class="mb-4 fw-bold text-primary text-center">
                    <i class="bi bi-person-circle me-2"></i>Iniciar Sesión
                </h3>

                <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label for="correo" class="form-label">Correo electrónico</label>
                        <InputText id="correo" class="form-control" @bind-Value="loginModel.CorreoUsuario" placeholder="ejemplo@correo.com" />
                        <ValidationMessage For="@(() => loginModel.CorreoUsuario)" />
                    </div>

                    <div class="mb-3 position-relative">
                        <label for="clave" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <InputText id="clave" class="form-control" @bind-Value="loginModel.Clave" type="@passwordInputType" placeholder="Ingrese su contraseña" />
                            <button type="button" class="btn btn-outline-secondary" @onclick="TogglePasswordVisibility" title="Mostrar/Ocultar contraseña">
                                <i class="@passwordIcon"></i>
                            </button>
                        </div>
                        <ValidationMessage For="@(() => loginModel.Clave)" />
                    </div>

                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="alert alert-danger d-flex align-items-start mt-2" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                            <div>
                                <strong>Atención:</strong><br />
                                @error
                            </div>
                        </div>
                    }

                    <button type="submit" class="btn btn-primary w-100 mt-3" disabled="@loginBloqueado">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Ingresar
                    </button>

                    <button type="button" class="btn btn-link w-100 text-secondary mt-2"
                            @onclick="@(() => Navigation.NavigateTo("/auth/olvide-contrasenia"))">
                        <i class="bi bi-question-circle me-1"></i>¿Olvidó su contraseña?
                    </button>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private LoginRequestDto loginModel = new();
    private string? error;
    private bool loginBloqueado = false;
    private bool _checkedAuth = false;
    private string passwordInputType = "password";
    private string passwordIcon = "bi bi-eye-slash";
    private string? redirectUrl;
    private Timer? temporizador;
    private int segundosEspera = 30;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authState = await AuthProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated ?? false)
            {
                Navigation.NavigateTo("/home", true);
                return;
            }

            var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            redirectUrl = query["returnUrl"];
            _checkedAuth = true;
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        error = null;

        try
        {
            var (exito, mensaje, usuario, requiereCambio) = await AuthApi.LoginAsync(loginModel);

            if (!exito || usuario is null)
            {
                error = mensaje;
                return;
            }

            if (AuthProvider is CustomAuthenticationStateProvider customAuth)
            {
                await customAuth.SignInAsync(usuario);

                if (requiereCambio)
                {
                    Navigation.NavigateTo($"/cambiar-contrasenia?correo={usuario.CorreoUsuario}", true);
                    return;
                }

                Navigation.NavigateTo("/home", true);
            }
        }
        catch (Exception ex)
        {
            error = $"Error: {ex.Message}";
        }
    }

    private void TogglePasswordVisibility()
    {
        if (passwordInputType == "password")
        {
            passwordInputType = "text";
            passwordIcon = "bi bi-eye";
        }
        else
        {
            passwordInputType = "password";
            passwordIcon = "bi bi-eye-slash";
        }
    }

    private void IniciarTemporizadorDesbloqueo()
    {
        temporizador?.Dispose();
        temporizador = new Timer(async _ =>
        {
            loginBloqueado = false;
            error = null;
            await InvokeAsync(StateHasChanged);
        }, null, segundosEspera * 1000, Timeout.Infinite);
    }
}
