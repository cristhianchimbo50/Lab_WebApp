@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer

@using Lab_Blazor.Components.Layout
@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider
@inject IAuthApiService AuthApi
@inject IJSRuntime JS


<PageTitle>Iniciar Sesión</PageTitle>

@if (!_checkedAuth)
{
    <div class="login-viewport d-flex align-items-center justify-content-center">
        <div class="soft-loader">
            <div class="spinner-border" role="status"></div>
            <p class="mt-3 mb-0 text-primary fw-semibold">Cargando...</p>
        </div>
    </div>
}
else
{
    <div class="login-viewport">
        <div class="login-shape shape-1"></div>
        <div class="login-shape shape-2"></div>
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-9">
                    <div class="login-card shadow-lg">
                        <div class="login-visual d-none d-lg-flex align-items-center justify-content-center text-white">
                            <div class="text-center px-4 px-xl-5">
                                <div class="icon-blob mb-4">
                                    <i class="bi bi-shield-lock-fill"></i>
                                </div>
                                <h3 class="fw-bold mb-2">Bienvenido de nuevo</h3>
                                <p class="opacity-75 mb-4">Accede al panel para continuar con tus gestiones de laboratorio de forma segura.</p>
                                <div class="login-badges d-flex flex-wrap justify-content-center gap-2">
                                    <span class="badge rounded-pill bg-white text-primary">Autenticación segura</span>
                                    <span class="badge rounded-pill bg-white text-primary">Soporte 24/7</span>
                                    <span class="badge rounded-pill bg-white text-primary">Experiencia moderna</span>
                                </div>
                            </div>
                        </div>

                        <div class="login-form p-4 p-lg-5">
                            <div class="d-flex align-items-center gap-2 mb-1">
                                <div class="mini-dot"></div>
                                <small class="text-muted">Panel de acceso</small>
                            </div>
                            <h3 class="fw-bold text-primary mb-2">Iniciar Sesión</h3>
                            <p class="text-secondary mb-4">Ingresa tus credenciales para continuar.</p>

                            <EditForm Model="@_loginModel" OnValidSubmit="HandleLoginAsync">
                                <DataAnnotationsValidator />

                                <div class="form-floating mb-3">
                                    <InputText id="correo" class="form-control form-control-lg" @bind-Value="_loginModel.CorreoUsuario" placeholder="nombre@correo.com" />
                                    <label for="correo">Correo electrónico</label>
                                    <ValidationMessage For="@(() => _loginModel.CorreoUsuario)" class="text-danger small d-block mt-1" />
                                </div>

                                <div class="form-floating mb-2 position-relative">
                                    <InputText id="clave" class="form-control form-control-lg pe-5" @bind-Value="_loginModel.Clave" type="@_passwordInputType" placeholder="Contraseña" />
                                    <label for="clave">Contraseña</label>
                                    <button type="button" class="btn btn-light password-toggle" @onclick="TogglePasswordVisibility" title="Mostrar/Ocultar contraseña">
                                        <i class="@_passwordIcon"></i>
                                    </button>
                                    <ValidationMessage For="@(() => _loginModel.Clave)" class="text-danger small d-block mt-1" />
                                </div>


                                @if (!string.IsNullOrEmpty(_error))
                                {
                                    <div class="alert alert-danger soft-alert d-flex align-items-start mt-3" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                                        <div>
                                            <strong>Atención:</strong><br />
                                            @_error
                                        </div>
                                    </div>
                                }

                                <button type="submit" class="btn btn-primary btn-lg w-100 shadow-lift mt-3" disabled="@_loginBloqueado">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Ingresar
                                </button>

                                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mt-3">
                                    <div class="d-flex align-items-center text-muted small gap-2">
                                        <i class="bi bi-shield-check text-primary"></i>
                                        <span>Tu información está cifrada</span>
                                    </div>
                                    <button type="button" class="btn btn-link text-secondary p-0" @onclick="@(() => Navigation.NavigateTo("/auth/olvide-contrasenia"))">
                                        <i class="bi bi-question-circle me-1"></i>¿Olvidó su contraseña?
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private LoginRequestDto _loginModel = new();
    private string? _error;
    private bool _loginBloqueado = false;
    private bool _checkedAuth = false;
    private string _passwordInputType = "password";
    private string _passwordIcon = "bi bi-eye-slash";
    private string? _redirectUrl;
    private Timer? _temporizador;
    private int _segundosEspera = 30;
    private bool _labCoverEyes = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _checkedAuth = true;
            StateHasChanged();

            if (AuthProvider is CustomAuthenticationStateProvider custom)
                await custom.CerrarSesionAsync();

            var authState = await AuthProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated ?? false)
            {
                Navigation.NavigateTo("/home", true);
                return;
            }

            var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            _redirectUrl = query["returnUrl"];
        }
    }

    private async Task HandleLoginAsync()
    {
        _error = null;
        _loginBloqueado = true;

        try
        {
            var (exito, mensaje, usuario, requiereCambio) = await AuthApi.IniciarSesionAsync(_loginModel);

            if (!exito || usuario is null)
            {
                _error = mensaje;
                _loginBloqueado = false;
                return;
            }

            if (AuthProvider is CustomAuthenticationStateProvider customAuth)
            {
                await customAuth.IniciarSesionAsync(usuario);

                if (requiereCambio)
                {
                    Navigation.NavigateTo($"/cambiar-contrasenia?correo={usuario.CorreoUsuario}", true);
                    return;
                }

                var redirectAfterLogin = await JS.InvokeAsync<string>("localStorage.getItem", "redirectAfterLogin");
                if (!string.IsNullOrWhiteSpace(redirectAfterLogin))
                {
                    await JS.InvokeVoidAsync("localStorage.removeItem", "redirectAfterLogin");
                    Navigation.NavigateTo("/" + redirectAfterLogin, true);
                    return;
                }

                if (!string.IsNullOrWhiteSpace(_redirectUrl))
                    Navigation.NavigateTo(_redirectUrl!, true);
                else
                    Navigation.NavigateTo("/home", true);
            }
        }
        catch (Exception ex)
        {
            _error = $"Error: {ex.Message}";
        }
        finally
        {
            _loginBloqueado = false;
        }
    }

    private void TogglePasswordVisibility()
    {
        if (_passwordInputType == "password")
        {
            _passwordInputType = "text";
            _passwordIcon = "bi bi-eye";
            _labCoverEyes = true;
        }
        else
        {
            _passwordInputType = "password";
            _passwordIcon = "bi bi-eye-slash";
            _labCoverEyes = false;
        }
    }

    private void IniciarTemporizadorDesbloqueo()
    {
        _temporizador?.Dispose();
        _temporizador = new Timer(async _ =>
        {
            _loginBloqueado = false;
            _error = null;
            await InvokeAsync(StateHasChanged);
        }, null, _segundosEspera * 1000, Timeout.Infinite);
    }
}
