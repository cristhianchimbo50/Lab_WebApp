@page "/auth/olvide-contrasenia"
@using Lab_Contracts.Auth
@rendermode InteractiveServer
@inject Lab_Blazor.Services.Auth.IRecuperacionApiService RecuperacionApi
@inject IJSRuntime JS
@inject NavigationManager Navigation

<PageTitle>Olvidé mi Contraseña</PageTitle>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm border-0" style="max-width: 450px; width: 100%;">
        <div class="card-body p-4">
            <h5 class="text-center mb-3 text-primary fw-semibold">
                <i class="bi bi-lock me-2"></i>Recuperar Contraseña
            </h5>

            @if (!_enviado)
            {
                <EditForm Model="@_modelo" OnValidSubmit="EnviarSolicitudAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Correo electrónico</label>
                        <InputText @bind-Value="_modelo.Correo" class="form-control" type="email" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 shadow-sm" disabled="@_procesando">
                        @if (_procesando)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Enviando...</span>
                        }
                        else
                        {
                            <i class="bi bi-envelope me-1"></i>
                            <span>Enviar enlace de recuperación</span>
                        }
                    </button>
                </EditForm>
            }
            else
            {
                <div class="text-center py-3">
                    <i class="bi bi-check-circle-fill text-success fs-1 mb-3"></i>
                    <p>Se ha enviado un enlace de recuperación a tu correo electrónico.</p>
                    <button class="btn btn-outline-primary mt-3" @onclick="VolverInicio">Volver al inicio</button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private OlvideContraseniaDto _modelo = new();
    private bool _enviado = false;
    private bool _procesando = false;

    private async Task EnviarSolicitudAsync()
    {
        _procesando = true;
        var resp = await RecuperacionApi.SolicitarRecuperacionContraseniaAsync(_modelo);
        _procesando = false;

        if (resp.Exito)
        {
            _enviado = true;
        }
        else
        {
            await JS.InvokeVoidAsync("alert", resp.Mensaje);
        }
    }

    private void VolverInicio() => Navigation.NavigateTo("/auth/login");
}
