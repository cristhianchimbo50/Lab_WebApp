@page "/cambiar-contrasenia"
@layout EmptyLayout
@rendermode InteractiveServer

@using Lab_Blazor.Components.Layout
@using Lab_Blazor.Services.Auth
@using Lab_Contracts.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject IAuthApiService AuthService
@inject NavigationManager Navegacion
@inject IJSRuntime JsRuntime
@inject AuthenticationStateProvider ProveedorAutenticacion

<PageTitle>Cambiar Contraseña</PageTitle>

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-3">
            <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
            <h4 class="mt-2 text-primary fw-bold">Cambio de Contraseña</h4>
            <p class="text-muted mb-0">Ingrese su contraseña actual y la nueva contraseña</p>
        </div>

        <EditForm Model="@Cambio" OnValidSubmit="GuardarNuevaContrasenia">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="mb-3">
                <label class="form-label">Correo Electrónico</label>
                <InputText class="form-control" @bind-Value="Cambio.CorreoUsuario" readonly />
            </div>

            <div class="mb-3 position-relative">
                <label class="form-label">Contraseña Actual</label>
                <div class="input-group">
                    <InputText class="form-control" @bind-Value="Cambio.ContraseniaActual" type="@TipoEntradaContraseniaActual" placeholder="Ingrese su contraseña actual" />
                    <button type="button" class="btn btn-outline-secondary" @onclick="AlternarContraseniaActual">
                        <i class="@IconoContraseniaActual"></i>
                    </button>
                </div>
                <ValidationMessage For="@(() => Cambio.ContraseniaActual)" />
            </div>

            <div class="mb-3 position-relative">
                <label class="form-label">Nueva Contraseña</label>
                <div class="input-group">
                    <InputText class="form-control" @bind-Value="Cambio.NuevaContrasenia" type="@TipoEntradaContraseniaNueva" placeholder="Ingrese la nueva contraseña" />
                    <button type="button" class="btn btn-outline-secondary" @onclick="AlternarContraseniaNueva">
                        <i class="@IconoContraseniaNueva"></i>
                    </button>
                </div>
                <ValidationMessage For="@(() => Cambio.NuevaContrasenia)" />
            </div>

            @if (!string.IsNullOrEmpty(Mensaje))
            {
                <div class="alert alert-@(Exito ? "success" : "danger") mt-2" role="alert">
                    <i class="bi @(Exito ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill") me-2"></i>@Mensaje
                </div>
            }

            <button type="submit" class="btn btn-primary w-100 mt-3">
                <i class="bi bi-save me-1"></i>Guardar Nueva Contraseña
            </button>

            <button type="button" class="btn btn-link text-secondary w-100 mt-2" @onclick="@(() => Navegacion.NavigateTo("/login", true))">
                <i class="bi bi-arrow-left-circle me-1"></i>Volver al inicio de sesión
            </button>
        </EditForm>
    </div>
</div>

@code {
    private CambiarContraseniaDto Cambio = new();
    private string Mensaje = string.Empty;
    private bool Exito;
    private string TipoEntradaContraseniaActual = "password";
    private string IconoContraseniaActual = "bi bi-eye-slash";
    private string TipoEntradaContraseniaNueva = "password";
    private string IconoContraseniaNueva = "bi bi-eye-slash";

    protected override async Task OnInitializedAsync()
    {
        var UriActual = new Uri(Navegacion.Uri);
        var CorreoQuery = System.Web.HttpUtility.ParseQueryString(UriActual.Query).Get("correo");
        if (!string.IsNullOrWhiteSpace(CorreoQuery))
        {
            Cambio.CorreoUsuario = CorreoQuery;
        }
        else
        {
            var EstadoAutenticacion = await ProveedorAutenticacion.GetAuthenticationStateAsync();
            var Usuario = EstadoAutenticacion.User;
            if (Usuario.Identity?.IsAuthenticated ?? false)
            {
                Cambio.CorreoUsuario = Usuario.FindFirst("sub")?.Value ?? Usuario.Identity?.Name ?? string.Empty;
            }
        }
    }

    private async Task GuardarNuevaContrasenia()
    {
        Mensaje = string.Empty;
        Exito = false;

        if (string.IsNullOrWhiteSpace(Cambio.CorreoUsuario))
        {
            await JsRuntime.InvokeVoidAsync("alert", "No se pudo identificar el usuario. Intente desde el enlace enviado por correo o inicie sesión.");
            return;
        }

        var (Resultado, MensajeRespuesta) = await AuthService.CambiarContraseniaAsync(Cambio);
        if (!Resultado && MensajeRespuesta.StartsWith("{"))
        {
            try
            {
                using var Documento = System.Text.Json.JsonDocument.Parse(MensajeRespuesta);
                if (Documento.RootElement.TryGetProperty("mensaje", out var MensajeJson))
                    MensajeRespuesta = MensajeJson.GetString() ?? MensajeRespuesta;
            }
            catch { }
        }

        Mensaje = MensajeRespuesta;
        Exito = Resultado;

        if (Resultado)
        {
            await JsRuntime.InvokeVoidAsync("alert", "Contraseña actualizada correctamente. Inicie sesión nuevamente.");
            Navegacion.NavigateTo("/login", true);
        }
    }

    private void AlternarContraseniaActual()
    {
        if (TipoEntradaContraseniaActual == "password")
        {
            TipoEntradaContraseniaActual = "text";
            IconoContraseniaActual = "bi bi-eye";
        }
        else
        {
            TipoEntradaContraseniaActual = "password";
            IconoContraseniaActual = "bi bi-eye-slash";
        }
    }

    private void AlternarContraseniaNueva()
    {
        if (TipoEntradaContraseniaNueva == "password")
        {
            TipoEntradaContraseniaNueva = "text";
            IconoContraseniaNueva = "bi bi-eye";
        }
        else
        {
            TipoEntradaContraseniaNueva = "password";
            IconoContraseniaNueva = "bi bi-eye-slash";
        }
    }
}
